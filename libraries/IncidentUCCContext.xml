<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- internal cache beans, not available for remoting or serviceFactory -->
    <bean id="incidentCategoryCollectionCacheImpl" class="minestar.mine.uifacade.incident.collection.IncidentCategoryCollectionCache"
          lazy-init="true" parent="cacheParent">
        <property name="incidentManagementService" ref="incidentManagementServiceImpl"/>
    </bean>
    <bean id="incidentCauseCollectionCacheImpl" class="minestar.mine.uifacade.incident.collection.IncidentCauseCollectionCache"
          lazy-init="true" parent="cacheParent">
        <property name="incidentManagementService" ref="incidentManagementServiceImpl"/>
    </bean>
    <bean id="incidentEventCollectionCacheImpl" class="minestar.mine.uifacade.incident.collection.IncidentEventCollectionCache"
          lazy-init="true" parent="cacheParent">
        <property name="incidentManagementService" ref="incidentManagementServiceImpl"/>
    </bean>
    <bean id="incidentReportCollectionCacheImpl" class="minestar.mine.uifacade.incident.collection.IncidentReportCollectionCache"
          lazy-init="true" parent="cacheParent">
        <property name="incidentManagementService" ref="incidentManagementServiceImpl"/>
    </bean>


    <!-- must have this -->
    <bean id="incidentUCCImpl" class="minestar.mine.uifacade.incident.impl.IncidentUCCImpl"
          lazy-init="true">
        <property name="categoryCache" ref="incidentCategoryCollectionCacheImpl"/>
        <property name="causeCache" ref="incidentCauseCollectionCacheImpl"/>
        <property name="eventCache" ref="incidentEventCollectionCacheImpl"/>
        <property name="reportCache" ref="incidentReportCollectionCacheImpl"/>
        <property name="incidentManagementService" ref="incidentManagementServiceImpl"/>
        <property name="machineUCC" ref="machineUCCImpl"/>
        <property name="personUCC" ref="personUCCImpl"/>
        <property name="userService" ref="userServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerIncidentUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Travel Progress Monitor UCC"/>
        <constructor-arg value="minestar.mine.uifacade.incident.IncidentUCCFacade"/>
        <constructor-arg ref="incidentUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="incidentUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="incidentUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="incidentUCC"/>
        <property name="service" ref="incidentUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.incident.IncidentUCCFacade"/>
    </bean>

</beans>
