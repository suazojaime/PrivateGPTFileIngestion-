    <changeSet id="1bbf3d8b-0cc2-4f0a-9646-77ff1c2380a5" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for PROD_PLAN_TASK_JOB_OID of table PROD_PLAN_TASK as index does not exist." onFail="MARK_RAN">
            <indexExists indexName="PROD_PLAN_TASK_JOB_OID" tableName="PROD_PLAN_TASK"/>
        </preConditions>
        <comment>MO-7479: DropIndex PROD_PLAN_TASK_JOB_OID from PROD_PLAN_TASK (JOB_OID)</comment>
        <dropIndex indexName="PROD_PLAN_TASK_JOB_OID" tableName="PROD_PLAN_TASK"/>
        <rollback>
            <createIndex unique="false" tableName="PROD_PLAN_TASK" indexName="PROD_PLAN_TASK_JOB_OID">
                <column name="JOB_OID"/>
            </createIndex>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    
