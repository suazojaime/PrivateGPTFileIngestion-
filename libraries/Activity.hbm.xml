<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.production.domain.Activity"
           table="ACTIVITY">

        <meta attribute="alias" inherit="false">MachineSoftState</meta>

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=ACTIVITY_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=ACTIVITY_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="description">Information about activities.</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="ACTIVITY_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="description">An ID that uniquely identifies the Activity</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">A name/description that describes the Activity</meta>
        </property>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the activity was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="abbreviation" type="string" column="ABBREVIATION" length="20">
            <meta attribute="description">An abbreviation (used on onboard buttons)</meta>
        </property>
        
        <property name="working" type="boolean" column="ISWORKING" not-null="true">
            <meta attribute="description">True if activity is considered as working for fuel consumption purposes</meta>
        </property>

        <many-to-one name="parentGroup" class="minestar.production.domain.ActivityGroupReference" column="PARENT_GROUP_OID">
            <meta attribute="description">A reference to the parent group</meta>
        </many-to-one>

        <many-to-one name="destination" class="minestar.mine.domain.minemodel.LocationReference" column="DESTINATION">
            <meta attribute="description">An OID of the location that the Activity is associated with</meta>
        </many-to-one>

        <set name="associations" table="ACTIVITY_ASSOCIATION" fetch="subselect">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="index-alias">machineCategory</meta>
            <meta attribute="alias" inherit="false">association</meta>
            <meta attribute="description">A value to associate a particular Activity with a type of machine.</meta>
            <meta attribute="view-reference">minestar.pitlink.domain.machine.MachineCategoryImpl</meta>

            <cache usage="read-write" region="model"/>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.pitlink.domain.machine.MachineCategoryReference" column="MACHINE_CATEGORY_OID"/>
        </set>
    </class>

    <!-- A lightweight reference to a Material -->
    <class name="minestar.production.domain.ActivityReference" table="ACTIVITY" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">ACTIVITY_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a activity.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="ACTIVITY_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="id" type="long" column="ID" not-null="true"/>
    </class>

</hibernate-mapping>
