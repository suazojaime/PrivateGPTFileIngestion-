<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- internal cache beans, not available for remoting or serviceFactory -->


    <!-- must have this -->
    <bean id="settingsUCCImpl" class="minestar.platform.uifacade.settings.impl.SettingsUCCImpl"
          lazy-init="true">
        <property name="settingsService" ref="settingsServiceImpl"/>
        <property name="crsCodeAware" ref="crsCodeResolver"/>
        <property name="wktTools" ref="wktTools"/>
        <property name="userContext" ref="userContextImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerSettingsUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Settings UCC"/>
        <constructor-arg value="minestar.platform.uifacade.settings.SettingsUCCFacade"/>
        <constructor-arg ref="settingsUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="settingsUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="settingsUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="settingsUCC"/>
        <property name="service" ref="settingsUCCProxy"/>
        <property name="serviceInterface" value="minestar.platform.uifacade.settings.SettingsUCCFacade"/>
    </bean>

</beans>
