<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.pitlink.domain.machine.UndergroundChuteImpl"
           proxy="minestar.pitlink.domain.machine.UndergroundChute"
           table="UG_CHUTE">

        <meta attribute="alias" inherit="false">UNDERGROUNDCHUTE</meta>
        <meta attribute="description">The underground-specific details of a chute in the haulage level of a block-cave
            mine.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model" />

        <id name="OID"
            type="java.lang.Long"
            column="CHUTE_OID">
            <meta attribute="description">
                A reference to the chute (MSMODEL.MACHINE) that the underground-specific details apply to.
            </meta>

            <generator class="foreign">
                <param name="property">chute</param>
            </generator>
        </id>

        <one-to-one name="chute"
                    class="minestar.pitlink.domain.machine.ChuteImpl"
                    constrained="true"
                    lazy="false" />

        <property name="assignmentPriority"
                  type="java.lang.Integer"
                  column="ASSIGN_PRIORITY">
            <meta attribute="description">
                The priority order of the chute when assigning trucks to take from it.
            </meta>
        </property>

        <property name="assignmentCapacityLimit"
                  column="ASSIGN_CAPACITY_LIMIT">
            <meta attribute="description">
                The minimum amount of ore that the chute must hold before a truck can be assigned to it.
            </meta>
            <meta attribute="unitType">mass</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <many-to-one name="hazardStatus"
                     class="minestar.mine.domain.minemodel.underground.operatingstatus.ChuteHazardStatusImpl"
                     column="HAZARD_STATUS"
                     lazy="false">
            <meta attribute="description">
                A reference to the hazard level (MSMODEL.CHUTE_HAZARD_STATUS) that describes the current operating
                conditions of this chute.
            </meta>
        </many-to-one>
    </class>

    <!-- A lightweight reference to an underground chute -->
    <class name="minestar.pitlink.domain.machine.UndergroundChuteReference"
           table="UG_CHUTE"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">UG_CHUTE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to an underground chute.</meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="CHUTE_OID" access="field"/>
    </class>
</hibernate-mapping>
