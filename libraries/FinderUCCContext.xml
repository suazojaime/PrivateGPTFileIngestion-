<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- internal cache beans, not available for remoting or serviceFactory -->


    <!-- must have this -->
    <bean id="finderUCCImpl" class="minestar.platform.uifacade.search.impl.FinderUCCImpl"
          lazy-init="true">
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerFinderUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Finder UCC"/>
        <constructor-arg value="minestar.platform.uifacade.search.FinderUCCFacade"/>
        <constructor-arg ref="finderUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="finderUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="finderUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="finderUCC"/>
        <property name="service" ref="finderUCCProxy"/>
        <property name="serviceInterface" value="minestar.platform.uifacade.search.FinderUCCFacade"/>
    </bean>

</beans>
