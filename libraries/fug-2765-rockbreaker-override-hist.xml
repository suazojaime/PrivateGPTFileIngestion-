        <preConditions onFailMessage="Ignored CreateIndex for IDX_CHUTE_TIMESTAMP to table HISTORICAL_CHUTE_OVERRIDE as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="HISTORICAL_CHUTE_OVERRIDE"/>
            <not>
                <indexExists indexName="IDX_CHUTE_TIMESTAMP" tableName="HISTORICAL_CHUTE_OVERRIDE"/>
            </not>
        </preConditions>
        <comment>FUG-2764: CreateIndex IDX_CHUTE_TIMESTAMP on HISTORICAL_CHUTE_OVERRIDE (CHUTE,TIMESTAMP_UTC)</comment>
        <createIndex unique="false" tableName="HISTORICAL_CHUTE_OVERRIDE" indexName="IDX_CHUTE_TIMESTAMP">
            <column name="CHUTE"/>
            <column name="TIMESTAMP_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
</databaseChangeLog>
