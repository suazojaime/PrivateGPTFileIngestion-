<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="historical">

    <class
            name="minestar.pitlink.domain.OfficeMessageImpl"
            table="OFFICEMESSAGE">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="description">
            Messages sent from the office to field equipment.
        </meta>

        <id name="OID" type="long" column="OFFICEMESSAGE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="addHoc" type="boolean" column="ADDHOC" not-null="true">
            <meta attribute="description">True if this is an addhoc message</meta>
        </property>

        <property name="id" type="long" column="ID">
            <meta attribute="description">The message Id.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="msgText" type="string" column="MSGTEXT" length="254">
            <meta attribute="description">The message text.</meta>
        </property>

        <property name="msgTitle" type="string" column="MSGTITLE" length="254">
            <meta attribute="description">The message window title.</meta>
        </property>

        <property name="msgType" type="minestar.pitlink.domain.MessageType$UserType" column="MSGTYPE" not-null="true">
            <meta attribute="description">The message type: 1=Information, 2=Warning, 3=Question, 4=Stop, 5=Error</meta>
            <meta attribute="choices" inherit="false">choice:officeMsgType</meta>
        </property>

        <property name="officeAck" type="boolean" column="OFFICEACK" not-null="true">
            <meta attribute="description">True if the office must acknowledge the message.</meta>
        </property>

        <property name="opResponse" type="string" column="OPRESPONSE" length="254">
            <meta attribute="description">The operator response to the message.</meta>
        </property>

        <property name="respType" type="minestar.pitlink.domain.ResponseType$UserType" column="RESPTYPE">
            <meta attribute="description">The valid message response types: 0=None, 1=OK, 2=OK or Cancel, 3=Yes or No.</meta>
            <meta attribute="choices" inherit="false">choice:officeMsgResponse</meta>
        </property>

        <many-to-one name="stdMsgRef" class="minestar.pitlink.domain.StandardMessageReference" column="STDMSG" not-found="ignore">
            <meta attribute="ignoreManyToOneLookupExpr">true</meta>
            <meta attribute="description">The standard message for this office message.</meta>
        </many-to-one>

        <many-to-one name="toOperatorRef" class="minestar.machinetracking.domain.PersonReference" column="TOOPERATOR" not-found="ignore">
            <meta attribute="alias">toOperator</meta>
            <meta attribute="description">The Person the message was sent to.</meta>
        </many-to-one>

        <property name="toOperatorName" type="string" column="TOOPNAME" length="254">
            <meta attribute="description">The name of the Person the message was sent to.</meta>
        </property>

        <property name="toTime" type="TimestampType" column="TOTIME_UTC">
            <meta attribute="utc-description">The utc time the message was sent.</meta>
            <meta attribute="description">The time the message was sent.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <many-to-one name="toMachineRef" class="minestar.pitlink.domain.machine.MachineReference" column="TOMAC" not-found="ignore">
            <meta attribute="alias">toMac</meta>
            <meta attribute="description">The machine the message was sent to.</meta>
        </many-to-one>

        <property name="toMachineName" type="string" column="TOMACNAME" length="254">
            <meta attribute="description">The name of the machine the message was sent to.</meta>
        </property>

        <property name="fromField" type="boolean" column="FROM_FIELD" not-null="true">
            <meta attribute="description">True if the office message was initiated from a machine in the field.</meta>
        </property>

        <property name="sourceSystem" type="string" column="SOURCE_SYSTEM" length="254">
            <meta attribute="description">Name of the source system.</meta>
            <meta attribute="defaultValue">Minestar</meta>
        </property>

    </class>

</hibernate-mapping>
