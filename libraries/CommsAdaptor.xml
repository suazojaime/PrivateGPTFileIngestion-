<?xml version="1.0" encoding="us-ascii" standalone="no"?>
<!DOCTYPE circuit SYSTEM "circuit.dtd">

<!-- DO NOT MAKE CHANGES TO THIS SECTION -->
<circuit>
    <sources>
        <!-- used to source mayday events from the bus -->
        <source name="administrationEvents" class="minestar.platform.service.event.LeanEventNode">
            <var name="filter">administrationFieldEvents</var>
        </source>
        <source name="notificationEvents" class="minestar.platform.service.event.LeanEventNode">
            <var name="filter">notificationFieldEvents</var>
        </source>
        <source name="healthEvents" class="minestar.platform.service.event.LeanEventNode">
            <var name="filter">healthFieldEvents</var>
        </source>
    </sources>

    <!-- DO NOT MAKE CHANGES TO THIS SECTION -->
    <sinks>
        <sink name="maydayNode" class="com.mincom.integ.field.nodes.MaydayNode">
            <var name="alarmType">Mayday</var>
            <var name="priority">10</var>
            <var name="severity">10</var>
        </sink>
        <!-- USER INTRUCTIONS -->

        <sink name="vimsEventNode" class="com.mincom.integ.field.nodes.VimsEventNode">
            <var name="alarmType">VIMSEvent</var>
            <EventConfigs>




                <EventConfig>
                    <!-- If the FAMILY NAME is specified as ALL then the events would be triggered for all FAMILY type
                    IF EVENTS FROM VIMS ARE TO BE INCLUDED, SPECIFY the FAMILY NAME IN THE TAG BELOW-->
                    <FamilyName>ALL</FamilyName>
                    <!--Alarms will be triggered for events with severity equal to the number entered in the "<level></level> tag"-->
                    <level>3</level>
                    <!--If the user wants the alarms to be triggered for specific events only, then those event numbers have to be specified in the "includeEventNumbers" tag.
                    IF SPECIFIC EVENT NUMBERS ARE TO BE INCLUDED, ADD THE EVENT NUMBERS IN THE [] BRACKETS BELOW,
                    -->
                    <includeEventNumbers/>
                    <!--If the user wants the alarms not to be triggered for specific events, then those event numbers have to be specified in the "excludeEventNumbers" tag.
                    IF SPECIFIC EVENT NUMBERS ARE TO BE EXCLUDED, ADD THE EVENT NUMBERS IN THE []  BRACKETS BELOW,
                    -->
                    <excludeEventNumbers/>
                    <!--NOTE:- It is recommended to provide value in only one config i.e. either  <includeEventNumbers/> or <excludeEventNumbers/>. If value is
                    provided in both config then value in <excludeEventNumbers/> will take precedence -->
                </EventConfig>
                <!-- SAMPLE CONFIGURATION FOR VIMS EVENTS STARTS-->
                <!--EventConfig>
                    <FamilyName>VIMS</FamilyName>
                    <level>2</level>
                    <includeEventNumbers>[1-10],21,28,[41-1200]</includeEventNumbers>
                    <excludeEventNumbers>[1300-1500],195</excludeEventNumbers>
                </EventConfig-->
                <!-- SAMPLE CONFIGURATION FOR VIMS EVENTS ENDS-->
                <!-- SAMPLE CONFIGURATION FOR J1939Event EVENTS STARTS-->
                <!--EventConfig>
                    <FamilyName>J1939Event</FamilyName>
                    <level>2</level>
                    <includeEventNumbers>[1-10],21,28,[41-1200]</includeEventNumbers>
                    <excludeEventNumbers>[1300-1500],195</excludeEventNumbers>
                </EventConfig-->
                <!-- SAMPLE CONFIGURATION FOR J1939Event EVENTS ENDS-->
            </EventConfigs>
            <var name="priority">10</var>
            <var name="severity">10</var>
        </sink>
    </sinks>

    <connections>
        <connect source="notificationEvents" sink="maydayNode"/>
        <connect source="healthEvents" sink="vimsEventNode"/>

    </connections>
</circuit>


