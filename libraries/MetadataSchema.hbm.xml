<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.metadata.MetadataSchemaImpl"
           proxy="minestar.mine.domain.minemodel.underground.metadata.MetadataSchema"
           table="METADATA_SCHEMA"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">METADATA_SCHEMA</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            The schema which is used to validate and define subsequent metadata entries
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <!-- Create foreign keys with 'on delete cascade' at the database level. -->
        <meta attribute="foreign-key">
            on-delete=CASCADE
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name"
                  type="java.lang.String"
                  column="SCHEMA_NAME"
                  length="254"
                  not-null="true">
            <meta attribute="description">The unique, user-entered string identifier for this schema.</meta>
        </property>

        <property name="schemaData"
                  type="java.lang.String"
                  column="SCHEMA_DATA"
                  length="4000"
                  not-null="true">
            <meta attribute="description">The JSON schema used to define data.</meta>
        </property>

        <property name="isTemplate"
                  type="java.lang.Boolean"
                  column="IS_TEMPLATE">
            <meta attribute="defaultValue">false</meta>
            <meta attribute="description">
                Whether this schema is a template.
                (This flag is '1' if it is a template and '0' if not.)
            </meta>
        </property>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this area is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="modelUpdateVersion"
                  type="java.lang.Long"
                  column="MODEL_UPDATE_VERSION">
            <meta attribute="description">The is a copy of the system wide version number.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="lastModifiedDate"
                  type="TimestampType"
                  column="LAST_MODIFIED_DATE_UTC">
            <meta attribute="alias" inherit="false">LAST_MODIFIED_TIME</meta>
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when this area map was last modified by a user.</meta>
            <meta attribute="utc-description">
                The UTC timestamp of when this area map was last modified by a user.
            </meta>
            <meta attribute="view-localtime">true</meta>
        </property>

    </class>

    <!-- A lightweight reference to a schema -->
    <class name="minestar.mine.domain.minemodel.underground.metadata.MetadataSchemaReference"
           table="METADATA_SCHEMA"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">MetadataSchemaReference</meta>
        <meta attribute="description">A minimal reference to a schema.</meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="OID" />
        <property name="name" type="string" column="SCHEMA_NAME" length="254" not-null="true"/>
    </class>


</hibernate-mapping>
