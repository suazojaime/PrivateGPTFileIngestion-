            <addColumn tableName="MACHINE_LOST_RECORD">
                <column name="LOST_WARNING" type="VARCHAR(255)" remarks="The warning information that was sent by the Command for Underground system when the machine became lost."/>
            </addColumn>
        </rollback>
    </changeSet>
</databaseChangeLog>
