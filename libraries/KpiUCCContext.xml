<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- internal cache beans, not available for remoting or serviceFactory -->


    <!-- must have this -->
    <bean id="kpiUCCImpl" class="minestar.production.uifacade.kpi.impl.KpiUCCImpl" lazy-init="true">
        <property name="machineUCCFacade" ref="machineUCCImpl"/>
        <property name="materialUCCFacade" ref="materialUCCImpl"/>
		<property name="monitorUCCFacade" ref="monitorUCCImpl"/>
        <property name="materialManagementService" ref="materialManagementServiceImpl"/>
        <property name="productionKpiSummaryService" ref="productionKpiSummaryServiceImpl"/>
        <property name="userContext" ref="userContextImpl"/>
        <property name="kpiAnnotationService" ref="kpiAnnotationServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerKpiUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="KPI UCC"/>
        <constructor-arg value="minestar.production.uifacade.kpi.KpiUCCFacade"/>
        <constructor-arg ref="kpiUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="kpiUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="kpiUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="kpiUCC"/>
        <property name="service" ref="kpiUCCProxy"/>
        <property name="serviceInterface" value="minestar.production.uifacade.kpi.KpiUCCFacade"/>
    </bean>

</beans>
