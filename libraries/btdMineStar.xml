<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="minetrackingServicesContainerImpl" class="minestar.production.service.blend.btd.adapter.minetracking.MinetrackingServicesContainer">
        <property name="notification" ref="notification"/>
        <property name="shiftService" ref="shiftServiceImpl"/>
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
        <property name="materialManagementService" ref="materialManagementServiceImpl"/>
        <property name="timelineService" ref="timelineServiceImpl"/>
        <property name="cycleService" ref="cycleServiceImpl"/>
    </bean>

    <bean id="registerBTDPayloadService" parent="registrationInstance" lazy-init="false" >
        <constructor-arg value="Payload UCC"/>
        <constructor-arg value="minestar.production.uifacade.btd.PayloadUCCFacade"/>
        <constructor-arg ref="payloadServiceImpl"/>
    </bean>

    <bean id="payloadServiceImpl" class="minestar.production.uifacade.payload.impl.PayloadUCCFacadeImpl">
        <property name="minetrackingServicesContainer" ref="minetrackingServicesContainerImpl"/>
    </bean>

    <bean id="payloadUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="payloadServiceImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="payloadUCC"/>
        <property name="service" ref="payloadUCCProxy"/>
        <property name="serviceInterface" value="minestar.production.uifacade.btd.PayloadUCCFacade"/>
    </bean>

</beans>
