<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="waypointUCCImpl" class="minestar.mine.uifacade.waypoint.impl.WaypointUCCImpl"
          lazy-init="true">
        <property name="locationUCC" ref="locationUCCImpl"/>
        <property name="mineLayoutService" ref="mineLayoutServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerWaypointUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Waypoint UCC"/>
        <constructor-arg value="minestar.mine.uifacade.waypoint.WaypointUCCFacade"/>
        <constructor-arg ref="waypointUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="waypointUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="waypointUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="waypointUCC"/>
        <property name="service" ref="waypointUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.waypoint.WaypointUCCFacade"/>
    </bean>

</beans>
