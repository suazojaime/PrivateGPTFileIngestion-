<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="minestar.health.domain.metadata" default-access="field" schema="historical">

    <class name="HistogramConfig" table="HISTOGRAM_CONFIG">
        <meta attribute="noDatabaseMetadata" inherit="false">true</meta>
        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>
        <meta attribute="index">
            name=HISTOGRAM_CONFIG_UNIQ
            unique=true
            columns=SERIALNUMBER, FAMILY, CATEGORY, ID, SUBID
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="viewproperty-description" inherit="false">
            type=string
            expression=lookupResource.histogramconfig.description.query
        </meta>
        
        <meta attribute="foreign-key">
            on-delete=CASCADE
        </meta>

        <id name="oid" >
            <generator class="assigned"/>
        </id>

        <property name="machine" type="long" column="MACHINE" not-null="true">
            <meta attribute="manyToOne" inherit="false">minestar.pitlink.domain.machine.MachineImpl</meta>
        </property>

        <property name="model" type="long" column="MODEL" not-null="true">
            <meta attribute="manyToOne" inherit="false">minestar.pitlink.domain.machine.MachineClassImpl</meta>
        </property>

        <property name="serialNumber" type="string" length="32" column="SERIALNUMBER" not-null="true"/>
        <property name="modelNumber" type="string" length="32" column="MODELNUMBER" not-null="true"/>
        <property name="family" type="string" column="FAMILY" length="32" not-null="true"/>
        <property name="category" column="CATEGORY" length="16" not-null="true"/>
        <property name="id" type="long" column="ID" not-null="true"/>
        <property name="subId" type="short" column="SUBID" not-null="true"/>
        <property name="dataType" type="string" column="TYPE" not-null="true">
            <meta attribute="manyToOne" inherit="false">minestar.health.domain.metadata.HistogramDef</meta>
            <meta attribute="propertyRef" inherit="false">oid</meta>
        </property>
    </class>

</hibernate-mapping>

