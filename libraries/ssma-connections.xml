<?xml version="1.0" encoding="utf-8"?>

<servers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="..\Schemas\O2SSConsoleScriptServersSchema.xsd">
  
  <!--
	MODEL DB CONNECTION SETTINGS
  -->
  <oracle name="source_modeldb">
    <standard-mode>
      <connection-provider value ="OleDB Provider"/>
      <host value="$OracleHostName$" />
      <port value="$OraclePort$" />
      <instance value="$OracleInstance$" />
      <user-id value="$OracleModelUserName$" />
      <password value="$OracleModelUserName$"/>
    </standard-mode>
  </oracle>
  
  <sql-server name="target_modeldb">
    <sql-server-authentication>
      <server value="$SQLServerName$"/>
      <database value="$SQLServerModelUserName$"/>
      <user-id value="$SQLServerModelUserName$"/>
      <password value="$SQLServerModelUserName$"/>
      <encrypt value="true"/>
      <trust-server-certificate value="true"/>
    </sql-server-authentication>
  </sql-server>
  
