<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:widget="http://www.minestar.au.cat.com/namespace/widget"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.minestar.au.cat.com/namespace/widget http://www.minestar.au.cat.com/namespace/widget.xsd
       ">

    <!-- **** Common **** -->

    <!-- Group: Cycle Activity Times -->
    <widget:guiGroup id="averageCycles" groupMode="box" title="Cycle Activity Times" orientation="horizontal">
        <widget:componentRef ref="lhdActivityBarChart"/>
        <widget:componentRef ref="truckActivityBarChart"/>
    </widget:guiGroup>

    <!-- **** By Class **** -->

    <!-- Tab: Meters by Class -->
    <widget:guiGroup id="classMeters" title="Meters (By Class)" orientation="horizontal">
        <widget:componentRef ref="classShiftTonnageGroup"/>
        <widget:componentRef ref="classShiftAvailAndUseOfAvail"/>
        <widget:componentRef ref="classShiftTonsPerOperHour"/>
        <widget:componentRef ref="averageCycles"/>
    </widget:guiGroup>

    <!-- Group: Shift Tonnage -->
    <widget:guiGroup id="classShiftTonnageGroup" groupMode="box" title="Shift Tonnage">
        <widget:componentRef ref="lhdTotalShiftTonnageMeter"/>
        <widget:componentRef ref="lhdClassShiftTonnageTable"/>

        <widget:componentRef ref="truckTotalShiftTonnageMeter"/>
        <widget:componentRef ref="truckClassShiftTonnageTable"/>
    </widget:guiGroup>

    <!-- Group: Shift Avail and Use of Avail -->
    <widget:guiGroup id="classShiftAvailAndUseOfAvail" groupMode="box" title="Shift Availability and Use of Availability" orientation="horizontal">
        <widget:componentRef ref="classShiftAvail"/>
        <widget:componentRef ref="classShiftUseOfAvail"/>
    </widget:guiGroup>

    <widget:guiGroup id="classShiftAvail" orientation="vertical" groupMode="plain">
        <widget:componentRef ref="lhdTotalAvailabilityMeter"/>
        <widget:componentRef ref="lhdClassAvailabilityTable"/>

        <widget:componentRef ref="truckTotalAvailabilityMeter"/>
        <widget:componentRef ref="truckClassAvailabilityTable"/>
    </widget:guiGroup>

    <widget:guiGroup id="classShiftUseOfAvail" orientation="vertical" groupMode="plain">
        <widget:componentRef ref="lhdTotalUseOfAvailabilityMeter"/>
        <widget:componentRef ref="lhdClassUseOfAvailabilityTable"/>

        <widget:componentRef ref="truckTotalUseOfAvailabilityMeter"/>
        <widget:componentRef ref="truckClassUseOfAvailabilityTable"/>
    </widget:guiGroup>

    <!-- Group: Shift Tons per Operating Hour -->
    <widget:guiGroup id="classShiftTonsPerOperHour" groupMode="box" title="Shift Tonnes per Operating Hour" orientation="vertical">
        <widget:componentRef ref="lhdTotalTonsPerOperHourMeter"/>
        <widget:componentRef ref="lhdClassTonsPerOperHourTable"/>

        <widget:componentRef ref="truckTotalTonsPerOperHourMeter"/>
        <widget:componentRef ref="truckClassTonsPerOperHourTable"/>
    </widget:guiGroup>

    <!-- **** By Fleet **** -->

    <!-- Tab: Meters by Fleet -->
    <widget:guiGroup id="fleetMeters" title="Meters (By Fleet)" orientation="horizontal">
        <widget:componentRef ref="fleetShiftTonnageGroup"/>
        <widget:componentRef ref="fleetShiftAvailAndUseOfAvail"/>
        <widget:componentRef ref="fleetShiftTonsPerOperHour"/>
        <widget:componentRef ref="averageCycles"/>
    </widget:guiGroup>

    <!-- Group: Shift Tonnage -->
    <widget:guiGroup id="fleetShiftTonnageGroup" groupMode="box" title="Shift Tonnage">
        <widget:componentRef ref="lhdTotalShiftTonnageMeter"/>
        <widget:componentRef ref="lhdFleetShiftTonnageTable"/>

        <widget:componentRef ref="truckTotalShiftTonnageMeter"/>
        <widget:componentRef ref="truckFleetShiftTonnageTable"/>
    </widget:guiGroup>

    <!-- Group: Shift Avail and Use of Avail -->
    <widget:guiGroup id="fleetShiftAvailAndUseOfAvail" groupMode="box" title="Shift Availability and Use of Availability" orientation="horizontal">
        <widget:componentRef ref="fleetShiftAvail"/>
        <widget:componentRef ref="fleetShiftUseOfAvail"/>
    </widget:guiGroup>

    <widget:guiGroup id="fleetShiftAvail" orientation="vertical" groupMode="plain">
        <widget:componentRef ref="lhdTotalAvailabilityMeter"/>
        <widget:componentRef ref="lhdFleetAvailabilityTable"/>

        <widget:componentRef ref="truckTotalAvailabilityMeter"/>
        <widget:componentRef ref="truckFleetAvailabilityTable"/>
    </widget:guiGroup>

    <widget:guiGroup id="fleetShiftUseOfAvail" orientation="vertical" groupMode="plain">
        <widget:componentRef ref="lhdTotalUseOfAvailabilityMeter"/>
        <widget:componentRef ref="lhdFleetUseOfAvailabilityTable"/>

        <widget:componentRef ref="truckTotalUseOfAvailabilityMeter"/>
        <widget:componentRef ref="truckFleetUseOfAvailabilityTable"/>
    </widget:guiGroup>

    <!-- Group: Shift Tons per Operating Hour -->
    <widget:guiGroup id="fleetShiftTonsPerOperHour" groupMode="box" title="Shift Tonnes per Operating Hour" orientation="vertical">
        <widget:componentRef ref="lhdTotalTonsPerOperHourMeter"/>
        <widget:componentRef ref="lhdFleetTonsPerOperHourTable"/>

        <widget:componentRef ref="truckTotalTonsPerOperHourMeter"/>
        <widget:componentRef ref="truckFleetTonsPerOperHourTable"/>
    </widget:guiGroup>
</beans>
