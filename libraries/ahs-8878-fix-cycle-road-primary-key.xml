    <changeSet id="c11edb0e-da41-4861-8f69-71905935c199" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddPrimaryKey for CYCLEROADSEGMENT_PK to table CYCLEROADSEGMENT as table does not exist or primaryKey already exists."
                onFail="MARK_RAN">
            <tableExists tableName="CYCLEROADSEGMENT"/>
            <not>
                <primaryKeyExists primaryKeyName="CYCLEROADSEGMENT_PK" tableName="CYCLEROADSEGMENT"/>
            </not>
        </preConditions>
        <comment>AHS-8878: AddPrimaryKey CYCLEROADSEGMENT_PK to CYCLEROADSEGMENT (OID,START_TIME_UTC)</comment>
        <sql dbms="oracle">DELETE FROM CYCLEROADSEGMENT WHERE ROWID IN (SELECT RID FROM (SELECT ROWID RID, ROW_NUMBER()
            OVER (PARTITION BY OID, START_TIME_UTC ORDER BY ROWID) RN FROM CYCLEROADSEGMENT) WHERE RN &lt;&gt; 1)
        </sql>
        <sql dbms="mssql">WITH CTE AS (SELECT ROW_NUMBER() OVER (PARTITION BY OID, START_TIME_UTC ORDER BY %%physloc%%)
            AS ROW_NUM FROM CYCLEROADSEGMENT) DELETE FROM CTE WHERE ROW_NUM &gt; 1
        </sql>
        <addPrimaryKey columnNames="OID,START_TIME_UTC" constraintName="CYCLEROADSEGMENT_PK" tablespace="MW_IDXENT"
                       tableName="CYCLEROADSEGMENT"/>
        <rollback>
            <dropPrimaryKey constraintName="CYCLEROADSEGMENT_PK" tableName="CYCLEROADSEGMENT"/>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

