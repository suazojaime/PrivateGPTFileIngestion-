<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="da5d9d26-e809-4413-a992-603f001b946c" author="MineStar" dbms="mssql" failOnError="false">
        <comment>MO-15446: Update STANDARDMESSAGE non-zero LAYER_UPDATE_VERSION</comment>
        <sql>
            DECLARE @i INT = (SELECT MAX(LAYER_UPDATE_VERSION) + 1 FROM STANDARDMESSAGE)

            UPDATE STANDARDMESSAGE
            SET    LAYER_UPDATE_VERSION = @i , @i = @i + 1
            WHERE  LAYER_UPDATE_VERSION = 0
        </sql>
        <rollback/>
    </changeSet>

</databaseChangeLog>
