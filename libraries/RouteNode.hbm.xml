<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.route.RouteNodeImpl"
           proxy="minestar.mine.domain.minemodel.underground.route.RouteNode"
           table="ROUTE_NODE"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">ROUTE_NODE</meta>
        <meta attribute="view-ignore">true</meta>
        <meta attribute="description">
            A point in the map used for underground path-planning.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="ROUTE_NODE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>


        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">
                Position on map that this route node is associated with.
            </meta>
            <column name="POSITION_X"/>
            <column name="POSITION_Y"/>
            <column name="POSITION_Z"/>
        </property>
    </class>


    <!-- A lightweight reference to an Ore Pass -->
    <class name="minestar.mine.domain.minemodel.underground.route.RouteNodeReference"
           table="ROUTE_NODE"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">ROUTENODEREFERENCE</meta>
        <meta attribute="description">A minimal reference to an route node.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID"
            type="long"
            column="ROUTE_NODE_OID"
            access="field"/>
    </class>

</hibernate-mapping>
