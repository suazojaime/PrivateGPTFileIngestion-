<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.mine.domain.minemodel.Derate"
           table="DERATE"
           dynamic-update="true"
           discriminator-value="DerateImpl">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=DERATE_MACHINE_CLASS
            unique=true
            columns=MACHINE_CLASS
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=DERATE_MACHINE
            unique=true
            columns=MACHINE
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">Speed derate</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="DERATE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <discriminator column="DISCRIMINATOR"/>

        <property name="enableAbsoluteSpeedLimit" 
                  type="boolean"
                  column="ENABLE_ABSOLUTE"
                  not-null="true">
            <meta attribute="defaultValue">false</meta>
            <meta attribute="description">If absolute speed limit applies.</meta>
        </property>

        <property name="enableProportionalDerate"
                  type="boolean"
                  column="ENABLE_PROPORTIONAL"
                  not-null="true">
            <meta attribute="defaultValue">false</meta>
            <meta attribute="description">If proportional derate applies.</meta>
        </property>

        <property name="absoluteSpeedLimit"
                  column="ABSOLUTE"
                  not-null="false">
            <meta attribute="description">Absolute speed limit</meta>
            <meta attribute="unitType">speed</meta>
            <type name="quantity">
                <param name="unitType">speed</param>
            </type>
        </property>

        <property name="proportionalDerate"
                  column="PROPORTIONAL"
                  not-null="false">
            <meta attribute="description">Proportional derate</meta>
            <meta attribute="unitType">ratio</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>

        <property name="proportionalDerateReason"
                  type="minestar.mine.persistence.minemodel.ReasonForDerateEnumUserType"
                  column="PROPORTIONAL_REASON"
                  not-null="false">
            <meta attribute="description">Reason of proportional derate</meta>
        </property>

        <property name="tractionLevel"
                  column="TRACTION_LEVEL"
                  not-null="false">
            <meta attribute="description">Traction level</meta>
            <meta attribute="unitType">ratio</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>

        <property name="enableEmptyDerate" type="boolean">
            <meta attribute="defaultValue">false</meta>
            <meta attribute="description">If empty derate applies.</meta>
            <column name="EMPTY_DERATE_FLAG" not-null="true" default="0"/>
        </property>

        <property name="emptyDerate" column="EMPTY_DERATE_VALUE" not-null="false">
            <meta attribute="description">Empty derate</meta>
            <meta attribute="unitType">ratio</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>

        <subclass name="minestar.mine.domain.minemodel.MachineDerate" discriminator-value="MachineDerateImpl">
            <meta attribute="description">Speed derate per single truck</meta>
            <many-to-one name="machineRef"
                         class="minestar.pitlink.domain.machine.MachineReference"
                         column="MACHINE"
                         not-null="false">
                <meta attribute="description">Machine to apply derate</meta>
                <meta attribute="alias">machine</meta>
            </many-to-one>
        </subclass>

        <subclass name="minestar.mine.domain.minemodel.MachineClassDerate" discriminator-value="MachineClassDerateImpl">
            <meta attribute="description">Speed derate per truck class</meta>
            <many-to-one name="machineClassRef"
                         class="minestar.pitlink.domain.machine.MachineClassReference"
                         column="MACHINE_CLASS"
                         not-null="false">
                <meta attribute="description">Machine Class to apply derate</meta>
                <meta attribute="alias">machineClass</meta>
            </many-to-one>
        </subclass>

        <subclass name="minestar.mine.domain.minemodel.GlobalDerate" discriminator-value="GlobalDerateImpl">
            <meta attribute="description">Speed derate global</meta>
        </subclass>

    </class>

</hibernate-mapping>
