<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="terrainParentRemote" class="org.springframework.remoting.rmi.RmiProxyFactoryBean" abstract="true">
        <property name="lookupStubOnStartup" value="false"/>
        <property name="refreshStubOnConnectFailure" value="true"/>
    </bean>

    <bean id="terrainFileManagementRMI" parent="terrainParentRemote" lazy-init="true">
        <property name="serviceUrl" value="rmi://${TERRAIN_RMI_HOST}:${TERRAIN_RMI_PORT}/fileManagementAPI"/>
        <property name="serviceInterface" value="cat.minestar.terrain.FileManagement"/>
    </bean>

    <bean id="terrainGroupManagementRMI" parent="terrainParentRemote" lazy-init="true">
        <property name="serviceUrl" value="rmi://${TERRAIN_RMI_HOST}:${TERRAIN_RMI_PORT}/groupManagementAPI"/>
        <property name="serviceInterface" value="cat.minestar.terrain.GroupManagement"/>
    </bean>

    <bean id="terrainBridgeServiceImpl" class="minestar.terrain.bridge.TerrainBridgeServiceImpl" lazy-init="true">
        <constructor-arg name="fileManagement" ref="terrainFileManagementRMI"/>
        <constructor-arg name="groupManagement" ref="terrainGroupManagementRMI"/>
    </bean>

</beans>
