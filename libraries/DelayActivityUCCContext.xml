<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="delayActivityUCCImpl" class="minestar.production.uifacade.delay.impl.DelayActivityUCCFacadeImpl"
          lazy-init="true">
        <property name="delayActivityManagementService" ref="delayActivityManagementServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerDelayActivityUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Delay Activity UCC"/>
        <constructor-arg value="minestar.production.uifacade.delay.DelayActivityUCCFacade"/>
        <constructor-arg ref="delayActivityUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="delayActivityUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="delayActivityUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="delayActivityUCC"/>
        <property name="service" ref="delayActivityUCCProxy"/>
        <property name="serviceInterface" value="minestar.production.uifacade.delay.DelayActivityUCCFacade"/>
    </bean>

</beans>
