<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.UGScheduledAssignment"
           table="UG_SCHEDULED_ASSIGNMENT"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">LHDScheduledAssignment</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            Information pertaining to scheduled assignment for an LHD.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <meta attribute="description">The unique, system-assigned identifier for this LHD Scheduled Assignment.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </id>

        <many-to-one name="machineRef"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     column="MACHINE"
                     not-null="true">
            <meta attribute="description">
                A reference to the machine that this scheduled assignment applies.
            </meta>
        </many-to-one>

        <property name="status"
                  column="STATUS">
            <meta attribute="alias">STATUS</meta>
            <meta attribute="description">The status of the LHD Scheduled Assignment.</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.mine.domain.minemodel.underground.UGScheduledAssignmentState</param>
            </type>
        </property>

        <property name="goalType"
                  column="GOAL_TYPE">
            <meta attribute="description">The type of goal being references DUMP, LOAD or INVERSION.</meta>

            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.mine.domain.minemodel.underground.goal.GoalType</param>
            </type>
        </property>

        <property name="associatedCycle"
                  type="java.lang.Long"
                  column="CYCLE_OID">
            <meta attribute="description">This is a reference to the associated cycle.</meta>
        </property>

        <property name="goalRef"
                  type="java.lang.Long"
                  column="GOAL_REF">
            <meta attribute="description">This is a reference to the associated goal.</meta>
        </property>

        <property name="creationTime"
                  type="java.util.Date"
                  column="CREATION_TIME"
                  not-null="true">
            <meta attribute="description">The date that the Scheduled LHD Assignment was created.</meta>
        </property>

        <property name="triggerTime"
                  type="java.util.Date"
                  column="TRIGGER_TIME"
                  not-null="true">
            <meta attribute="description">The date that the Scheduled LHD Assignment should be enacted.</meta>
        </property>
    </class>

</hibernate-mapping>
