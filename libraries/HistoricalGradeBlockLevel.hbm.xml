<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="historical" default-access="field">

    <class name="minestar.production.domain.underground.HistoricalGradeBlockLevelImpl"
           proxy="minestar.production.domain.underground.HistoricalGradeBlockLevel"
           table="HIST_GB_LEVEL"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">HISTGBLEVEL</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">A historical record of what the levels of a chute was at the end of a shift.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <id name="OID"
            type="java.lang.Long"
            column="CHUTE_DATA_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <properties name="UK_" unique="true">
            <!-- Uniqueness constraint is over chute and shift field -->

            <many-to-one name="gradeBlockRef"
                         class="minestar.mine.domain.material.GradeBlockReference"
                         column="GRADE_BLOCK_REF"
                         not-null="true">
                <meta attribute="description">
                    A reference to the grade block (MSMODEL.GRADEBLOCK) that this historical record applies to.
                </meta>
            </many-to-one>

            <property name="shiftOID"
                      type="java.lang.Long"
                      column="SHIFT"
                      not-null="true">
                <meta attribute="description">
                    A reference to the shift (MSMODEL.SHIFT) that this historical record applies to.
                </meta>
            </property>
        </properties>

        <property name="level"
                  column="GB_LEVEL">
            <meta attribute="alias">GB_LEVEL</meta>
            <meta attribute="description">The amount of ore that the grade block contained at the end of the shift.
            </meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

    </class>

</hibernate-mapping>
