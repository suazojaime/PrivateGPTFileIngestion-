    <changeSet id="a062abb8-f54c-4a5f-a13a-dee3a7549e00" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for SERVICEMETERREADING_UX1 to table SERVICEMETERREADING as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="SERVICEMETERREADING"/>
            <not>
                <indexExists indexName="SERVICEMETERREADING_UX1" tableName="SERVICEMETERREADING"/>
            </not>
        </preConditions>
        <comment>AHS-7316: CreateIndex SERVICEMETERREADING_UX1 on SERVICEMETERREADING (MACHINE,READINGDATE_UTC)</comment>
        <sql dbms="oracle">DELETE FROM SERVICEMETERREADING WHERE ROWID IN (SELECT RID FROM (SELECT ROWID RID, ROW_NUMBER() OVER (PARTITION BY MACHINE, READINGDATE_UTC ORDER BY ROWID) RN FROM SERVICEMETERREADING) WHERE RN &lt;&gt; 1)</sql>
        <sql dbms="mssql">WITH CTE AS (SELECT ROW_NUMBER() OVER (PARTITION BY MACHINE, READINGDATE_UTC ORDER BY %%physloc%%) AS ROW_NUM FROM SERVICEMETERREADING) DELETE FROM CTE WHERE ROW_NUM &gt; 1</sql>
        <createIndex unique="true" tablespace="MW_IDXENT" tableName="SERVICEMETERREADING" indexName="SERVICEMETERREADING_UX1">
            <column name="MACHINE"/>
            <column name="READINGDATE_UTC"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="SERVICEMETERREADING" indexName="SERVICEMETERREADING_UX1"/>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

