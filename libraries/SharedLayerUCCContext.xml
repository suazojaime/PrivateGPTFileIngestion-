<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- internal cache beans, not available for remoting or serviceFactory -->

    <!-- must have this -->
    <bean id="sharedLayerUCCImpl" class="minestar.mine.uifacade.layer.impl.SharedLayerUCCImpl" lazy-init="true">
        <property name="layerDefinitionService" ref="layerDefinitionServiceImpl"/>
        <property name="settingsUCC" ref="settingsUCCImpl"/>
        <property name="userLayerUCC" ref="layerUCCImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerSharedLayerUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Layer UCC"/>
        <constructor-arg value="minestar.mine.uifacade.layer.SharedLayerUCCFacade"/>
        <constructor-arg ref="sharedLayerUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="sharedLayerUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="sharedLayerUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="sharedLayerUCC"/>
        <property name="service" ref="sharedLayerUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.layer.SharedLayerUCCFacade"/>
    </bean>

</beans>
