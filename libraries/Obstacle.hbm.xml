<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="historical" default-access="field" default-lazy="false">

    <class name="minestar.mine.domain.minemodel.obstacle.Obstacle"
           table="OBSTACLE">

        <meta attribute="view-master">true</meta>

        <meta attribute="index">
            name=OBSTACLE_MACHINE_REF_IX
            columns=MACHINE_ID, REFERENCE
            <!-- This SHOULD be unique, but could cause upgrade/runtime errors as no other detection of uniqueness is performed -->
        </meta>

        <meta attribute="description">An obstacle that was detected by a machine</meta>

        <cache usage="read-write" region="model"/>

        <id name="oid" type="long" column="OBSTACLE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="machineId" type="int" column="MACHINE_ID" not-null="true">
            <meta attribute="description">Id of the machine that detected the obstacle</meta>
        </property>

        <property name="reference" type="long" column="REFERENCE" not-null="true">
            <meta attribute="description">Obstacle reference</meta>
        </property>

        <property name="timestamp" type="TimestampType" column="TIMESTAMP_UTC" not-null="true">
            <meta attribute="description">The time at which the obstacle was detected</meta>
        </property>

        <property name="geometryWKT" type="string" column="GEOMETRY" length="65536" not-null="true">
            <meta attribute="alias">geometry</meta>
            <meta attribute="description">The geometry/boundary of the obstacle</meta>
        </property>

    </class>

    <class name="minestar.mine.domain.minemodel.obstacle.ObstacleClear"
           table="OBSTACLE_CLEAR">

        <meta attribute="index">
            name=OBSTACLE_CLEAR_REFERENCE
            columns=MACHINE_CLEARED, OBSTACLE_REFERENCE
        </meta>

        <meta attribute="description">Information about an obstacle being cleared.</meta>
        <cache usage="read-write" region="historical"/>

        <id name="OID"
            type="java.lang.Long"
            column="OBSTACLE_CLEAR_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one name="machineCleared"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     column="MACHINE_CLEARED"
                     not-found="ignore"
                     not-null="true">
            <meta attribute="description">The machine that reported the obstacle.</meta>
        </many-to-one>

        <property name="obstacleReference"
                  type="java.lang.Long"
                  column="OBSTACLE_REFERENCE">
            <meta attribute="description">Reference to the obstacle that was cleared/rejected (hopefully unique for the machineCleared)</meta>
        </property>

        <many-to-one name="loadingTool"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     not-found="ignore"
                     column="LOADING_TOOL_OID">
            <meta attribute="description">The nearest loading tool to which the obstacle detection was sent for possible clearing/rejection</meta>
        </many-to-one>

        <property name="timeSent"
                  type="TimestampType"
                  column="TIME_SENT_UTC">
            <meta attribute="utc-description">The utc time that the obstacle detection was sent to the panel on the nearest loading tool.</meta>
            <meta attribute="description">The time that the obstacle detection was sent to the panel on the nearest loading tool.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="timeCleared"
                  type="TimestampType"
                  column="TIME_CLEARED_UTC">
            <meta attribute="utc-description">The utc time that the obstacle was cleared by the loading tool or in the office.</meta>
            <meta attribute="description">The time that the obstacle was cleared by the loading tool or in the office.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="timeRejected"
                  type="TimestampType"
                  column="TIME_REJECTED_UTC">
            <meta attribute="utc-description">The utc time that the obstacle was rejected by the loading tool operator.</meta>
            <meta attribute="description">The time that the obstacle was rejected by the loading tool operator.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <many-to-one name="clearingUser"
                     class="minestar.platform.domain.user.UserReference"
                     not-found="ignore"
                     column="CLEARING_USER_OID">
            <meta attribute="description">
                The user that cleared the obstacle in MineStar.
                Null if cleared by a person in the Field such as a Loader Operator</meta>
        </many-to-one>

        <property name="inspectorName"
                  type="java.lang.String"
                  column="INSPECTOR_NAME">
            <meta attribute="description">
                The name of the person or system that inspected the truck area for the obstacle.
                This is the person that guarantees that the obstacle does not really exist.
            </meta>
        </property>

        <property name="userComment"
                  type="java.lang.String"
                  column="USER_COMMENT"
                  length="4000">
            <meta attribute="description">
                An optional comment.
            </meta>
        </property>

        <property name="fieldResult"
                  type="minestar.mine.persistence.minemodel.ObstacleClearResultEnumUserType"
                  column="FIELD_RESULT"
                  not-null="true">
            <meta attribute="defaultValue">'UNKNOWN'</meta>
            <meta attribute="description">The result of the obstacle clear from the machine.</meta>
        </property>

    </class>

</hibernate-mapping>
