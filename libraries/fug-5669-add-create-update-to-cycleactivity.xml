            </not>
        </preConditions>
        <comment>FUG-5669: AddColumn CYCLEACTIVITYCOMPONENT.LAST_MODIFIED_UTC</comment>
        <addColumn tableName="CYCLEACTIVITYCOMPONENT">
            <column name="LAST_MODIFIED_UTC" type="DATETIME2" remarks="The utc time the cycle was last updated."/>
        </addColumn>
    </changeSet>

    <changeSet id="060cd666-402b-4fec-8644-998e74542b0b" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for DELAY_LAST_MODIFIED to table DELAY as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLEACTIVITYCOMPONENT"/>
            <not>
                <indexExists indexName="CYCLEACT_LAST_MODIFIED" tableName="CYCLEACTIVITYCOMPONENT"/>
            </not>
        </preConditions>
        <comment>FUG-5669: CreateIndex CYCLEACT_LAST_MODIFIED on CYCLEACTIVITYCOMPONENT (LAST_MODIFIED_UTC)</comment>
        <createIndex unique="false" tablespace="MW_IDXENT" tableName="DELAY" indexName="CYCLEACT_LAST_MODIFIED">
            <column name="LAST_MODIFIED_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
