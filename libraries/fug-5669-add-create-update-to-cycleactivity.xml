<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="ea5adf30-d768-4e63-a516-84caedf8eb10" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for CREATED_DATE_UTC to table CYCLEACTIVITYCOMPONENT as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLEACTIVITYCOMPONENT"/>
            <not>
                <columnExists tableName="CYCLEACTIVITYCOMPONENT" columnName="CREATED_DATE_UTC"/>
            </not>
        </preConditions>
        <comment>FUG-5669: AddColumn CYCLEACTIVITYCOMPONENT.CREATED_DATE_UTC</comment>
        <addColumn tableName="CYCLEACTIVITYCOMPONENT">
            <column name="CREATED_DATE_UTC" type="DATETIME2" remarks="The utc time the cycle was last updated."/>
        </addColumn>
    </changeSet>

    <changeSet id="2d7b5dae-5191-4a98-a783-0bd842404894" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for CYCLE_CREATED_DATE to table CYCLEACTIVITYCOMPONENT as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLEACTIVITYCOMPONENT"/>
            <not>
                <indexExists indexName="CYCLEACT_CREATED_DATE" tableName="CYCLEACTIVITYCOMPONENT"/>
            </not>
        </preConditions>
        <comment>FUG-5669: CreateIndex CYCLEACT_CREATED_DATE on CYCLEACTIVITYCOMPONENT (CREATED_DATE_UTC)</comment>
        <createIndex unique="false" tablespace="MW_IDXENT" tableName="CYCLEACTIVITYCOMPONENT" indexName="CYCLEACT_CREATED_DATE">
            <column name="CREATED_DATE_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

    <changeSet id="740e4b39-9b36-49a4-b7a1-0a4402fc7d7e" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for LAST_MODIFIED_UTC to table CYCLEACTIVITYCOMPONENT as table does not exist or column already exists." onFail="MARK_RAN">
