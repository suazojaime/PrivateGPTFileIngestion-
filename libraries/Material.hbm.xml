<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.machinetracking.domain.MaterialImpl" table="MATERIAL">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MATERIAL_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MATERIAL_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="description">
            Information about the material mined.
        </meta>

        <meta attribute="businessKeys">name</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="MATERIAL_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall">false</meta>
            <meta attribute="description">A unique identifier for the material.</meta>
        </property>

        <property name="active" type="boolean" column="IS_ACTIVE" not-null="true">
            <meta attribute="description">Is this material active</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">The name of the material.</meta>
        </property>

        <property name="description" type="string" column="DESCRIPTION" length="254">
            <meta attribute="description">A description of the material.</meta>
        </property>

        <property name="modelUpdateVersion" type="long">
            <meta attribute="description">The mine model update version when the material was created/modified.</meta>
            <column name="MODEL_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the material was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="codeCaes" type="int" column="CODECAES">
            <meta attribute="description">The unique CAES code for the material.</meta>
        </property>

        <property name="color" type="string" column="COLOUR" length="254">
            <meta attribute="description">The colour associated with the material.</meta>
        </property>

        <property name="bankDensity" column="BANKDENSITY">
            <meta attribute="description">The bank density of the material.</meta>
            <meta attribute="unitType">density</meta>
            <type name="quantity">
                <param name="unitType">density</param>
            </type>
        </property>

        <property name="looseDensity" column="LOOSEDENSITY">
            <meta attribute="description">The loose density of the material.</meta>
            <meta attribute="unitType">density</meta>
            <type name="quantity">
                <param name="unitType">density</param>
            </type>
        </property>

        <property name="unitName" type="string" column="MATUNIT" length="254">
            <meta attribute="alias">matUnit</meta>
            <meta attribute="description">The material unit for the material.</meta>
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The external system reference of this material</meta>
        </property>

        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The External System Description</meta>
        </property>

        <!-- associations -->
        <set name="grades" table="MATERIAL_GRADE">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias">grade</meta>
            <meta attribute="description">A list of all grades for the material.</meta>

            <!-- View columns into the GRADE table for reporting-->
            <meta attribute="viewproperty-author" inherit="false">
                expression=lookupResource.grade.author.query
            </meta>
            <meta attribute="viewproperty-averagemethod" inherit="false">
                expression=lookupResource.grade.averagemethod.query
            </meta>
            <meta attribute="viewproperty-desiredvaluecont" inherit="false">
                expression=lookupResource.grade.desiredvaluecont.query
            </meta>
            <meta attribute="viewproperty-desiredvaluecont_q" inherit="false">
                expression=lookupResource.grade.desiredvaluecont_q.query
            </meta>
            <meta attribute="viewproperty-desiredvaluecont_u" inherit="false">
                expression=lookupResource.grade.desiredvaluecont_u.query
            </meta>
            <meta attribute="viewproperty-desiredvaluedisc" inherit="false">
                expression=lookupResource.grade.desiredvaluedisc.query
            </meta>
            <meta attribute="viewproperty-id" inherit="false">
                expression=lookupResource.grade.id.query
            </meta>
            <meta attribute="viewproperty-maximumvalue" inherit="false">
                expression=lookupResource.grade.maximumvalue.query
            </meta>
            <meta attribute="viewproperty-maximumvalue_q" inherit="false">
                expression=lookupResource.grade.maximumvalue_q.query
            </meta>
            <meta attribute="viewproperty-maximumvalue_u" inherit="false">
                expression=lookupResource.grade.maximumvalue_u.query
            </meta>
            <meta attribute="viewproperty-minimumvalue" inherit="false">
                expression=lookupResource.grade.minimumvalue.query
            </meta>
            <meta attribute="viewproperty-minimumvalue_q" inherit="false">
                expression=lookupResource.grade.minimumvalue_q.query
            </meta>
            <meta attribute="viewproperty-minimumvalue_u" inherit="false">
                expression=lookupResource.grade.minimumvalue_u.query
            </meta>
            <meta attribute="viewproperty-objectype" inherit="false">
                expression=lookupResource.grade.objectype.query
            </meta>
            <meta attribute="viewproperty-valuecont" inherit="false">
                expression=lookupResource.grade.valuecont.query
            </meta>
            <meta attribute="viewproperty-valuecont_q" inherit="false">
                expression=lookupResource.grade.valuecont_q.query
            </meta>
            <meta attribute="viewproperty-valuecont_u" inherit="false">
                expression=lookupResource.grade.valuecont_u.query
            </meta>
            <meta attribute="viewproperty-valuedisc" inherit="false">
                expression=lookupResource.grade.valuedisc.query
            </meta>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.production.domain.grade.GradeReference" column="GRADE_OID"/>
        </set>

        <map name="continuousValues" table="CONTINUOUS_GRADE_VALUE">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="description">A mapping of allowable continuous grades a and their values for the material.</meta>
            <meta attribute="index-alias">grade</meta>
            <key column="OID" not-null="true"/>
            <index-many-to-many class="minestar.production.domain.grade.GradeReference" column="GRADE_OID"/>
            <composite-element class="minestar.production.domain.grade.ContinuousGradeValue">
                <property name="unitName" column="DESIRED_VALUE_UNIT_NAME" not-null="true"/>
                <property name="unitType" column="DESIRED_VALUE_UNIT_TYPE"/>
                <property name="minimumValue" type="double" column="MINIMUM_VALUE_MAGNITUDE">
                    <meta attribute="quantity">DESIRED_VALUE_UNIT_TYPE,DESIRED_VALUE_UNIT_NAME</meta>
                    <meta attribute="description">The minimum value magnitude</meta>
                </property>
                <property name="maximumValue" type="double" column="MAXIMUM_VALUE_MAGNITUDE">
                    <meta attribute="quantity">DESIRED_VALUE_UNIT_TYPE,DESIRED_VALUE_UNIT_NAME</meta>
                    <meta attribute="description">The maximum value magnitude</meta>
                </property>
                <property name="desiredValue" type="double" column="DESIRED_VALUE_MAGNITUDE">
                    <meta attribute="quantity">DESIRED_VALUE_UNIT_TYPE,DESIRED_VALUE_UNIT_NAME</meta>
                    <meta attribute="description">The desired value magnitude</meta>
                </property>
            </composite-element>
        </map>

        <map name="discreteValues" table="DISCRETE_GRADE_VALUE">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="description">A mapping of allowable discrete grades and their values for the material.</meta>

            <meta attribute="index-alias">grade</meta>
            <key column="OID" not-null="true"/>
            <index-many-to-many class="minestar.production.domain.grade.GradeReference" column="GRADE_OID"/>
            <composite-element class="minestar.production.domain.grade.DiscreteGradeValue">
                <property name="numberOfValues" type="int" column="NUM_OF_VALUES" not-null="true"/>
                <property name="valueType" type="string" column="VALUE_TYPE"/>
                <property name="value00" type="string" column="VALUE00"/>
                <property name="value01" type="string" column="VALUE01"/>
                <property name="value02" type="string" column="VALUE02"/>
                <property name="value03" type="string" column="VALUE03"/>
                <property name="value04" type="string" column="VALUE04"/>
                <property name="value05" type="string" column="VALUE05"/>
                <property name="value06" type="string" column="VALUE06"/>
                <property name="value07" type="string" column="VALUE07"/>
                <property name="value08" type="string" column="VALUE08"/>
                <property name="value09" type="string" column="VALUE09"/>
                <property name="value10" type="string" column="VALUE10"/>
                <property name="value11" type="string" column="VALUE11"/>
                <property name="value12" type="string" column="VALUE12"/>
                <property name="value13" type="string" column="VALUE13"/>
                <property name="value14" type="string" column="VALUE14"/>
                <property name="value15" type="string" column="VALUE15"/>
                <property name="value16" type="string" column="VALUE16"/>
                <property name="value17" type="string" column="VALUE17"/>
                <property name="value18" type="string" column="VALUE18"/>
                <property name="value19" type="string" column="VALUE19"/>
                <property name="value20" type="string" column="VALUE20"/>
                <property name="value21" type="string" column="VALUE21"/>
                <property name="value22" type="string" column="VALUE22"/>
                <property name="value23" type="string" column="VALUE23"/>
                <property name="value24" type="string" column="VALUE24"/>
                <property name="value25" type="string" column="VALUE25"/>
                <property name="value26" type="string" column="VALUE26"/>
                <property name="value27" type="string" column="VALUE27"/>
                <property name="value28" type="string" column="VALUE28"/>
                <property name="value29" type="string" column="VALUE29"/>
            </composite-element>
        </map>
    </class>

    <!-- A lightweight reference to a Material -->
    <class name="minestar.machinetracking.domain.MaterialReference" table="MATERIAL" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">MATERIAL_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a material.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="MATERIAL_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="id" type="long" column="ID" not-null="true"/>
    </class>

</hibernate-mapping>
