<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.autonomy.domain.plan.PlanAssociationImpl" table="PLAN_ASSOCIATION">

        <meta attribute="alias" inherit="false">PlanAssociation</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>
        <meta attribute="view-create-order">1</meta>

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MACHINE_OID
            unique=true
            columns=MACHINE_OID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">An association of a machine to a plan</meta>

        <id name="machineOID" type="long" column="MACHINE_OID">
            <meta attribute="description">The machine OID, typically a dozer, for this association</meta>
            <generator class="assigned"/>
        </id>

        <property name="planOID" column="PLAN_OID" not-null="true">
            <meta attribute="description">The plan for this association</meta>
        </property>

    </class>
</hibernate-mapping>
