<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.machinetracking.domain.MaterialGroupImpl"
           proxy="minestar.machinetracking.domain.MaterialGroup"
           table="MATERIAL_GROUP">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            <!-- Children of a parent group must have a unique name -->
            name=MATERIALGROUP_NAME
            columns=NAME, PARENT_GROUP_OID
            unique=true
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="alias" inherit="false">MaterialGroup</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>
        <meta attribute="description">A grouping mechanism for materials.</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="MATERIAL_GROUP_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">Name of the material group</meta>
        </property>

        <property name="description" type="string" column="DESCRIPTION" length="254">
            <meta attribute="description">Description of the material group</meta>
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The External System Reference</meta>
        </property>
        
        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The External System Description</meta>
        </property>

        <!-- unidirectional one-to-many association on a foreign key (MATERIAL_GROUP.PARENT_GROUP_OID -> MATERIAL_GROUP.MATERIAL_GROUP_OID) -->
        <set name="childGroups" fetch="subselect">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias" inherit="false">materialGroups</meta>
            <meta attribute="description">The material group subdirectories</meta>
            <meta attribute="view-reference">minestar.machinetracking.domain.MaterialGroupImpl</meta>

            <key column="PARENT_GROUP_OID"/>
            <one-to-many class="minestar.machinetracking.domain.MaterialGroupReference"/>
        </set>

        <!-- unidirectional one-to-many association on a foreign key (MATERIAL.MATERIALGROUP -> MATERIAL_GROUP.MATERIAL_GROUP_OID) -->
        <set name="childMaterials" fetch="subselect">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias" inherit="false">materials</meta>
            <meta attribute="description">The material group elements</meta>
            <meta attribute="view-reference">minestar.machinetracking.domain.MaterialImpl</meta>

            <key column="MATERIALGROUP"/>
            <one-to-many class="minestar.machinetracking.domain.MaterialReference"/>
        </set>
    </class>

    <!-- A lightweight reference to a MaterialGroup -->
    <class name="minestar.machinetracking.domain.MaterialGroupReference" table="MATERIAL_GROUP" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">MATERIAL_GROUP_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a material group.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="MATERIAL_GROUP_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
    </class>

</hibernate-mapping>
