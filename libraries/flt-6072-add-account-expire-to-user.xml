<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="c94ecc20-dcc0-4130-a40f-900050a95ee2" author="MineStar" context="Platform/Platform_Management" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddColumn for ACCOUNTEXPIRES to table USER1 as table does not exist or column already exists."
                onFail="MARK_RAN">
            <tableExists tableName="USER1"/>
            <not>
                <columnExists tableName="USER1" columnName="ACCOUNTEXPIRES"/>
            </not>
        </preConditions>
        <comment>FLT-6072: AddColumn USER1.ACCOUNTEXPIRES</comment>
        <addColumn tableName="USER1">
            <column name="ACCOUNTEXPIRES" type="DATETIME2" remarks="At this time the User Account will expire."/>
        </addColumn>
    </changeSet>
    <changeSet id="89b72405-3efe-45ef-8053-3aa63a79d07e" author="MineStar" context="Platform/Platform_Management" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddColumn for RESETACCOUNTEXPIRY to table USER1 as table does not exist or column already exists."
                onFail="MARK_RAN">
            <tableExists tableName="USER1"/>
            <not>
                <columnExists tableName="USER1" columnName="RESETACCOUNTEXPIRY"/>
            </not>
        </preConditions>
        <comment>FLT-6072: AddColumn USER1.RESETACCOUNTEXPIRY</comment>
        <addColumn tableName="USER1">
            <column name="RESETACCOUNTEXPIRY" type="BOOLEAN" defaultValueBoolean="false"
                    remarks="Reset the User Account if the user trys to login after the accountExpires time.">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
