<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- internal cache beans, not available for remoting or serviceFactory -->

    <!-- must have this -->
    <bean id="replayUCCImpl" class="minestar.pitlink.uifacade.replay.impl.ReplayUCCImpl"
          lazy-init="true">
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerReplayUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Replay UCC"/>
        <constructor-arg value="minestar.pitlink.uifacade.replay.ReplayUCCFacade"/>
        <constructor-arg ref="replayUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="replayUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="replayUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="replayUCC"/>
        <property name="service" ref="replayUCCProxy"/>
        <property name="serviceInterface" value="minestar.pitlink.uifacade.replay.ReplayUCCFacade"/>
    </bean>

</beans>
