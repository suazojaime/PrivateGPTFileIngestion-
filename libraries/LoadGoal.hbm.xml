<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.loadgoal.LoadGoalImpl"
           proxy="minestar.mine.domain.minemodel.underground.loadgoal.LoadGoal"
           table="LOAD_GOAL"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">LoadGoal</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            The direction in which a machine should enter a draw point.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=LOADGOAL_DRAWPOINT
            unique=false
            columns=DRAW_POINT
            tablespace=MW_IDXENT
        </meta>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one name="routeNodeRef"
                     class="minestar.mine.domain.minemodel.underground.route.RouteNodeReference"
                     column="ROUTE_NODE_OID"
                     lazy="false">
            <meta attribute="description">
                The associated Route Node. This is calculated by the System.
            </meta>
        </many-to-one>

        <property name="modelUpdateVersion"
                  type="java.lang.Long"
                  column="MODEL_UPDATE_VERSION">
            <meta attribute="description">The is a copy of the system wide version number.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this load goal is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <many-to-one name="drawPoint"
                     class="minestar.mine.domain.minemodel.underground.drawpoint.DrawPointReference"
                     column="DRAW_POINT"
                     not-null="true"
                     lazy="false">
            <meta attribute="alias">drawPoint</meta>
            <meta attribute="description">The draw point that this load goal is linked to.</meta>
        </many-to-one>

        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">The center point of the load goal.</meta>
            <column name="POSITION_X"/>
            <column name="POSITION_Y"/>
            <column name="POSITION_Z"/>
        </property>

        <property name="direction"
                  column="DIRECTION">
            <meta attribute="description">The direction that the arrow is pointing away from the center point.</meta>
            <meta attribute="unitType">plane angle</meta>
            <type name="quantity">
                <param name="unitType">plane angle</param>
            </type>
        </property>

        <property name="finalPosition"
                  type="XYZCoordinate">
            <meta attribute="description">The end position for the load macro.</meta>
            <column name="FINAL_POSITION_X"/>
            <column name="FINAL_POSITION_Y"/>
            <column name="FINAL_POSITION_Z"/>
        </property>
    </class>

</hibernate-mapping>
