<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="summary">

    <!-- The table name below will be prepended with the tablePrefix from the kpisummaries XML configuration -->
    <class name="minestar.production.persistence.kpisummaries.RealtimeKpiPersistenceBean"
           table="REALTIMEKPI"
           schema="summary">

        <meta attribute="noMetadata" inherit="false">true</meta>

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>

        <composite-id>
            <key-property name="name" column="NAME" type="string" length="80" />
            <key-property name="dimension1" column="DIMENSION1" type="string" />
            <key-property name="dimension2" column="DIMENSION2" type="string" />
            <key-property name="dimension3" column="DIMENSION3" type="string" />
            <key-property name="dimension4" column="DIMENSION4" type="string" />
            <key-property name="dimension5" column="DIMENSION5" type="string" />
            <key-property name="kpiName" column="KPINAME" type="string" length="80" />
        </composite-id>

        <property name="numDimensions" column="NUMDIMENSIONS" type="integer" not-null="true"/>

        <property name="kpiValue" column="KPIVALUE" type="double" not-null="true" />
        <property name="kpiUnit" column="KPIUNIT" type="string" length="80" not-null="true" />

        <property name="updated" column="UPDATED_UTC" type="TimestampType">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The updated utc timestamp.</meta>
            <meta attribute="description">The updated timestamp</meta>
        </property>

    </class>
</hibernate-mapping>
