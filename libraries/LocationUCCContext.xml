<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <!-- must have this -->
    <bean id="locationUCCImpl" class="minestar.mine.uifacade.location.impl.LocationUCCImpl"
          lazy-init="true">
        <property name="waypointUCC" ref="waypointUCCImpl"/>
        <property name="mineLayoutService" ref="mineLayoutServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerLocationUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Location UCC"/>
        <constructor-arg value="minestar.mine.uifacade.location.LocationUCCFacade"/>
        <constructor-arg ref="locationUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="locationUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="locationUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="locationUCC"/>
        <property name="service" ref="locationUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.location.LocationUCCFacade"/>
    </bean>

</beans>
