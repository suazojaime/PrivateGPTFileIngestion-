<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="991e6118-8341-48b4-a717-f74765dc4a70" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for PROD_PLAN_TASK_HIST_UUID of table PROD_PLAN_TASK_HIST as index does not exist." onFail="MARK_RAN">
            <indexExists indexName="PROD_PLAN_TASK_HIST_UUID" tableName="PROD_PLAN_TASK_HIST"/>
        </preConditions>
        <comment>MO-5909: DropIndex PROD_PLAN_TASK_HIST_UUID from PROD_PLAN_TASK_HIST (TASK_UUID,UPDATED_TIME_UTC)</comment>
        <dropIndex indexName="PROD_PLAN_TASK_HIST_UUID" tableName="PROD_PLAN_TASK_HIST"/>
        <rollback>
            <sql dbms="mssql">WITH CTE AS (SELECT ROW_NUMBER() OVER (PARTITION BY TASK_UUID, UPDATED_TIME_UTC ORDER BY %%physloc%%) AS ROW_NUM FROM PROD_PLAN_TASK_HIST) DELETE FROM CTE WHERE ROW_NUM &gt; 1</sql>
            <createIndex unique="true" indexName="PROD_PLAN_TASK_HIST_UUID" tableName="PROD_PLAN_TASK_HIST">
                <column name="TASK_UUID"/>
                <column name="UPDATED_TIME_UTC"/>
            </createIndex>
        </rollback>
    </changeSet>
    
</databaseChangeLog>
