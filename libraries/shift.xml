<?xml version="1.0" encoding="us-ascii" standalone="no"?>
<!DOCTYPE classdefs SYSTEM "metadata.dtd">

<classdefs>
    <classdef name="minestar.platform.domain.calendar.Shift" keyproperty="name" >
        <propertydef name="startTime">
            <validationdef name="required" type="shared"/>
            <description>The start time of the shift.</description>
        </propertydef>
        <propertydef name="endTime">
            <validationdef name="required" type="shared"/>
            <description>The end time of the shift.</description>
        </propertydef>
        <propertydef name="type">
            <validationdef name="required" type="shared"/>
            <description>The type of shift.</description>
        </propertydef>
        <propertydef name="crewRef">
            <description>A reference to the rostered crew for the shift.</description>
        </propertydef>
        <propertydef name="crew">
            <typedef>
                <javaclass name="minestar.platform.domain.roster.Crew"/>
            </typedef>
            <description>The rostered crew for the shift.</description>
        </propertydef>
        <propertydef name="name"> 
            <description>The name of the shift.</description>
        </propertydef>
        <propertydef name="day">
            <description>The day of the shift.</description>
        </propertydef>
        <propertydef name="week">
            <description>The week of the shift.</description>
        </propertydef>
        <propertydef name="month">
            <description>The month of the shift.</description>
        </propertydef>
        <propertydef name="quarter">
            <description>The year quarter of the shift.</description>
        </propertydef>
        <propertydef name="half">
            <description>The year half of the shift.</description>
        </propertydef>
        <propertydef name="year">
            <description>The year of the shift.</description>
        </propertydef>
    </classdef>

</classdefs>
