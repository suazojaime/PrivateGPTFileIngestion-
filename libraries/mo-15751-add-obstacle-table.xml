<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1bb1aa3f-16b5-437c-9cd7-6d6853a22a41" author="MineStar" context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for OBSTACLE as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="OBSTACLE"/>
            </not>
        </preConditions>
        <comment>MO-15751: CreateTable OBSTACLE</comment>
        <createTable remarks="An obstacle that was detected by a machine" tableName="OBSTACLE">
            <column name="OBSTACLE_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="MACHINE_ID" type="INT" remarks="Id of the machine that detected the obstacle">
                <constraints nullable="false"/>
            </column>
            <column name="REFERENCE" type="BIGINT" remarks="Obstacle reference">
                <constraints nullable="false"/>
            </column>
            <column name="TIMESTAMP_UTC" type="DATETIME2" remarks="The time at which the obstacle was detected">
                <constraints nullable="false"/>
            </column>
            <column name="GEOMETRY" type="CLOB" remarks="The geometry/boundary of the obstacle">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="OBSTACLE_OID" constraintName="OBSTACLE_PK" tableName="OBSTACLE"/>
        <createIndex unique="false" indexName="OBSTACLE_MACHINE_REF_IX" tableName="OBSTACLE">
            <column name="MACHINE_ID"/>
            <column name="REFERENCE"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
