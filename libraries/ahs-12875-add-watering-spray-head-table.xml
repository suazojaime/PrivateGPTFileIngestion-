    <changeSet id="6a066308-52e4-4a11-a9b8-0bc1a5787626" author="MineStar" context="Pit_Link/Pit_Link_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for WDS_SPRAY_HEAD as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="WDS_SPRAY_HEAD"/>
            </not>
        </preConditions>
        <comment>AHS-12875: CreateTable WDS_SPRAY_HEAD</comment>
        <createTable tableName="WDS_SPRAY_HEAD">
            <column name="OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="SPRAY_HEAD_ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="SPRAY_HEAD_NAME" type="VARCHAR(255)"/>
            <column name="START_X_OFFSET" type="DOUBLE"/>
            <column name="START_Y_OFFSET" type="DOUBLE"/>
            <column name="END_X_OFFSET" type="DOUBLE"/>
            <column name="END_Y_OFFSET" type="DOUBLE"/>
        </createTable>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    <changeSet id="7786054a-239f-4b67-ad25-3295ac841829" author="MineStar" context="Pit_Link/Pit_Link_Management" failOnError="false">
        <preConditions onFailMessage="Ignored AddForeignKeyConstraint for WDS_SPRAY_HEAD_OID_FK to table WDS_SPRAY_HEAD as (1) the source or referenced column does not exist, or (2) the foreignKey already exists." onFail="MARK_RAN">
            <columnExists tableName="WDS_SPRAY_HEAD" columnName="OID"/>
            <columnExists tableName="MACHINECLASS" columnName="MACHINECLASS_OID"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="WDS_SPRAY_HEAD" foreignKeyName="WDS_SPRAY_HEAD_OID_FK"/>
            </not>
        </preConditions>
        <comment>AHS-12875: AddForeignKeyConstraint WDS_SPRAY_HEAD_OID_FK to WDS_SPRAY_HEAD (OID)</comment>
        <sql>DELETE FROM WDS_SPRAY_HEAD WHERE OID IS NOT NULL AND NOT EXISTS (SELECT 'x' FROM MACHINECLASS WHERE MACHINECLASS.MACHINECLASS_OID = WDS_SPRAY_HEAD.OID)</sql>
        <addForeignKeyConstraint baseTableName="WDS_SPRAY_HEAD" baseColumnNames="OID" constraintName="WDS_SPRAY_HEAD_OID_FK" referencedTableName="MACHINECLASS" referencedColumnNames="MACHINECLASS_OID" onDelete="NO ACTION"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="WDS_SPRAY_HEAD" constraintName="WDS_SPRAY_HEAD_OID_FK"/>
        </rollback>
    </changeSet>
