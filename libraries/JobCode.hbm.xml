<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" default-access="field" schema="model">

    <class name="minestar.production.domain.JobCode" table="JOBCODE">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=JOBCODE_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
            </meta>
        <meta attribute="index">
            name=JOBCODE_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A job code definition.</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="JOBCODE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="description">The ID value of the job code.</meta>
            <meta attribute="universe-type-measure">false</meta>
        </property>

        <property name="active" type="boolean" column="ACTIVE" not-null="true">
            <meta attribute="description">Is this job code active?</meta>
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The external reference value of the job code.</meta>
        </property>

        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The external reference description of the job code.</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">The name of the job code.</meta>
        </property>

        <property name="description" type="string" column="DESCRIPTION" length="4000">
            <meta attribute="description">The description of the job code.</meta>
        </property>

        <property name="jobCodeComment" type="string" column="JOBCODE_COMMENT" length="4000">
            <meta attribute="description">An optional job code comment.</meta>
        </property>

        <many-to-one name="parentGroup" class="minestar.production.domain.JobCodeGroupReference" column="PARENT_GROUP_OID">
            <meta attribute="description">A reference to the parent group</meta>
        </many-to-one>

        <property name="modelUpdateVersion"
                  type="long">
            <meta attribute="description">The mine model update version when the job code was created/modified.</meta>
            <column name="MODEL_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the job code was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <!-- associations -->
        <set name="associations" table="JOB_CODE_ASSOCIATION" fetch="subselect">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="description">A value to associate a particular Job Code with a type of equipment.</meta>
            <meta attribute="alias" inherit="false">association</meta>
            <meta attribute="index-alias">machineCategory</meta>
            <meta attribute="view-reference">minestar.pitlink.domain.machine.MachineCategoryImpl</meta>

            <cache usage="read-write" region="model"/>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.pitlink.domain.machine.MachineCategoryReference" column="MACHINE_CATEGORY_OID"/>
        </set>

    </class>

    <!-- ****************************************************************************** -->
    <!-- JobCodeReference -->
    <!-- ****************************************************************************** -->
    <class name="minestar.production.domain.JobCodeReference"
           table="JOBCODE"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">JOBCODE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a job code</meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="JOBCODE_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="id" type="long" column="ID" not-null="true"/>
    </class>

</hibernate-mapping>
