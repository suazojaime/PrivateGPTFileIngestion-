<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.pitlink.domain.StandardMessage" table="STANDARDMESSAGE">

        <!--<meta attribute="alias" inherit="false">MsgStandard</meta>-->
        <!--<meta attribute="lookupExpr" inherit="false">msgtext</meta>-->

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=STANDARDMESSAGE_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A standard field message</meta>
        
        <id name="OID" type="long" column="STANDARDMESSAGE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="description">The message Id.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="msgText" type="string" column="MSGTEXT" length="254" not-null="true">
            <meta attribute="description">The message text.</meta>
        </property>

        <property name="msgTitle" type="string" column="MSGTITLE" length="254">
            <meta attribute="description">The message window title.</meta>
        </property>

        <property name="msgType" type="minestar.pitlink.domain.MessageType$UserType" column="MSGTYPE" not-null="true">
            <meta attribute="description">The message type: 1=Information, 2=Warning, 3=Question, 4=Stop, 5=Error</meta>
            <meta attribute="choices" inherit="false">choice:officeMsgType</meta>
        </property>

        <property name="officeAck" type="boolean" column="OFFICEACK" not-null="true">
            <meta attribute="description">True if the office must acknowledge the message.</meta>
        </property>

        <property name="respType" type="minestar.pitlink.domain.ResponseType$UserType" column="RESPTYPE" not-null="true">
            <meta attribute="description">The valid message response types: 0=None, 1=OK, 2=OK or Cancel, 3=Yes or No.</meta>
            <meta attribute="choices" inherit="false">choice:officeMsgResponse</meta>
        </property>

        <property name="modelUpdateVersion"
                  type="long">
            <meta attribute="description">The mine model update version when the standard message was created/modified.</meta>
            <column name="MODEL_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the standard message was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <many-to-one name="replyStdMsgRef" class="minestar.pitlink.domain.StandardMessageReference" column="REPLYSTDMSG">
            <meta attribute="alias">replyStdMsg</meta>
            <meta attribute="ignoreManyToOneLookupExpr">true</meta>
            <meta attribute="description">The standard message to respond with when any messages of this type are
                received from machines in the field.
            </meta>
        </many-to-one>

    </class>

    <!-- A lightweight reference to a StandardMessage -->
    <class name="minestar.pitlink.domain.StandardMessageReference" table="STANDARDMESSAGE" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">STANDARDMESSAGE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a StandardMessage.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="STANDARDMESSAGE_OID"/>
        <property name="id" type="long" column="ID" not-null="true"/>
    </class>

</hibernate-mapping>
