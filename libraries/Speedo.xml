<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="speedoLogging" class="com.mincom.env.service.server.gadget.SpeedoLoggingBean" init-method="init">
        <constructor-arg name="speedo" ref="speedo"/>
    </bean>

    <bean id="deadlockDetection" class="com.mincom.env.service.server.gadget.DeadlockLoggingBean" init-method="init">
        <constructor-arg name="taskScheduler" ref="minestarTaskScheduler"/>
    </bean>

    <bean id="busyThreadDetection" class="com.mincom.env.service.server.gadget.BusyThreadDetectionBean" init-method="init">
        <constructor-arg name="taskScheduler" ref="minestarTaskScheduler"/>
    </bean>

    <bean id="garbageCollectionDetection" class="com.mincom.env.service.server.gadget.GarbageCollectionDetectionBean" init-method="init">
        <constructor-arg name="speedo" ref="speedo"/>
    </bean>

</beans>
