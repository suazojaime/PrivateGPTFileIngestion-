<CycleValidation>

    <cycle>

        <!--
        Requirements
        a) cycles are time contiguous
        <contiguous/>

        b) certain attributes are not NULL as per the cycle assistant
        <test attribute="truck" null="false"/>
        <test attribute="truckOperator" null="false"/>
        <test attribute="endSinkLocation" null="false"/>
        -->

        <contiguous/>

        <test attribute="truck" null="false"/>
        <test attribute="truckOperator" null="false"/>
        <test attribute="endSinkLocation" null="false"/>
        <test attribute="startTime" null="false"/>
        <test attribute="endTime" null="false"/>
        <test attribute="activities" null="false"/>

    </cycle>


    <activity>

        <!--
        Requirements
         a) time contiguous - no gaps
         <contiguous/>

         b) fundamentals exist
         <test attribute="Travelling.Empty" null="false"/>
         <test attribute="Loading" null="false"/>
         <test attribute="Travelling.Full" null="false"/>
         <test attribute="Dumping" null="false"/>

         c) correct order
         <test attribute="Travelling.Empty" index="1"/>
         <test attribute="Queueing.At.Source" index="2"/>
         <test attribute="Spotting.At.Source" index="3"/>
         <test attribute="Loading" index="4"/>
         <test attribute="TravelFullAtSource" index="5"/>
         <test attribute="Travelling.Full" index="6"/>
         <test attribute="QueueAtSink" index="7"/>
         <test attribute="SpotAtSink" index="8"/>
         <test attribute="Dumping" index="9"/>

         d) activite times are within tolorances
         <test attribute="Dumping" requiredmin="5000" requiredMax="120000"/>
         <test attribute="Loading" requiredmin="5000" requiredMax="120000"/>
         <test attribute="Spotting" requiredmin="0" requiredMax="120000"/>


         e) Activities either side of a delay are identical
         <test attribute="Delay" interruptsOnlyOneActivity="true"/>


         f) travel empty and travel full times match truck class for road
         <test attribute="Travelling.Full" requiredmin="10000" requiredMax="120000"/>
         <test attribute="Travelling.Empty" requiredmin="10000" requiredMax="120000"/>
        -->

        <contiguous/>

        <test attribute="Travelling.Empty"   index="1" null="false" requiredmin="10000" requiredMax="1000000"/>
        <test attribute="Queueing.At.Source" index="2"/>
        <test attribute="Spotting.At.Source" index="3"              requiredmin="5000" requiredMax="120000"/>
        <test attribute="Loading"            index="4" null="false" requiredmin="5000" requiredMax="400000"/>
        <test attribute="TravelFullAtSource" index="5"/>
        <test attribute="Travelling.Full"    index="6" null="false" requiredmin="10000" requiredMax="1000000"/>
        <test attribute="Queueing.At.Sink"   index="7"/>
        <test attribute="Spotting.At.Sink"   index="8"              requiredmin="5000" requiredMax="120000"/>
        <test attribute="Dumping"            index="9" null="false" requiredmin="5000" requiredMax="120000"/>

        <test attribute="Delay" interruptsOnlyOneActivity="true"/>

    </activity>


</CycleValidation>
