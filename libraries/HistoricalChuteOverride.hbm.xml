<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="historical">

    <class name="minestar.production.domain.underground.chute.HistoricalChuteOverrideImpl"
           proxy="minestar.production.domain.underground.chute.HistoricalChuteOverride"
           table="HISTORICAL_CHUTE_OVERRIDE">

        <meta attribute="alias" inherit="false">HISTORICALCHUTEOVERRIDE</meta>
        <meta attribute="description">A historical record of chute level overrides.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="historical"/>

        <id name="OID"
            type="java.lang.Long"
            column="CHUTE_DATA_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one name="chute"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     column="CHUTE"
                     not-null="true"
                     index="IDX_CHUTE_TIMESTAMP">
            <meta attribute="description">
                A reference to the chute (MSMODEL.MACHINE) that this historical record applies to.
            </meta>
        </many-to-one>

        <property name="level"
                  column="CHUTE_LEVEL">
            <meta attribute="alias">CHUTE_LEVEL</meta>
            <meta attribute="description">The amount of ore that the chute is set.</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <many-to-one name="user"
                     class="minestar.platform.domain.user.UserReference"
                     column="USER1"
                     not-null="true">
            <meta attribute="description">
                A reference to the user (MSMODEL.USER) who applied the override.
            </meta>
        </many-to-one>

        <property name="timestamp"
                  type="TimestampType"
                  column="TIMESTAMP_UTC"
                  not-null="true"
                  index="IDX_CHUTE_TIMESTAMP">
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when this override became active.</meta>
            <meta attribute="utc-description">
                The UTC timestamp of when this override became active.
            </meta>
        </property>


        <property name="expiryTimestamp"
                  type="TimestampType"
                  column="EXPIRY_TIMESTAMP_UTC"
                  not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when this override will expire.</meta>
            <meta attribute="utc-description">
                The UTC timestamp of when this override will expire.
            </meta>
        </property>
    </class>

</hibernate-mapping>
