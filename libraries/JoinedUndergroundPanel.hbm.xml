<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.area.JoinedUndergroundAreaImpl"
           proxy="minestar.mine.domain.minemodel.underground.area.JoinedUndergroundArea"
           table="JOINED_UNDERGROUND_AREA"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">JOINEDUNDERGROUNDAREA</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            Two or more underground areas that are currently acting as one for production activities.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="JOINED_AREA_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name"
                  type="java.lang.String"
                  column="JOINED_AREA_NAME"
                  length="254">
            <meta attribute="description">Concatenated name of sub-areas.</meta>
            <!-- Nullable because this can be recalculated when the value is null. -->
        </property>

        <set name="subAreas" inverse="true">
            <meta attribute="description">The "real" underground areas that this area is joining.</meta>

            <key column="JOINED_AREA_OID" />
            <one-to-many class="minestar.mine.domain.minemodel.underground.area.UndergroundAreaReference"/>
        </set>
    </class>

    <!-- A lightweight reference to a joined underground area -->
    <class name="minestar.mine.domain.minemodel.underground.area.JoinedUndergroundAreaReference"
           table="JOINED_UNDERGROUND_AREA"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">JOINEDUNDERGROUNDAREAREF</meta>
        <meta attribute="description">A minimal reference to a joined underground area.</meta>

        <cache usage="read-only" region="model" />

        <id name="OID"
            type="long"
            column="JOINED_AREA_OID"
            access="field" />

        <property name="name"
                  type="java.lang.String"
                  column="JOINED_AREA_NAME"
                  access="field"/>
    </class>

</hibernate-mapping>
