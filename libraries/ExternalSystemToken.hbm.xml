<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.platform.domain.external.system.ExternalSystemTokenImpl"
           proxy="minestar.platform.domain.external.system.ExternalSystemToken"
           table="EXTERNAL_SYSTEM_TOKEN"
           dynamic-update="true">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=EXTERNAL_SYSTEM_OID
            unique=true
            columns=OID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">Configuration details for a scheduled task to poll external systems</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name"
                  column="NAME"
                  type="java.lang.String"
                  length="255">
            <meta attribute="description">The name of the JSON Token.</meta>
        </property>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this token is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="address"
                  column="COMMS_URL"
                  type="java.lang.String"
                  length="255">
            <meta attribute="description">The URL of the connecting web service.</meta>
        </property>

        <property name="jsonToken"
                  column="JSON_TOKEN"
                  type="java.lang.String"
                  length="4000">
            <meta attribute="description">The JSON token used to authenicate the external system.</meta>
        </property>

        <property name="roles" type="string" column="ROLES" length="254">
            <meta attribute="choices" inherit="false">choice:userRole</meta>
            <meta attribute="defaultValue">Member</meta>
            <meta attribute="description">The roles associated with the token.</meta>
        </property>

        <property name="tokenExpiry" type="TimestampType">
            <meta attribute="timestamp">true</meta>
            <meta attribute="utc-description">The utc time that the external system token expires.</meta>
            <meta attribute="description">The utc time that the external system token expires.</meta>
            <meta attribute="view-localtime">true</meta>
            <column name="TOKEN_EXPIRY"/>
        </property>

        <property name="lastConnection" type="TimestampType">
            <meta attribute="timestamp">true</meta>
            <meta attribute="utc-description">The utc time the external system connected.</meta>
            <meta attribute="description">The utc time the external system connected.</meta>
            <meta attribute="view-localtime">true</meta>
            <column name="LAST_CONNECTION"/>
        </property>
    </class>
</hibernate-mapping>
