                <column name="COASTING_BURN_RATE" type="DOUBLE"/>
                <column name="LOWER_GRADIENT_FULL" type="INT">
                    <constraints nullable="false"/>
                </column>
                <column name="UPPER_GRADIENT_FULL" type="INT">
                    <constraints nullable="false"/>
                </column>
                <column name="LOWER_GRADIENT_EMPTY" type="INT">
                    <constraints nullable="false"/>
                </column>
                <column name="UPPER_GRADIENT_EMPTY" type="INT">
                    <constraints nullable="false"/>
                </column>
            </createTable>
            <addPrimaryKey columnNames="OID" constraintName="MACHINECLASS_COASTING_BURN_PK" tableName="MACHINECLASS_COASTING_BURN"/>
        </rollback>
    </changeSet>

