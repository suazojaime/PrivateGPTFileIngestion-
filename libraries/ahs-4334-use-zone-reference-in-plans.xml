        <addForeignKeyConstraint baseTableName="PLAN_MODEL" baseColumnNames="ASSOCIATED_ZONE" constraintName="PLAN_MODEL_ASSOCIATED_ZONE_FK" referencedTableName="ZONE" referencedColumnNames="ZONE_OID" onDelete="NO ACTION"/>
