    <changeSet id="bbd9171b-e4f7-4527-ac25-5da8a8a8693b" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddNotNullConstraint for DELAY.ACKNOWLEDGE as column does not exist or is already not-nullable"
                onFail="MARK_RAN">
            <ext:columnIsNullable tableName="DELAY" columnName="ACKNOWLEDGE"/>
        </preConditions>
        <comment>AHS-8369: AddNotNullConstraint to DELAY.ACKNOWLEDGE</comment>
        <sql>UPDATE DELAY SET ACKNOWLEDGE = 0 WHERE ACKNOWLEDGE IS NULL</sql>
        <addNotNullConstraint columnName="ACKNOWLEDGE" columnDataType="BOOLEAN" tableName="DELAY"/>
        <rollback>
            <dropNotNullConstraint tableName="DELAY" columnName="ACKNOWLEDGE" columnDataType="BOOLEAN"/>
        </rollback>
    </changeSet>

