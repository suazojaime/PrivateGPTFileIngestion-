<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="materialUCCImpl" class="minestar.mine.uifacade.material.impl.MaterialUCCImpl"
          lazy-init="true">
        <property name="materialManagementService" ref="materialManagementServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerMaterialUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Material UCC"/>
        <constructor-arg value="minestar.mine.uifacade.material.MaterialUCCFacade"/>
        <constructor-arg ref="materialUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="materialUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="materialUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="materialUCC"/>
        <property name="service" ref="materialUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.material.MaterialUCCFacade"/>
    </bean>

</beans>
