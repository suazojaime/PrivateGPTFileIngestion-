    <changeSet id="f58bbf1a-7196-48cf-80f0-177faa570a46" author="MineStar" context="Production/Production_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for HGB_OVERRIDE as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="HGB_OVERRIDE"/>
            </not>
        </preConditions>
        <comment>FUG-6540: CreateTable HGB_OVERRIDE</comment>
        <createTable tablespace="MW_ENT" remarks="A historical record of grade block overrides." tableName="HGB_OVERRIDE">
            <column name="GB_OVERRIDE_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="GRADE_BLOCK" type="BIGINT" remarks="A reference to the grade (MSMODEL.GRADE) that this historical record applies to.">
                <constraints nullable="false"/>
            </column>
            <column name="USER1" type="BIGINT" remarks="A reference to the user (MSMODEL.USER) who applied the override.">
                <constraints nullable="false"/>
            </column>
            <column name="TIMESTAMP_UTC" type="DATETIME2" remarks="The timestamp of when this override became active.">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRY_TIMESTAMP_UTC" type="DATETIME2" remarks="The timestamp of when this override will expire.">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="GB_OVERRIDE_OID" constraintName="HGB_OVERRIDE_PK" tablespace="MW_IDXENT" tableName="HGB_OVERRIDE"/>
        <createIndex unique="false" tableName="HGB_OVERRIDE" indexName="IDX_GB_TIMESTAMP">
            <column name="GRADE_BLOCK"/>
            <column name="TIMESTAMP_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
