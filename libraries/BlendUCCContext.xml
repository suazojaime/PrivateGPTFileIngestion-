<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- internal cache beans, not available for remoting or serviceFactory -->
    <bean id="destinationBlendStatusUpdateCacheImpl" class="minestar.mine.uifacade.blend.collection.DestinationBlendStatusUpdateCache"
          lazy-init="true" parent="cacheParent">
        <property name="blendingService" ref="blendingServiceImpl"/>
    </bean>


    <!-- must have this -->
    <bean id="blendUCCImpl" class="minestar.mine.uifacade.blend.impl.BlendUCCImpl"
          lazy-init="true">
        <property name="destinationBlendStatusUpdateCache" ref="destinationBlendStatusUpdateCacheImpl"/>
        <property name="blendingService" ref="blendingServiceImpl"/>
        <property name="materialManagementService" ref="materialManagementServiceImpl"/>
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
    </bean>

    <bean id="registerBlendUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Blend UCC"/>
        <constructor-arg value="minestar.mine.uifacade.blend.BlendUCCFacade"/>
        <constructor-arg ref="blendUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="blendUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="blendUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="blendUCC"/>
        <property name="service" ref="blendUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.blend.BlendUCCFacade"/>
    </bean>

</beans>
