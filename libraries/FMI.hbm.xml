<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="minestar.health.api.definition" schema="model" default-access="field">

    <class name="FmiDef" table="FMI_DEF">
        <meta attribute="noDatabaseMetadata" inherit="false">true</meta>
        <meta attribute="lookupExpr" inherit="false">lookupResource.fmi.description.expr</meta>

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>

        <meta attribute="viewproperty-id" inherit="false">
            type=long
            expression=lookupResource.fmi.id.query
        </meta>

        <meta attribute="viewproperty-description" inherit="false">
            type=string
            expression=lookupResource.fmi.description.query
        </meta>

        <meta attribute="viewproperty-universeClassName" inherit="false">
            type=string
            expression=lookupResource.null.query
        </meta>
        <meta attribute="viewproperty-family" inherit="false">
            type=string
            expression=lookupResource.null.query
        </meta>

        <cache usage="read-write" region="fmiDef"/>

        <id name="oid" type="long" column="OID">
            <generator class="assigned"/>
        </id>

        <property name="name" type="java.lang.String" column="NAME" length="64"/>

    </class>
</hibernate-mapping>
