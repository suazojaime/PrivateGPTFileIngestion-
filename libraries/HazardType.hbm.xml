<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class
            name="minestar.mine.domain.minemodel.HazardType"
            table="HAZARD_TYPE"
            dynamic-update="true">

        <meta attribute="view-master">true</meta>

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=HAZARDTYPE_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=HAZARDTYPE_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="description">The definition of a mine model hazard type</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="HAZARDTYPE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="description">An automatically generated unique ID value for this hazard type.</meta>
        </property>

        <property name="active" type="boolean" column="IS_ACTIVE" not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">Is this hazard type active</meta>
        </property>

        <property name="name" type="string" column="NAME" not-null="true">
            <meta attribute="description">The hazard types name</meta>
        </property>

        <property name="iconUrl" type="string" column="ICON_URL">
            <meta attribute="description">The URL if the icon for this hazard type</meta>
        </property>

        <property name="length" column="LENGTH">
            <meta attribute="description">The length of the default rectangle</meta>
            <type name="quantity">
                <param name="unitType">length</param>
            </type>
        </property>

        <property name="width" column="WIDTH">
            <meta attribute="description">The length of the default rectangle</meta>
            <type name="quantity">
                <param name="unitType">length</param>
            </type>
        </property>

        <property name="layerUpdateVersion" type="long" access="field">
            <meta attribute="description">The layer update version when the hazard type was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <component name="flags" class="minestar.autonomy.util.DataFlags">
            <meta attribute="description">Zone flags.</meta>
            <property name="bedDown" type="boolean" access="field">
                <column name="BED_UP_DURING_TRAVEL" not-null="true" default="0"/>
            </property>
            <property name="level1EntryIncident" type="boolean" access="field">
                <column name="LEVEL_ENTRY_INCIDENT" not-null="true" default="0"/>
            </property>
            <property name="level1ExitIncident" type="boolean" access="field">
                <column name="LEVEL_EXIT_INCIDENT" not-null="true" default="0"/>
            </property>
            <property name="beepIfOtherMachinesEnter" type="boolean" access="field">
                <column name="MACHINE_ENTRY_BEEP" not-null="true" default="0"/>
            </property>
            <property name="beepIfOtherMachinesArePresent" type="boolean" access="field">
                <column name="MACHINE_PRESENT_BEEP" not-null="true" default="0"/>
            </property>
            <property name="silenceProximityAlarms" type="boolean" access="field">
                <column name="SILENCE_PROXIMITY_ALARMS" not-null="true" default="0"/>
            </property>
            <property name="silenceRadarAlarms" type="boolean" access="field">
                <column name="SILENCE_RADAR_ALARMS" not-null="true" default="0"/>
            </property>
            <property name="mannedExclusionZone" type="boolean" access="field">
                <column name="MANNED_EXC_ZONE" not-null="true" default="0"/>
            </property>
            <property name="cleanUp" type="boolean" access="field">
                <column name="CLEAN_UP" not-null="true" default="0"/>
            </property>
            <property name="canBeRemovedByPanel" type="boolean" access="field">
                <column name="REMOVE_BY_PANEL" not-null="true" default="0"/>
            </property>
            <property name="autonomousInclusionZone" type="boolean" access="field">
                <column name="AUTONOMOUS_INC_ZONE" not-null="true" default="0"/>
            </property>
            <property name="autonomousExclusionZone" type="boolean" access="field">
                <column name="AUTONOMOUS_EXC_ZONE" not-null="true" default="0"/>
            </property>
            <property name="outsideAOZ" type="boolean" access="field">
                <column name="OUTSIDE_AOZ" not-null="true"/>
            </property>
            <property name="multicastUpdateZone" type="boolean" access="field">
                <column name="MULTICAST_UPDATE_ZONE" not-null="true" default="0"/>
            </property>
            <property name="passable" type="boolean" access="field">
                <column name="PASSABLE" not-null="true" default="0"/>
            </property>
        </component>

        <property name="displayColorRed" column="DISPLAY_COLOR_RED" type="int"/>
        <property name="displayColorBlue" column="DISPLAY_COLOR_Blue" type="int"/>
        <property name="displayColorGreen" column="DISPLAY_COLOR_GREEN" type="int"/>

        <property name="speedLimit" column="SPEED_LIMIT" not-null="true">
            <meta attribute="description">The speed limit for any machine that travels for this hazard type</meta>
            <meta attribute="defaultValue">0</meta>
            <type name="quantity">
                <param name="unitType">speed</param>
            </type>
        </property>

        <property name="messageOnEntry" type="string" column="MSG_ON_ENTRY">
            <meta attribute="description">Informational-only pop-up</meta>
        </property>

        <property name="messageOnExit" type="string" column="MSG_ON_EXIT">
            <meta attribute="description">Informational-only pop-up</meta>
        </property>

        <list name="includedMachineTypes" table="HAZARD_TYPE_MACHINE_CLASS_IN">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="description">Machine classes included in this hazard type.</meta>
            <meta attribute="view-reference">minestar.pitlink.domain.machine.MachineClassImpl</meta>

            <key column="HAZARDTYPE_OID" not-null="true"/>
            <list-index column="SORT_ORDER"/>
            <many-to-many column="MACHINECLASS_OID" class="minestar.pitlink.domain.machine.MachineClassReference"/>
        </list>

    </class>

    <!-- A lightweight reference to a HazardType -->
    <class name="minestar.mine.domain.minemodel.HazardTypeReference" table="HAZARD_TYPE" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">HAZARD_TYPE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a hazard type.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="HAZARDTYPE_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="id" type="long" column="ID" not-null="true"/>
    </class>
    
</hibernate-mapping>
