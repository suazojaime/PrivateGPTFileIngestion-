<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="c3695eff-a17c-490f-9d9e-3f1040a03d33" author="MineStar" context="Underground/Underground_Management"
               failOnError="false">
        <preConditions
                onFailMessage="Ignored AddColumn for DRAW_POINT to table ORE_PASS as table does not exist or column already exists."
                onFail="MARK_RAN">
            <tableExists tableName="ORE_PASS"/>
            <not>
                <columnExists tableName="ORE_PASS" columnName="DRAW_POINT"/>
            </not>
        </preConditions>
        <comment>MO-5500: AddColumn ORE_PASS.DRAW_POINT</comment>
        <addColumn tableName="ORE_PASS">
            <column name="DRAW_POINT" type="BIGINT"
                    remarks="A reference to the draw point that this ore pass is connected to."/>
        </addColumn>
    </changeSet>
    <changeSet id="b20a2903-4690-4c2d-83ac-265ea3509188" author="MineStar" context="Underground/Underground_Management"
               failOnError="false">
        <preConditions
                onFailMessage="Ignored AddForeignKeyConstraint for ORE_PASS_DRAW_POINT_FK to table ORE_PASS as (1) the source or referenced column does not exist, or (2) the foreignKey already exists."
                onFail="MARK_RAN">
            <columnExists tableName="ORE_PASS" columnName="DRAW_POINT"/>
            <columnExists tableName="DRAW_POINT" columnName="DRAWPOINT_OID"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="ORE_PASS" foreignKeyName="ORE_PASS_DRAW_POINT_FK"/>
            </not>
        </preConditions>
        <comment>MO-5500: AddForeignKeyConstraint ORE_PASS_DRAW_POINT_FK to ORE_PASS (DRAW_POINT)</comment>
        <sql>UPDATE ORE_PASS
             SET DRAW_POINT = NULL
             WHERE DRAW_POINT IS NOT NULL
               AND NOT EXISTS(SELECT 'x' FROM DRAW_POINT WHERE DRAW_POINT.DRAWPOINT_OID = ORE_PASS.DRAW_POINT)</sql>
        <addForeignKeyConstraint baseTableName="ORE_PASS" baseColumnNames="DRAW_POINT"
                                 constraintName="ORE_PASS_DRAW_POINT_FK" referencedTableName="DRAW_POINT"
                                 referencedColumnNames="DRAWPOINT_OID" onDelete="NO ACTION"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="ORE_PASS" constraintName="ORE_PASS_DRAW_POINT_FK"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
