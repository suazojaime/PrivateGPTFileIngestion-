<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet id="fef9ae5b-cdf5-4a7d-acfa-0fe3282fa504" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored DropPrimaryKey for BLEND_CRITERIA_MATERIAL_PK of table BLEND_CRITERIA_MATERIAL as primaryKey does not exist."
                onFail="MARK_RAN">
            <primaryKeyExists primaryKeyName="BLEND_CRITERIA_MATERIAL_PK" tableName="BLEND_CRITERIA_MATERIAL"/>
        </preConditions>
        <comment>FLT-7669: DropPrimaryKey BLEND_CRITERIA_MATERIAL_PK from BLEND_CRITERIA_MATERIAL (BLEND_OID,MATERIAL_OID,MINIMUM_VALUE,MAXIMUM_VALUE)
        </comment>
        <dropPrimaryKey constraintName="BLEND_CRITERIA_MATERIAL_PK" tableName="BLEND_CRITERIA_MATERIAL"/>
        <rollback>
            <addPrimaryKey columnNames="BLEND_OID,MATERIAL_OID,MINIMUM_VALUE,MAXIMUM_VALUE"
                           constraintName="BLEND_CRITERIA_MATERIAL_PK" tableName="BLEND_CRITERIA_MATERIAL"/>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

    <changeSet id="4179f6ca-4e76-4bc0-a401-076dc796e27b" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddPrimaryKey for BLEND_CRITERIA_MATERIAL_PK to table BLEND_CRITERIA_MATERIAL as table does not exist or primaryKey already exists."
                onFail="MARK_RAN">
            <tableExists tableName="BLEND_CRITERIA_MATERIAL"/>
            <not>
                <primaryKeyExists primaryKeyName="BLEND_CRITERIA_MATERIAL_PK" tableName="BLEND_CRITERIA_MATERIAL"/>
            </not>
        </preConditions>
        <comment>FLT-7669: AddPrimaryKey BLEND_CRITERIA_MATERIAL_PK to BLEND_CRITERIA_MATERIAL (BLEND_OID,MATERIAL_OID)
        </comment>
        <sql dbms="oracle">
            DELETE FROM BLEND_CRITERIA_MATERIAL
            WHERE ROWID IN (SELECT RID FROM
                (SELECT ROWID RID, ROW_NUMBER() OVER
                    (PARTITION BY BLEND_OID, MATERIAL_OID ORDER BY ROWID) RN
                 FROM BLEND_CRITERIA_MATERIAL)
                 WHERE RN &lt;&gt; 1)
        </sql>
        <sql dbms="mssql">
            WITH CTE AS
                (SELECT ROW_NUMBER() OVER (PARTITION BY BLEND_OID, MATERIAL_OID ORDER BY %%physloc%%) AS ROW_NUM FROM BLEND_CRITERIA_MATERIAL)
            DELETE FROM CTE WHERE ROW_NUM &gt; 1
        </sql>
        <addPrimaryKey columnNames="BLEND_OID,MATERIAL_OID" constraintName="BLEND_CRITERIA_MATERIAL_PK"
                       tablespace="MW_IDXENT" tableName="BLEND_CRITERIA_MATERIAL"/>
        <rollback>
            <dropPrimaryKey constraintName="BLEND_CRITERIA_MATERIAL_PK" tableName="BLEND_CRITERIA_MATERIAL"/>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
