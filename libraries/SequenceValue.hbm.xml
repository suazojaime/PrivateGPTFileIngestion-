<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.platform.domain.SequenceValue" table="SEQUENCE_VALUE">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">Sequential number generation</meta>

        <id name="sequenceName" type="string" length="100" column="SEQUENCE_NAME">
            <generator class="assigned"/>
        </id>

        <property name="currentValue" type="long" column="CURRENT_VALUE" not-null="true">
            <meta attribute="description">The current value of this sequence.</meta>
        </property>

        <property name="chunkSize" type="long" column="CHUNK_SIZE" not-null="true">
            <meta attribute="description">The size of a chunk which can be reserved in memory.
                This should be 1 for rarely allocated sequences, and 10 or more for frequently
                allocated sequences.</meta>
        </property>

    </class>

</hibernate-mapping>
