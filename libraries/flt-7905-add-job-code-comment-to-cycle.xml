<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="3ed6db2b-5b50-4456-b5fb-428dd3ba59be" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for JOBCODE_COMMENT to table CYCLE as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLE"/>
            <not>
                <columnExists tableName="CYCLE" columnName="JOBCODE_COMMENT"/>
            </not>
        </preConditions>
        <comment>FLT-7905: AddColumn CYCLE.JOBCODE_COMMENT</comment>
        <addColumn tableName="CYCLE">
            <column name="JOBCODE_COMMENT" type="VARCHAR(4000)" remarks="The job code comment."/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
