            <tableExists tableName="LANE_REASSIGNMENT_CLASSES"/>
            <tableExists tableName="MACHINECLASS"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="LANE_REASSIGNMENT_CLASSES" foreignKeyName="LANE_REASSIGNMENT_CLASSES_FK2"/>
