        <addForeignKeyConstraint baseTableName="LANE_REASSIGNMENT_CLASSES" baseColumnNames="MACHINE_CLASS_OID" constraintName="LANE_REASSIGNMENT_CLASSES_FK2" referencedTableName="MACHINECLASS" referencedColumnNames="MACHINECLASS_OID" onDelete="NO ACTION"/>
