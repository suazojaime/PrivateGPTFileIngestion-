    <changeSet id="5d8dcbe6-408d-480a-942b-373cca038b41" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropColumn for TYPE of table LANE_REASSIGNMENT_INFO as column does not exist." onFail="MARK_RAN">
            <columnExists tableName="LANE_REASSIGNMENT_INFO" columnName="TYPE"/>
        </preConditions>
        <comment>{JIRA}: DropColumn LANE_REASSIGNMENT_INFO.TYPE</comment>
        <dropColumn columnName="TYPE" tableName="LANE_REASSIGNMENT_INFO"/>
        <rollback>
            <addColumn tableName="LANE_REASSIGNMENT_INFO">
                <column name="TYPE" type="BIGINT"/>
            </addColumn>
        </rollback>
    </changeSet>
    <changeSet id="971a0f36-fc9d-40c9-8f6e-f674eb691234" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for LANE to table LANE_REASSIGNMENT_INFO as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="LANE_REASSIGNMENT_INFO"/>
            <not>
                <columnExists tableName="LANE_REASSIGNMENT_INFO" columnName="LANE"/>
            </not>
        </preConditions>
        <comment>AHS2927: Rename lane column from TYPE to LANE.</comment>
        <addColumn tableName="LANE_REASSIGNMENT_INFO">
            <column name="LANE" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="cb5ca763-cd88-42f3-a492-0fb90cf1c7e6" author="MineStar" context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions onFailMessage="Ignored AddForeignKeyConstraint for LANE_REASSIGNMENT_INFO_LANE_FK to table LANE_REASSIGNMENT_INFO as (1) the table does not exist, or (2) the foreignKey already exists." onFail="MARK_RAN">
            <tableExists tableName="LANE_REASSIGNMENT_INFO"/>
            <tableExists tableName="LANE"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="LANE_REASSIGNMENT_INFO" foreignKeyName="LANE_REASSIGNMENT_INFO_LANE_FK"/>
            </not>
        </preConditions>
        <comment>{JIRA}: AddForeignKeyConstraint LANE_REASSIGNMENT_INFO_LANE_FK to LANE_REASSIGNMENT_INFO (LANE)</comment>
        <sql>UPDATE LANE_REASSIGNMENT_INFO SET LANE = NULL WHERE LANE IS NOT NULL AND NOT EXISTS (SELECT 'x' FROM LANE WHERE LANE.LANE_OID = LANE_REASSIGNMENT_INFO.LANE)</sql>
        <addForeignKeyConstraint baseTableName="LANE_REASSIGNMENT_INFO" baseColumnNames="LANE" constraintName="LANE_REASSIGNMENT_INFO_LANE_FK" referencedTableName="LANE" referencedColumnNames="LANE_OID" onDelete="NO ACTION"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="LANE_REASSIGNMENT_INFO" constraintName="LANE_REASSIGNMENT_INFO_LANE_FK"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
