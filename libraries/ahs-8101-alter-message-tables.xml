                onFail="MARK_RAN">
            <indexExists indexName="MESSAGEGROUP_1R" tableName="MESSAGE_GROUP"/>
        </preConditions>
        <comment>AHS-8101: DropIndex MESSAGEGROUP_1R from MESSAGE_GROUP (NAME,MESSAGE_GROUP_OID)</comment>
        <dropIndex tableName="MESSAGE_GROUP" indexName="MESSAGEGROUP_1R"/>
        <rollback>
            <createIndex unique="false" tablespace="MW_IDXENT" tableName="MESSAGE_GROUP" indexName="MESSAGEGROUP_1R">
                <column name="NAME"/>
                <column name="MESSAGE_GROUP_OID"/>
            </createIndex>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

