<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="model">

    <!-- A lightweight reference to a Machine -->
    <class name="minestar.machinetracking.domain.MachineLicenceReference"
           table="MACHINE_LICENCE"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">MACHINE_LICENCE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a machine licence.</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>
        <meta attribute="viewproperty-name" inherit="false">
            type=string
            description=The name of the machine licence.
            expression=lookupResource.machineLicence.name.query
        </meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="OID" access="field"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
    </class>

    <class name="minestar.machinetracking.domain.MachineLicence"
           table="MACHINE_LICENCE"
           lazy="false">

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>
        <meta attribute="index">
            name=MACHINELICENCE_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="import-order">10</meta>

        <meta attribute="description">An operator machine licence</meta>

        <id name="OID" type="long" column="OID" access="field">
            <generator class="assigned"/>
        </id>

        <version name="version" access="field">
            <meta attribute="description">Machine licence version</meta>
        </version>

        <property name="name" type="java.lang.String" column="NAME" length="254" not-null="true" access="field">
            <meta attribute="description">The machine licence name</meta>
        </property>

        <many-to-one name="fleetRef" class="minestar.pitlink.domain.machine.FleetReference" column="FLEET_OID" lazy="false" access="field">
            <meta attribute="alias">fleet</meta>
            <meta attribute="description">A reference to the fleet of machines to which this licence applies.</meta>
        </many-to-one>

    </class>
</hibernate-mapping>
