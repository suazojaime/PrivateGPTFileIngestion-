<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="model">

    <class name="minestar.mine.domain.minemodel.underground.inversiongoal.InversionNode"
           table="INVERSION_NODE"
           dynamic-update="true">

        <meta attribute="description">A inversion goal point.</meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id"
                  type="java.lang.Integer"
                  column="ID"
                  not-null="true">
            <meta attribute="description">The sequence ID for this node.</meta>
            <meta attribute="universe-type-measure">false</meta>
        </property>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this status is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="approach" column="APPROACH">
            <meta attribute="description">Approach Orientation</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.mine.domain.minemodel.InversionApproach</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="direction" column="DIRECTION">
            <meta attribute="description">Machine Travel Direction</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.underground.assignment.MachineDriveDirection</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">The end position for the dump macro.</meta>
            <column name="POSITION_X"/>
            <column name="POSITION_Y"/>
            <column name="POSITION_Z"/>
        </property>

        <property name="heading"
                  column="HEADING">
            <meta attribute="description">The heading to indicate the target direction.</meta>
            <meta attribute="unitType">plane angle</meta>
            <type name="quantity">
                <param name="unitType">plane angle</param>
            </type>
        </property>

        <property name="articulation"
                  column="ARTICULATION">
            <meta attribute="description">The heading to indicate the degree of articulation.</meta>
            <meta attribute="unitType">plane angle</meta>
            <type name="quantity">
                <param name="unitType">plane angle</param>
            </type>
        </property>

        <property name="speed"
                column="SPEED" >
            <meta attribute="description">The speed value associated with the node.</meta>
            <meta attribute="unitType">speed</meta>
            <type name="quantity">
                <param name="unitType">speed</param>
            </type>
        </property>

        <many-to-one
                name="goal"
                class="minestar.mine.domain.minemodel.underground.inversiongoal.InversionGoalImpl"
                column="INVERSION_GOAL_OID"
                not-null="false"
                lazy="false"
        >
            <meta attribute="description">The parent Invesion Goal.
            </meta>
        </many-to-one>

    </class>

</hibernate-mapping>
