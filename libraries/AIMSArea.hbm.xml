<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.aims.AIMSAreaImpl"
           proxy="minestar.mine.domain.minemodel.underground.aims.AIMSArea"
           table="AIMS_AREA"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">AIMSAREA</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            A AIMS Area entity
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <!-- Create foreign keys with 'on delete cascade' at the database level. -->
        <meta attribute="foreign-key">
            on-delete=CASCADE
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name"
                  type="java.lang.String"
                  column="NAME"
                  length="254"
                  not-null="true">
            <meta attribute="description">The unique, user-entered identifier for this AIMS area.</meta>
        </property>

        <property name="type" column="TYPE" not-null="true">
            <meta attribute="description">AIMS area Type</meta>
            <type name="minestar.health.domain.data.HibernateIntegerEnumType">
                <param name="enumClass">minestar.mine.domain.minemodel.underground.aims.AIMSAreaType</param>
            </type>
        </property>

        <property name="armedStatus"
                  column="ARMED_STATUS"
                  not-null="true">
            <type name="minestar.health.domain.data.HibernateIntegerEnumType">
                <param name="enumClass">minestar.mine.domain.minemodel.underground.aims.AIMSAreaArmStatus</param>
            </type>

        </property>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this area is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="modelUpdateVersion"
                  type="java.lang.Long"
                  column="MODEL_UPDATE_VERSION">
            <meta attribute="description">The is a copy of the system wide version number.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="lastModifiedDate"
                  type="TimestampType"
                  column="LAST_MODIFIED_DATE_UTC">
            <meta attribute="alias" inherit="false">LAST_MODIFIED_TIME</meta>
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when this area map was last modified by a user.</meta>
            <meta attribute="utc-description">
                The UTC timestamp of when this area map was last modified by a user.
            </meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <many-to-one name="ugArea" class="minestar.mine.domain.minemodel.underground.area.UndergroundAreaImpl" lazy="false" column = "UGAREA_OID" unique="true" not-null="true" cascade="save-update">
            <meta attribute="view-ignore">true</meta>
        </many-to-one>


        <list name="entries" table="AREA_BARRIERS" lazy="false" access="field">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="description">Barriers included in the area.</meta>

            <cache usage="read-write" region="model"/>

            <key column="OID" not-null="true"/>
            <list-index column="SORT_ORDER"/>
            <many-to-many column="BARRIER_OID" class="minestar.pitlink.domain.machine.UndergroundEntryReference" lazy="false"/>
        </list>

    </class>

    <!-- A lightweight reference to a area -->
    <class name="minestar.mine.domain.minemodel.underground.aims.AIMSAreaReference"
           table="AIMS_AREA"
           mutable="false"
           lazy="false">

        <meta attribute="alias" inherit="false">AIMSAreaReference</meta>
        <meta attribute="description">A minimal reference to a area.</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>
        <meta attribute="viewproperty-name" inherit="false">
            type=string
            description=The name for the area.
            expression=lookupResource.AIMSArea.name.query
        </meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID"
            type="long"
            column="OID"
            access="field"/>

        <property name="name"
                  type="java.lang.String"
                  column="NAME"
                  access="field"/>


    </class>

</hibernate-mapping>
