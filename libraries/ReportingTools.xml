<?xml version="1.0" encoding="us-ascii" standalone="no"?>
<!DOCTYPE classdefs SYSTEM "metadata.dtd">
<classdefs>
    <classdef name="RefreshReports">
		<implclass name='{jobUrl:com.minestar.data.utility.reports.ReportRefreshJob}'/>
        <privilege>Charting And Reporting</privilege>
        <tag>development</tag>
		<propertygroup name="standardOptions">
			<propertydef name="numProcesses" label="Number Simultaneous BO Processes">
				<typedef><type code="int"/></typedef>
				<uidef widget="spinner" custom='{setMinimum:1, setMaximum:8}'/>
                <defaultvalue>2</defaultvalue>
			</propertydef>
            <propertydef name="propertyDir" label="Root directory of properties files">
                <typedef><type code="string"/></typedef>
                <uidef widget="file" mask="directory"/>
            </propertydef>
            <propertydef name="quietMode" label="Run with reduced output logging">
                <typedef><type code="boolean"/></typedef>
                <uidef widget="checkbox"/>
            </propertydef>
			<propertydef name="executorName" label="Remote Executor">
				<typedef><type code="string"/></typedef>
                <uidef visiblewhen="false"/>
				<defaultvalue>JobExecutionService</defaultvalue>
			</propertydef>
		</propertygroup>
        <description>Refresh all or part of the Report Cache</description>
    </classdef>

</classdefs>
