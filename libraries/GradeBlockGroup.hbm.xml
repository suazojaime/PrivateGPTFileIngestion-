<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.material.GradeBlockGroupImpl"
            proxy="minestar.mine.domain.material.GradeBlockGroup"
            table="GRADEBLOCK_GROUP">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=GRADEBLOCKGROUP_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="alias" inherit="false">MiningBlockGroup</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>

        <meta attribute="description">A grouping mechanism for mining blocks, used to provide hierarchy.</meta>

        <cache usage="read-write" region="modelGradeBlockCache"/>

        <id name="OID" type="long" column="GRADEBLOCK_GROUP_OID" >
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="description">ID of the block group</meta>
            <meta attribute="universe-type-measure">false</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
			<meta attribute="description">The name of the mining block group</meta>        
		</property>

        <property name="modelUpdateVersion" type="long" column="MODEL_UPDATE_VERSION" not-null="true">
            <meta attribute="description">The mine model update version when the group was created/modified.</meta>
        </property>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the group was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="description" type="string" column="DESCRIPTION" length="254">
 			<meta attribute="description">A description of the mining  block group</meta>        
        </property>

        <property name="kValue" type="int" column="KVALUE">
            <meta attribute="description">The K value of the I,J,K external block coordinates</meta> 
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The External System Reference</meta>
        </property>
        
        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The External System Description</meta>
        </property>

        <property name="ptsFilename" type="string" column="PTS_FILE_NAME" length="254">
            <meta attribute="description">The name of the PTS file name for this group</meta>
        </property>

        <property name="terrainGroupId" type="int" column="TERRAIN_GROUP_ID" not-null="true">
            <meta attribute="description">ID from terrain</meta>
            <meta attribute="universe-type-measure">false</meta>
        </property>

        <property name="terrainSyncOk" type="boolean" column="TERRAIN_SYNC_OK" not-null="true">
            <meta attribute="description">Indicates that Terrain has been notified of changes to the material design</meta>
        </property>

        <property name="stockpile" type="boolean" column="STOCKPILE" not-null="true">
            <meta attribute="description">Stockpile flag, stockpiles are modelled as mining blocks, but has the Stockpile attribute checked indicating that it is a stockpile</meta>
        </property>

        <many-to-one name="waypoint" class="minestar.mine.domain.minemodel.WaypointReference" column="WAYPOINT_OID"/>

        <many-to-one name="destination" class="minestar.mine.domain.minemodel.LocationReference" column="DESTINATION_OID"/>

        <set name="childGroups"  table="GRADEBLOCK_GROUP_SUBDIR" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="alias" inherit="false">miningBlockGroups</meta>
            <meta attribute="description">Mining block group subdirectories</meta>
            <meta attribute="view-reference">minestar.mine.domain.material.GradeBlockGroupImpl</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.mine.domain.material.GradeBlockGroupReference" column="GRADEBLOCK_GROUP_OID"/>
        </set>

        <set name="childBlocks"  table="GRADEBLOCK_GROUP_ELEMENT" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="alias" inherit="false">miningBlocks</meta>
            <meta attribute="description">Mining block group elements</meta>
            <meta attribute="view-reference">minestar.mine.domain.material.GradeBlockImpl</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.mine.domain.material.GradeBlockReference" column="GRADEBLOCK_OID"/>
        </set>

    </class>

    <!-- A lightweight reference to a GradeBlockGroup -->
    <class name="minestar.mine.domain.material.GradeBlockGroupReference" table="GRADEBLOCK_GROUP" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">GRADEBLOCK_GROUP_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a grade block group.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="GRADEBLOCK_GROUP_OID"/>
        <property name="id" type="int" column="ID" not-null="true"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>

    </class>

</hibernate-mapping>
