<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="ad8a792f-2083-4f2b-89f2-b4df150ae8c5" author="MineStar" context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions onFailMessage="If the table PLAN_MACHINE_CLASSES already exists, drop it to change the LANE_OID to PLAN_OID." onFail="MARK_RAN">
            <tableExists tableName="PLAN_MACHINE_CLASSES"/>
        </preConditions>
        <comment>AHS-9147: DropTable PLAN_MACHINE_CLASSES</comment>
        <dropTable tableName="PLAN_MACHINE_CLASSES"/>
        <rollback>
            <comment>@EmptyRollback</comment>
        </rollback>
    </changeSet>

    <changeSet id="dd8a792f-2083-4f2b-89f2-b4df150ae8c5" author="MineStar" context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for PLAN_MACHINE_CLASSES as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="PLAN_MACHINE_CLASSES"/>
            </not>
        </preConditions>
        <comment>AHS-9147: CreateTable PLAN_MACHINE_CLASSES</comment>
        <createTable tablespace="MW_ENT" remarks="Machine classes included in the plan." tableName="PLAN_MACHINE_CLASSES">
            <column name="PLAN_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="MACHINECLASS_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="PLAN_OID,MACHINECLASS_OID" constraintName="PLAN_MACHINE_CLASSES_PK" tablespace="MW_IDXENT" tableName="PLAN_MACHINE_CLASSES"/>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    <changeSet id="dadf827a-e5dd-4261-82ab-e1c42e70e21d" author="MineStar" context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddForeignKeyConstraint for PLAN_MACHINE_CLASSES_MACHIN_FK to table PLAN_MACHINE_CLASSES as (1) the source or referenced column does not exist, or (2) the foreignKey already exists."
                onFail="MARK_RAN">
            <columnExists tableName="PLAN_MACHINE_CLASSES" columnName="MACHINECLASS_OID"/>
            <columnExists tableName="MACHINECLASS" columnName="MACHINECLASS_OID"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="PLAN_MACHINE_CLASSES" foreignKeyName="PLAN_MACHINE_CLASSES_MACHIN_FK"/>
            </not>
        </preConditions>
        <comment>AHS-9147: AddForeignKeyConstraint PLAN_MACHINE_CLASSES_MACHIN_FK to PLAN_MACHINE_CLASSES(MACHINECLASS_OID)</comment>
        <sql>DELETE FROM PLAN_MACHINE_CLASSES WHERE MACHINECLASS_OID IS NOT NULL AND NOT EXISTS (SELECT 'x' FROM MACHINECLASS WHERE MACHINECLASS.MACHINECLASS_OID = PLAN_MACHINE_CLASSES.MACHINECLASS_OID)</sql>
        <addForeignKeyConstraint baseTableName="PLAN_MACHINE_CLASSES" baseColumnNames="MACHINECLASS_OID"
                                 constraintName="PLAN_MACHINE_CLASSES_MACHIN_FK" referencedTableName="MACHINECLASS"
                                 referencedColumnNames="MACHINECLASS_OID" onDelete="NO ACTION"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="PLAN_MACHINE_CLASSES" constraintName="PLAN_MACHINE_CLASSES_MACHIN_FK"/>
        </rollback>
    </changeSet>
    <changeSet id="dabdf4b8-e7f9-491d-999a-be6e0922fb45" author="MineStar" context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddForeignKeyConstraint for PLAN_MACHINE_CLASSES_LANE_O_FK to table PLAN_MACHINE_CLASSES as (1) the source or referenced column does not exist, or (2) the foreignKey already exists."
                onFail="MARK_RAN">
            <columnExists tableName="PLAN_MACHINE_CLASSES" columnName="PLAN_OID"/>
            <columnExists tableName="PLAN_MODEL" columnName="PLAN_OID"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="PLAN_MACHINE_CLASSES" foreignKeyName="PLAN_MACHINE_CLASSES_LANE_O_FK"/>
            </not>
        </preConditions>
        <comment>AHS-9147: AddForeignKeyConstraint PLAN_MACHINE_CLASSES_LANE_O_FK to PLAN_MACHINE_CLASSES (PLAN_OID)</comment>
        <sql>DELETE FROM PLAN_MACHINE_CLASSES WHERE PLAN_OID IS NOT NULL AND NOT EXISTS (SELECT 'x' FROM PLAN_MODEL WHERE PLAN_MODEL.PLAN_OID = PLAN_MACHINE_CLASSES.PLAN_OID)</sql>
        <addForeignKeyConstraint baseTableName="PLAN_MACHINE_CLASSES" baseColumnNames="PLAN_OID"
                                 constraintName="PLAN_MACHINE_CLASSES_LANE_O_FK" referencedTableName="PLAN_MODEL"
                                 referencedColumnNames="PLAN_OID" onDelete="NO ACTION"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="PLAN_MACHINE_CLASSES" constraintName="PLAN_MACHINE_CLASSES_LANE_O_FK"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
