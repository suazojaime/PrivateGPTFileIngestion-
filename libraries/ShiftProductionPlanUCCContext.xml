<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- must have this -->
    <bean id="shiftProductionPlanUCCImpl" class="minestar.production.uifacade.shift.impl.ShiftProductionPlanUCCImpl"
          lazy-init="true" init-method="init">
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
        <property name="shiftPlanService" ref="shiftProductionPlanServiceImpl"/>
        <property name="materialManagementService" ref="materialManagementServiceImpl"/>
    </bean>

    <!-- support for serviceFactory -->
    <bean id="registerShiftProductionPlanUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Production Plan UCC"/>
        <constructor-arg value="minestar.production.uifacade.shift.ShiftProductionPlanUCCFacade"/>
        <constructor-arg ref="shiftProductionPlanUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="shiftProductionPlanUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="shiftProductionPlanUCCImpl"/>
            </bean>
        </property>
    </bean>


    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="shiftProductionPlanUCC"/>
        <property name="service" ref="shiftProductionPlanUCCProxy"/>
        <property name="serviceInterface" value="minestar.production.uifacade.shift.ShiftProductionPlanUCCFacade"/>
    </bean>

</beans>
