    <changeSet id="e7acffa4-9c20-4381-a041-083093f49972" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateUniqueIndex for INCIDENT_MESSAGE_UNIQUE to table INCIDENT_MESSAGE as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="INCIDENT_MESSAGE"/>
            <not>
                <indexExists indexName="INCIDENT_MESSAGE_UNIQUE" tableName="INCIDENT_MESSAGE"/>
            </not>
        </preConditions>
        <comment>MO-11019: CreateUniqueIndex INCIDENT_MESSAGE_UNIQUE on INCIDENT_MESSAGE (EVENT_HANDLE, EVENT_TIMESTAMP_UTC, EVENT_ACTIVITY, MACHINE, INCIDENT_TYPE)</comment>
        <sql dbms="mssql">WITH CTE AS (SELECT ROW_NUMBER() OVER (PARTITION BY EVENT_HANDLE, EVENT_TIMESTAMP_UTC, EVENT_ACTIVITY, MACHINE, INCIDENT_TYPE ORDER BY %%physloc%%) AS ROW_NUM FROM INCIDENT_MESSAGE) DELETE FROM CTE WHERE ROW_NUM &gt; 1</sql>
        <createIndex unique="true" tablespace="MW_IDXENT" tableName="INCIDENT_MESSAGE" indexName="INCIDENT_MESSAGE_UNIQUE">
            <column name="EVENT_HANDLE"/>
            <column name="EVENT_TIMESTAMP_UTC"/>
            <column name="EVENT_ACTIVITY"/>
            <column name="MACHINE"/>
            <column name="INCIDENT_TYPE"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="INCIDENT_MESSAGE" indexName="INCIDENT_MESSAGE_UNIQUE"/>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
