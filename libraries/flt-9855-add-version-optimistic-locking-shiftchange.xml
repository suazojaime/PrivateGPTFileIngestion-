<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="b7b34cd8-37f1-11ea-aec2-2e728ce88128" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored Add version to ShiftChange to enable optimistic locking as table does not exist or column already exists."
                onFail="MARK_RAN">
            <tableExists tableName="SHIFTCHANGE"/>
            <not>
                <columnExists tableName="SHIFTCHANGE" columnName="VERSION"/>
            </not>
        </preConditions>
        <comment>FLT-9855: Add version to ShiftChange to enable optimistic locking.</comment>
        <addColumn tableName="SHIFTCHANGE">
            <column name="VERSION" type="INT" remarks="The version of the ShiftChange. Used for optimistic locking."/>
        </addColumn>
        <sql>UPDATE SHIFTCHANGE SET VERSION = 0</sql>
        <addNotNullConstraint tableName="SHIFTCHANGE" columnName="VERSION" columnDataType="INT"/>
        <rollback>
            <dropColumn tableName="SHIFTCHANGE" columnName="VERSION"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
