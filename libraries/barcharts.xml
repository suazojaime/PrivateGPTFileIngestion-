<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:widget="http://www.minestar.au.cat.com/namespace/widget"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.minestar.au.cat.com/namespace/widget http://www.minestar.au.cat.com/namespace/widget.xsd
       ">

    <widget:stackedVerticalBarChart id="truckActivityBarChart" dataSet="shiftDataSet" dataSource="truckActivity"
                                    labelX="Haulage Truck" labelY="Avg Activity Time ($Unit)"
                                    width="180" height="600" displayUnit="minute" domain="properties"
                                    backgroundColour="graphBackground"
                                    legend="customTruckCycleActivityLegend"/>

    <widget:stackedVerticalBarChart id="lhdActivityBarChart" dataSet="shiftDataSet" dataSource="lhdActivity"
                                    labelX="Load Haul Dump" labelY="Avg Activity Time ($Unit)"
                                    width="180" height="600" displayUnit="minute" domain="properties"
                                    backgroundColour="graphBackground"
                                    legend="customLhdCycleActivityLegend"/>

    <widget:verticalBarChart id="truckTonsMinedPerHourInShiftBarChart" dataSet="hoursInShiftDataSet"
                             dataSource="truckHourlyTonsMined"
                             labelX="Shift Hour"
                             title="Payload in Shift - Haulage Truck"
                             maxItemsPerChart="12"
                             minValue="0" maxValue="8000"
                             width="1500" height="600" domain="properties"
                             backgroundColour="graphBackground" multiChartGroupMode="region">
        <widget:intervalRef ref="truckTonsMinedPerHourInShiftTarget"/>
    </widget:verticalBarChart>

    <widget:verticalBarChart id="lhdTonsMinedPerHourInShiftBarChart" dataSet="hoursInShiftDataSet"
                             dataSource="lhdHourlyTonsMined"
                             labelX="Shift Hour"
                             title="Payload in Shift - Load Haul Dump"
                             maxItemsPerChart="12"
                             minValue="0" maxValue="8000"
                             width="1500" height="600" domain="properties"
                             backgroundColour="graphBackground" multiChartGroupMode="region">
        <widget:intervalRef ref="lhdTonsMinedPerHourInShiftTarget"/>
    </widget:verticalBarChart>

    <widget:dualAxisVerticalBarAndLineChart id="truckTonsMinedPerHourAgainstTarget" dataSet="hoursInShiftDataSet"
                                            dataSource="truckCumulativeHourlyTonsMined"
                                            secondaryDataSource="shiftTonProductionTarget"
                                            labelX="Shift Hour"
                                            title="Cumulative Payload in Shift against Target - Haulage Truck"
                                            maxItemsPerChart="12"
                                            minValue="0" maxValue="100000"
                                            secondaryMinValue="0" secondaryMaxValue="100000"
                                            width="1500" height="600" domain="properties"
                                            backgroundColour="graphBackground" multiChartGroupMode="region" />

    <widget:dualAxisVerticalBarAndLineChart id="lhdTonsMinedPerHourAgainstTarget" dataSet="hoursInShiftDataSet"
                                            dataSource="lhdCumulativeHourlyTonsMined"
                                            secondaryDataSource="shiftTonProductionTarget"
                                            labelX="Shift Hour"
                                            title="Cumulative Payload in Shift against Target - Load Haul Dump"
                                            maxItemsPerChart="12"
                                            minValue="0" maxValue="100000"
                                            secondaryMinValue="0" secondaryMaxValue="100000"
                                            width="1500" height="600" domain="properties"
                                            backgroundColour="graphBackground" multiChartGroupMode="region" />

    <widget:stackedVerticalBarChart id="totalDrawCardComplianceChart"
                                    dataSet="shiftDataSet" dataSource="drawCardCompliance"
                                    labelX="Current Shift Totals" labelY="Draw Point Compliance"
                                    width="150" height="600" domain="properties"
                                    backgroundColour="graphBackground"
                                    legend="customDrawCardComplianceLegend"/>

    <widget:stackedVerticalBarChart id="panelDrawCardComplianceChart"
                                    dataSet="drawCardPanelDataSet" dataSource="drawCardCompliance"
                                    labelX="Panel" labelY="Draw Point Compliance"
                                    width="1500" height="600" domain="properties"
                                    backgroundColour="graphBackground"
                                    legend="customDrawCardComplianceLegend"/>

</beans>
