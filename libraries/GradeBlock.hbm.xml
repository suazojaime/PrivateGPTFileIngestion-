<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model" default-lazy="false">

    <class name="minestar.mine.domain.material.GradeBlockImpl"
           proxy="minestar.mine.domain.material.GradeBlock"
           table="GRADEBLOCK">

        <meta attribute="alias" inherit="false">MiningBlock</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=GRADEBLOCK_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=GRADEBLOCK_EXTERNALREF
            unique=false
            columns=EXTERNALREF
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=GRADEBLOCK_HIER
            unique=false
            columns=HIERARCHY
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="index">
            name=GRADEBLOCK_CREATETIME_UTC_IDX
            unique=false
            columns=CREATETIME_UTC
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="viewproperty-status" inherit="false">
            type=string
            description=A transient string status combining IS_ACTIVE and IN_USE.
            expression=lookupResource.gradeBlock.status.query
        </meta>

        <meta attribute="description">A volume of material, bounded by a specific polygon, that
            contains a material with the same grade values.
        </meta>

        <cache usage="read-write" region="modelGradeBlockCache"/>

        <id name="OID" type="long" column="GRADEBLOCK_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="long" column="ID" not-null="true">
            <meta attribute="description">ID of the block</meta>
            <meta attribute="universe-type-measure">false</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">Name of the block</meta>
        </property>

        <property name="active" type="boolean" column="IS_ACTIVE" not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">Is active flag, this flag is set to 'False' if mining
                block is archived, 'True' otherwise
            </meta>
        </property>

        <property name="revision" type="long" column="VERSION" not-null="true">
            <meta attribute="description">The version number</meta>
        </property>

        <property name="modelUpdateVersion" type="long">
            <meta attribute="description">The mine model update version when the gradeblock was created/modified.</meta>
            <column name="MODEL_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the gradeblock/stockpile was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

        <property name="createTime" type="TimestampType" column="CREATETIME_UTC">
            <meta attribute="utc-description">Mining block create utc time</meta>
            <meta attribute="description">Mining block create time, the time when mining block is created</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="miningStart" type="TimestampType" column="MININGSTART_UTC">
            <meta attribute="utc-description">Mining start utc time</meta>
            <meta attribute="description">Mining start time, the time when mining block is activated for the first time</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="miningFinish" type="TimestampType" column="MININGFINISH_UTC">
            <meta attribute="utc-description">Mining finish utc time</meta>
            <meta attribute="description">Mining finish time, the time when mining block is deactivated for the first time</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="height" column="HEIGHT">
            <meta attribute="unitType">length</meta>
            <meta attribute="description">Height of the block</meta>
            <type name="quantity">
                <param name="unitType">length</param>
            </type>
        </property>

        <many-to-one name="destination" class="minestar.mine.domain.minemodel.LocationReference" column="DESTINATION_OID">
            <meta attribute="description">Assignment destination of block</meta>
        </many-to-one>

        <many-to-one name="material" class="minestar.machinetracking.domain.MaterialReference" column="MATERIAL">
        </many-to-one>

        <property name="minedMass" column="MINEDMASS">
            <meta attribute="unitType">mass</meta>
            <meta attribute="description">Mined mass</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <property name="minedVol" column="MINEDVOL">
            <meta attribute="unitType">volume</meta>
            <meta attribute="description">Mined volume</meta>
            <type name="quantity">
                <param name="unitType">volume</param>
            </type>
        </property>

        <property name="originalVol" column="ORIGINALVOL">
            <meta attribute="unitType">volume</meta>
            <meta attribute="description">Original volume</meta>
            <type name="quantity">
                <param name="unitType">volume</param>
            </type>
        </property>

        <property name="originalMass" column="ORIGINALMASS">
            <meta attribute="unitType">mass</meta>
            <meta attribute="description">Original mass</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <property name="stockpile" type="boolean" column="STOCKPILE" not-null="true">
            <meta attribute="description">Stockpile flag, stockpiles are modelled as mining blocks,
                but has the Stockpile attribute checked indicating that it is a stockpile
            </meta>
        </property>

        <property name="inuse" type="boolean" column="INUSE" not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">Is in use flag, this flag is set to 'False' if mining
                block is deactivate, 'True' otherwise
            </meta>
        </property>

        <property name="readOnly" type="boolean" column="READONLY" not-null="true">
            <meta attribute="description">Is read only? This flag is set to 'True' if the attributes
                of the mining block are read-only, otherwise 'False' if they are editable
            </meta>
        </property>

        <property name="hierarchy" type="string" column="HIERARCHY" length="254">
            <meta attribute="description">The block hierarchy, used to organise grade blocks by
                levels within the system
            </meta>
        </property>

        <property name="gradeEngine" type="string" column="GRADEENGINE" length="254">
            <meta attribute="description">The grade engine, default to Minestar so that grade
                information is managed within the system rather than being managed externally and
                imported
            </meta>
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The external system reference of this mining block</meta>
        </property>

        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The External System Description</meta>
        </property>

        <property name="openForDumping" type="boolean" column="OPENFORDUMPING" not-null="true">
            <meta attribute="description">The open for dumping flag for stockpile</meta>
        </property>

        <property name="openForLoading" type="boolean" column="OPENFORLOADING" not-null="true">
            <meta attribute="description">The open for loading flag for stockpile</meta>
        </property>

        <property name="carryOption" type="string" column="CARRYOPTION" length="254">
            <meta attribute="description">The carry over option for stockpile increment</meta>
        </property>

        <many-to-one name="carryFrom" class="minestar.mine.domain.material.GradeBlockReference" column="CARRY_FROM_OID">
            <meta attribute="description">The mining block from which this mining block is carried over</meta>
        </many-to-one>

        <many-to-one name="targetDestination" class="minestar.mine.domain.minemodel.LocationReference" column="TARGETDESTINATION">
            <meta attribute="description">Locked destination of block if mining block locking is
                activated, mining block lock means the material will only go to this
                destination/processor
            </meta>
        </many-to-one>

        <many-to-one name="entryWaypoint" class="minestar.mine.domain.minemodel.WaypointReference" column="ENTRY_WAYPOINT_OID"/>

        <many-to-one name="connectingWaypoint" class="minestar.mine.domain.minemodel.WaypointReference" column="CONNECTING_WAYPOINT_OID"/>

        <many-to-one name="processor" class="minestar.pitlink.domain.machine.MachineReference" column="PROCESSOR_OID"/>

        <list name="polygon" table="GRADEBLOCK_POLYGON" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="index-alias">pointNr</meta>
            <meta attribute="alias" inherit="false">Polygon</meta>
            <meta attribute="element-export-nested">true</meta>
            <meta attribute="description">The polygons that make up the block</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <index type="int" column="POINT_NR"/>
            <element type="XYZCoordinate">
                <column name="X_MAGNITUDE" not-null="true"/>
                <column name="Y_MAGNITUDE" not-null="true"/>
                <column name="Z_MAGNITUDE" not-null="true"/>
            </element>
        </list>

        <map name="gradevalues" table="GRADEBLOCK_CONT_VALUE" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias" inherit="false">GRADEVALUES</meta>
            <meta attribute="index" inherit="false">
                name=GRADEBLOCK_CONT_VALUE_12U
                columns=OID
                tablespace=MW_IDXOBJ
            </meta>
            <meta attribute="index-alias">grade</meta>
            <meta attribute="unitType">unitless</meta>
            <meta attribute="element-quantity">Null:LOOKUP(UNITNAME, GRADE, GRADE_OID, GRADE_OID)
            </meta>
            <meta attribute="description">Mining block continuous grade values</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <index-many-to-many class="minestar.production.domain.grade.GradeReference" column="GRADE_OID"/>
            <element type="float" column="VALUE" not-null="true"/>
        </map>

        <map name="disgradevalues" table="GRADEBLOCK_DISC_VALUE" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias" inherit="false">DISGRADEVALUES</meta>
            <meta attribute="index" inherit="false">
                name=GRADEBLOCK_DISC_VALUE_12U
                columns=OID
                tablespace=MW_IDXOBJ
            </meta>
            <meta attribute="index-alias">grade</meta>
            <meta attribute="description">The discrete grade values for the block</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <index-many-to-many class="minestar.production.domain.grade.GradeReference" column="GRADE_OID"/>
            <element type="string" column="VALUE" not-null="true"/>
        </map>

        <map name="alternateDestinations" sort="natural" table="GRADEBLOCK_ALT_DEST" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias" inherit="false">ALTDESTINATIONS</meta>
            <meta attribute="index" inherit="false">
                name=GRADEBLOCK_ALT_DEST_12U
                columns=OID
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="index-alias">zoneId</meta>
            <meta attribute="description">The alternate block destinations</meta>
            <meta attribute="view-reference">minestar.mine.domain.minemodel.LocationImpl</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <map-key type="int" column="ZONE"/>
            <many-to-many class="minestar.mine.domain.minemodel.LocationReference" column="LOCATION_OID"/>
        </map>

        <map name="alternateMaterials" sort="natural" table="GRADEBLOCK_ALT_MATERIAL" fetch="select" batch-size="100">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="index" inherit="false">
                name=GRADEBLOCK_ALT_MATERIAL_12U
                columns=OID
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="index-alias">zoneId</meta>
            <meta attribute="alias" inherit="false">ALTERNATEMATERIALS</meta>
            <meta attribute="description">The alternate block materials</meta>
            <meta attribute="view-reference">minestar.machinetracking.domain.MaterialImpl</meta>

            <cache usage="read-write" region="modelGradeBlockCache"/>

            <key column="OID" not-null="true"/>
            <map-key type="int" column="ZONE"/>
            <many-to-many class="minestar.machinetracking.domain.MaterialReference" column="MATERIAL_OID"/>
        </map>

    </class>

    <!-- A lightweight reference to a GradeBlock -->
    <class name="minestar.mine.domain.material.GradeBlockReference" table="GRADEBLOCK" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">GRADEBLOCK_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a grade block.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="GRADEBLOCK_OID"/>
        <property name="id" type="long" column="ID" not-null="true"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="hierarchy" type="string" column="HIERARCHY" length="254">
            <meta attribute="description">The block hierarchy, used to organise grade blocks by levels within the system</meta>
        </property>
    </class>

</hibernate-mapping>
