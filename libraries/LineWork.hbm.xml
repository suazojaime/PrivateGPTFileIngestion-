<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.mine.domain.minemodel.linework.LineWork"
           table="MACHINE_LINE_WORK"
           dynamic-update="true">

        <meta attribute="view-master">true</meta>

        <meta attribute="table">
            tablespace=MW_ENT
            storage.initial=64K
            storage.next=64K
            storage.pctincrease=0
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
            storage.initial=64k
            storage.next=64k
            storage.pctincrease=0
        </meta>

        <meta attribute="description">Guidance of optimal path for machine to follow</meta>

        <id name="OID" type="long" column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <version name="version" access="field" column="version">
            <meta attribute="description">The version number for optimistic locking</meta>
        </version>

        <property name="layerUpdateVersion" type="long" column="LAYER_UPDATE_VERSION" not-null="true">
            <meta attribute="description">The layer update version when the line work was created/modified.</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254">
            <meta attribute="description">Name of line work.</meta>
        </property>

        <property name="colour" type="string" column="COLOUR" length="254">
            <meta attribute="description">Color of line work.</meta>
        </property>

        <property name="lineWorkType" column="TYPE" not-null="true" length="254">
            <meta attribute="description">Type of line work.</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.mine.domain.minemodel.linework.LineWorkType</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <many-to-one
                name="machineReference"
                column="MACHINE_OID"
                not-null="true"
                not-found="ignore"
                class="minestar.pitlink.domain.machine.MachineReference">
            <meta attribute="alias">machine</meta>
            <meta attribute="description">The machine that will follow the guidance</meta>
        </many-to-one>

        <property name="createdDate" type="TimestampType" column="CREATED_DATE_UTC">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The creation utc timestamp.</meta>
            <meta attribute="description">The creation timestamp</meta>
        </property>

        <property name="lastUpdatedDate" type="TimestampType" column="LAST_UPDATED_DATE_UTC">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The updated utc timestamp.</meta>
            <meta attribute="description">The updated timestamp</meta>
        </property>

        <property name="geometryWKT" type="string" column="GEOMETRY_WKT" length="4000">
            <meta attribute="description">Well Known Text representation of the geometry.</meta>
        </property>

    </class>

</hibernate-mapping>
