<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.pitlink.domain.MessageGroup"
        table="MESSAGE_GROUP"
        polymorphism="explicit">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MESSAGE_GROUP_NAME
            columns=NAME
            unique=true
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="alias" inherit="false">MessageGroup</meta>

        <meta attribute="description">A grouping system for messages.</meta>

        <id name="OID" type="long" column="MESSAGE_GROUP_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">The name of the message group.</meta>
        </property>

        <property name="containsSafetyMessages" type="boolean" column="IS_SAFETY_MESSAGES" not-null="true">
            <meta attribute="description">If true, this group contains safety messages of the day.</meta>
        </property>

        <map name="associations" table="MESSAGE_GROUP_ASSOCIATION">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="description">A value to associate a particular message group with a type of machine.</meta>
            <meta attribute="alias" inherit="false">association</meta>
            <meta attribute="index-alias">machineCategory</meta>
            <key column="OID" not-null="true"/>
            <map-key type="string" column="MACHINE_CATEGORY"/>
            <element type="boolean" column="ALLOWED" not-null="true"/>
        </map>

        <set name="childGroups"  table="MESSAGE_GROUP_SUBDIR">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="alias" inherit="false">messageGroups</meta>
            <meta attribute="description">The message group subdirectories</meta>
            <meta attribute="view-reference">minestar.pitlink.domain.MessageGroup</meta>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.pitlink.domain.MessageGroupReference" column="MESSAGE_GROUP_OID"/>
        </set>

        <set name="messages"  table="MESSAGE_GROUP_ELEMENT">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <meta attribute="description">The message group elements</meta>
            <meta attribute="view-reference">minestar.pitlink.domain.StandardMessage</meta>

            <key column="OID" not-null="true"/>
            <many-to-many class="minestar.pitlink.domain.StandardMessageReference" column="MESSAGE_OID"/>
        </set>
    </class>

    <!-- A lightweight reference to a MessageGroup -->
    <class name="minestar.pitlink.domain.MessageGroupReference" table="MESSAGE_GROUP" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">MESSAGE_GROUP_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a MessageGroup.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="MESSAGE_GROUP_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
    </class>

</hibernate-mapping>
