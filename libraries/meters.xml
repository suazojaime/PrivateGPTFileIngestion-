<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:widget="http://www.minestar.au.cat.com/namespace/widget"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.minestar.au.cat.com/namespace/widget http://www.minestar.au.cat.com/namespace/widget.xsd
       ">

    <!--
    The following list of meters are used in the example dashboards provided with MineStar.
    -->

    <!-- Total Shift Tonnage meters -->

    <widget:meterChart id="truckTotalShiftTonnageMeter" dataSet="shiftDataSet" dataSource="truckTotalShiftTonnage" domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="tonne" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="100000" tickIncrement="10000"
                       subTitle="Total Tonnes - Haulage Truck">
        <widget:intervalRef ref="truckTotalShiftTonnageCritical"/>
        <widget:intervalRef ref="truckTotalShiftTonnageAbnormal"/>
        <widget:intervalRef ref="truckTotalShiftTonnageNormal"/>
    </widget:meterChart>

    <widget:meterChart id="lhdTotalShiftTonnageMeter" dataSet="shiftDataSet" dataSource="lhdTotalShiftTonnage" domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="tonne" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="100000" tickIncrement="10000"
                       subTitle="Total Tonnes - Load Haul Dump">
        <widget:intervalRef ref="lhdTotalShiftTonnageCritical"/>
        <widget:intervalRef ref="lhdTotalShiftTonnageAbnormal"/>
        <widget:intervalRef ref="lhdTotalShiftTonnageNormal"/>
    </widget:meterChart>

    <!-- Total Availability meters -->

    <widget:meterChart id="truckTotalAvailabilityMeter" dataSet="shiftDataSet" dataSource="truckTotalAvailability"
                       domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="percent" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="100" tickIncrement="10"
                       subTitle="Total Availability - Haulage Truck">
        <widget:intervalRef ref="truckTotalAvailabilityCritical"/>
        <widget:intervalRef ref="truckTotalAvailabilityAbnormal"/>
        <widget:intervalRef ref="truckTotalAvailabilityNormal"/>
    </widget:meterChart>

    <widget:meterChart id="lhdTotalAvailabilityMeter" dataSet="shiftDataSet" dataSource="lhdTotalAvailability"
                       domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="percent" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="100" tickIncrement="10"
                       subTitle="Total Availability - Load Haul Dump">
        <widget:intervalRef ref="lhdTotalAvailabilityCritical"/>
        <widget:intervalRef ref="lhdTotalAvailabilityAbnormal"/>
        <widget:intervalRef ref="lhdTotalAvailabilityNormal"/>
    </widget:meterChart>

    <!-- Total Use of Availability meters -->

    <widget:meterChart id="truckTotalUseOfAvailabilityMeter" dataSet="shiftDataSet"
                       dataSource="truckTotalUseOfAvailability" domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="percent" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="100" tickIncrement="10"
                       subTitle="Total Use of Availability - Haulage Truck">
        <widget:intervalRef ref="truckTotalUseOfAvailabilityCritical"/>
        <widget:intervalRef ref="truckTotalUseOfAvailabilityAbnormal"/>
        <widget:intervalRef ref="truckTotalUseOfAvailabilityNormal"/>
    </widget:meterChart>

    <widget:meterChart id="lhdTotalUseOfAvailabilityMeter" dataSet="shiftDataSet"
                       dataSource="lhdTotalUseOfAvailability" domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="percent" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="100" tickIncrement="10"
                       subTitle="Total Use of Availability - Load Haul Dump">
        <widget:intervalRef ref="lhdTotalUseOfAvailabilityCritical"/>
        <widget:intervalRef ref="lhdTotalUseOfAvailabilityAbnormal"/>
        <widget:intervalRef ref="lhdTotalUseOfAvailabilityNormal"/>
    </widget:meterChart>

    <!-- Tonnes per Operating Hour meters -->

    <widget:meterChart id="truckTotalTonsPerOperHourMeter" dataSet="shiftDataSet" dataSource="truckTotalTonsPerOperHour"
                       domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="tonnes per hour" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="400" tickIncrement="100"
                       subTitle="Tonnes per Operating Hour - Haulage Truck">
        <widget:intervalRef ref="truckTotalTonsPerOperHourCritical"/>
        <widget:intervalRef ref="truckTotalTonsPerOperHourAbnormal"/>
        <widget:intervalRef ref="truckTotalTonsPerOperHourNormal"/>
    </widget:meterChart>

    <widget:meterChart id="lhdTotalTonsPerOperHourMeter" dataSet="shiftDataSet" dataSource="lhdTotalTonsPerOperHour"
                       domain="properties"
                       width="150" height="180" borderThickness="0" titleFontSize="10" valueDisplayOffset="35"
                       titleAreaPercent="20" displayUnit="tonnes per hour" intervalThickness="10"
                       dialColour="meterDial" needleColour="meterNeedle"
                       valueColour="meterValue" tickColour="white" tickLabelColour="white" tickLabelsVisible="false"
                       minValue="0" maxValue="400" tickIncrement="100"
                       subTitle="Tonnes per Operating Hour - Load Haul Dump">
        <widget:intervalRef ref="lhdTotalTonsPerOperHourCritical"/>
        <widget:intervalRef ref="lhdTotalTonsPerOperHourAbnormal"/>
        <widget:intervalRef ref="lhdTotalTonsPerOperHourNormal"/>
    </widget:meterChart>

</beans>
