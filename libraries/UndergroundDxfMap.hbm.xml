<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.underground.map.UndergroundDxfMapImpl"
           proxy="minestar.mine.domain.underground.map.UndergroundDxfMap"
           table="UG_DXF_MAP"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">UNDERGROUNDDXFMAP</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">Attributes of a DXF map file stored on the server.</meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=SERVER_FILENAME
            unique=false
            columns=SERVER_FILENAME
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=CLIENT_FILENAME
            unique=false
            columns=CLIENT_FILENAME
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model" />

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator" />
        </id>

        <property name="originalFilename"
                  type="java.lang.String"
                  column="ORIGINAL_FILENAME"
                  length="255"
                  not-null="true">
            <meta attribute="description">The original filename of the uploaded map file, not including any path components</meta>
        </property>

        <property name="clientFilename"
                  type="java.lang.String"
                  column="CLIENT_FILENAME"
                  length="255"
                  not-null="true">
            <meta attribute="description">The filename of the map stored by the MineStar client</meta>
        </property>

        <property name="serverFilename"
                  type="java.lang.String"
                  column="SERVER_FILENAME"
                  length="255"
                  not-null="true">
            <meta attribute="description">The filename used to store the data on the server, not including any path components</meta>
        </property>

        <property name="timestamp"
                  type="java.util.Date"
                  column="TIMESTAMP"
                  not-null="true">
            <meta attribute="description">Time when the file was uploaded to the server. Used to purge obsolete maps.</meta>
        </property>

        <property name="clientHostname"
                  type="java.lang.String"
                  column="CLIENT_HOSTNAME">
            <meta attribute="description">The client which uploaded the file to the server.</meta>
        </property>

        <property name="originalUnit"
                  type="java.lang.String"
                  column="ORIGINAL_UNIT">
            <meta attribute="description">The length unit of the imported DXF file. The Server DXF file is always in metres.</meta>
        </property>

    </class>

</hibernate-mapping>
