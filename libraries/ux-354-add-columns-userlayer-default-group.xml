<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2cbb6e5d-c329-497a-9580-2444d12ce4ba" author="MineStar" failOnError="true">
        <preConditions onFailMessage="Ignored AddColumn for DEFAULT_MOBILE to table USERLAYER_GROUP as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="USERLAYER_GROUP"/>
            <not>
                <columnExists tableName="USERLAYER_GROUP" columnName="DEFAULT_MOBILE"/>
            </not>
        </preConditions>
        <comment>UX-354: AddColumn USERLAYER_GROUP.DEFAULT_MOBILE</comment>
        <addColumn tableName="USERLAYER_GROUP">
            <column name="DEFAULT_MOBILE" type="BOOLEAN" remarks="Is this user layer group the default for the Mobile client"/>
        </addColumn>
    </changeSet>
