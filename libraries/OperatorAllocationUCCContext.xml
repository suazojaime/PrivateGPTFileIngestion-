<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- must have this -->
    <bean id="operatorAllocationUCCImpl" class="minestar.production.uifacade.shift.impl.OperatorAllocationUCCImpl"
          lazy-init="true" init-method="init">
        <property name="shiftChangeService" ref="shiftChangeServiceImpl"/>
        <property name="pitModelService" ref="pitModelServiceImpl"/>
    </bean>

    <!-- support for serviceFactory -->
    <bean id="registerOperatorAllocationUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Operator Allocation UCC"/>
        <constructor-arg value="minestar.production.uifacade.shift.OperatorAllocationUCCFacade"/>
        <constructor-arg ref="operatorAllocationUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="operatorAllocationUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="operatorAllocationUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="operatorAllocationUCC"/>
        <property name="service" ref="operatorAllocationUCCProxy"/>
        <property name="serviceInterface" value="minestar.production.uifacade.shift.OperatorAllocationUCCFacade"/>
    </bean>

</beans>
