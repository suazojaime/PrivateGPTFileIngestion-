        <preConditions onFailMessage="Ignored AddColumn for LATEST_WATERED_TS_UTC to table SURFACE_SATURATION as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="SURFACE_SATURATION"/>
