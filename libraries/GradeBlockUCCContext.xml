<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="gradeBlockUCCImpl" class="minestar.mine.uifacade.gradeblock.impl.GradeBlockUCCImpl" lazy-init="true">
        <property name="materialManagementService" ref="materialManagementServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerGradeBlockUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="GradeBlock UCC"/>
        <constructor-arg value="minestar.mine.uifacade.gradeblock.GradeBlockUCCFacade"/>
        <constructor-arg ref="gradeBlockUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="gradeBlockUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="gradeBlockUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="gradeBlockUCC"/>
        <property name="service" ref="gradeBlockUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.gradeblock.GradeBlockUCCFacade"/>
    </bean>

</beans>
