<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="24a00955-d093-4754-84fd-251d2f668e51" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddColumn for MODEL_UPDATE_VERSION to table SCRIPT as table does not exist or column already exists."
                onFail="MARK_RAN">
            <tableExists tableName="SCRIPT"/>
            <not>
                <columnExists tableName="SCRIPT" columnName="MODEL_UPDATE_VERSION"/>
            </not>
        </preConditions>
        <comment>AHS-11067: AddColumn SCRIPT.MODEL_UPDATE_VERSION</comment>
        <addColumn tableName="SCRIPT">
            <column name="MODEL_UPDATE_VERSION" type="BIGINT"
                    remarks="The mine model update version when the script was created/modified."/>
        </addColumn>
        <sql>UPDATE SCRIPT SET MODEL_UPDATE_VERSION = 0</sql>
        <addNotNullConstraint tableName="SCRIPT" columnName="MODEL_UPDATE_VERSION" columnDataType="BIGINT"/>
        <rollback>
            <dropColumn tableName="SCRIPT" columnName="MODEL_UPDATE_VERSION"/>
        </rollback>
    </changeSet>

    <changeSet id="9afa43ad-df3c-4124-8f05-27073d56c85b" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddColumn for LAYER_UPDATE_VERSION to table SCRIPT as table does not exist or column already exists."
                onFail="MARK_RAN">
            <tableExists tableName="SCRIPT"/>
            <not>
                <columnExists tableName="SCRIPT" columnName="LAYER_UPDATE_VERSION"/>
            </not>
        </preConditions>
        <comment>AHS-11067: AddColumn SCRIPT.LAYER_UPDATE_VERSION</comment>
        <addColumn tableName="SCRIPT">
            <column name="LAYER_UPDATE_VERSION" type="BIGINT"
                    remarks="The layer update version when the script was created/modified."/>
        </addColumn>
        <sql>UPDATE SCRIPT SET LAYER_UPDATE_VERSION = 0</sql>
        <addNotNullConstraint tableName="SCRIPT" columnName="LAYER_UPDATE_VERSION" columnDataType="BIGINT"/>
        <rollback>
            <dropColumn tableName="SCRIPT" columnName="LAYER_UPDATE_VERSION"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
