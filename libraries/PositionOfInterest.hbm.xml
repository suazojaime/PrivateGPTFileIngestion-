<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="model">

    <class name="minestar.mine.domain.minemodel.PositionOfInterestImpl"
           proxy="minestar.mine.domain.minemodel.PositionOfInterest"
           table="POSITION_OF_INTEREST"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">POSITIONOFINTEREST</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            A position in the map of an underground mine that helps the LADAR localisation process of manned Command
            Underground machines.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this position of interest (POI) is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="name"
                  type="java.lang.String"
                  column="POI_NAME"
                  length="254"
                  not-null="true"
                  unique="true">
            <meta attribute="description">The unique, user-entered identifier for this POI.</meta>
        </property>

        <many-to-one name="area"
                     column="AREA"
                     class="minestar.mine.domain.minemodel.underground.area.UndergroundAreaReference">
            <meta attribute="description">
                A reference to the underground area (MSMODEL.UNDERGROUND_AREA) that this POI is located at.
            </meta>
        </many-to-one>

        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">The XYZ coordinate of this POI in the map.</meta>
            <column name="POSITION_X"/>
            <column name="POSITION_Y"/>
            <column name="POSITION_Z"/>
        </property>

        <property name="heading"
                  column="HEADING">
            <meta attribute="description">The heading to indicate the direction that this POI is pointed at.</meta>
            <meta attribute="unitType">heading</meta>
            <type name="quantity">
                <param name="unitType">heading</param>
            </type>
        </property>

        <property name="sensitivity"
                  type="minestar.mine.domain.minemodel.PositionOfInterestSensitivityEnumUserType"
                  column="SENSITIVITY">
            <meta attribute="description">
                The user-entered sensitivity value that is used to tweak how the seeding algorithm takes into account
                this POI.
            </meta>
        </property>

        <property name="notes"
                  type="java.lang.String"
                  column="NOTES"
                  length="1000">
            <meta attribute="description">
                The user-entered notes on why POI was configured the way it was, in order to pass this information to
                other users.
            </meta>
        </property>

    </class>

</hibernate-mapping>
