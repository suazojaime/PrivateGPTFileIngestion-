<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext /dbchangelog-ext-3.1.xsd">
    <changeSet id="2c72819c-0628-48cc-8115-78a34cb25fb8" author="MineStar" context="Underground/Underground_Management" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for UG_ASSIGNMENT_CONTEXT to table ASSIGNMENT_EVENT as table does not exist or column already exists." onFail="MARK_RAN">
            <columnExists tableName="ASSIGNMENT_EVENT" columnName="LHD_ASSIGNMENT_CONTEXT"/>
        </preConditions>
        <comment>FUG-6957: Update discriminator</comment>
        <update tableName="ASSIGNMENT_EVENT">
            <column name="CLASS_ID" value="UGAssignment"/>
            <where>CLASS_ID = 'LHDAssignment'</where>
        </update>
        <rollback>
            <update tableName="ASSIGNMENT_EVENT">
                <column name="CLASS_ID" value="LHDAssignment"/>
                <where>CLASS_ID = 'UGAssignment'</where>
            </update>
        </rollback>
    </changeSet>
    <changeSet id="832910b7-ede5-4396-96fa-0b9e5e25d8e8" author="MineStar" context="Underground/Underground_Management" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for UG_ASSIGNMENT_CONTEXT to table ASSIGNMENT_EVENT as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="ASSIGNMENT_EVENT"/>
            <not>
                <columnExists tableName="ASSIGNMENT_EVENT" columnName="UG_ASSIGNMENT_CONTEXT"/>
            </not>
        </preConditions>
        <comment>FUG-6957: AddColumn ASSIGNMENT_EVENT.UG_ASSIGNMENT_CONTEXT</comment>
        <addColumn tableName="ASSIGNMENT_EVENT">
            <column name="UG_ASSIGNMENT_CONTEXT" type="CLOB" remarks="Underground underground assignment context"/>
        </addColumn>
    </changeSet>

    <changeSet id="339fd03b-cc92-4fcb-abe2-d915dac61d50" author="MineStar" context="Underground/Underground_Management" failOnError="false" onValidationFail="HALT">
        <preConditions
                onFailMessage="Ignored copy of data from for LHD_ASSIGNMENT_CONTEXT to UG_ASSIGNMENT_CONTEXT as both need to exist"
                onFail="MARK_RAN">
            <columnExists tableName="ASSIGNMENT_EVENT" columnName="LHD_ASSIGNMENT_CONTEXT"/>
            <columnExists tableName="ASSIGNMENT_EVENT" columnName="UG_ASSIGNMENT_CONTEXT"/>
        </preConditions>
        <comment>FUG-6957: Copy ASSIGNMENT_EVENT.LHD_ASSIGNMENT_CONTEXT back to the new UG_ASSIGNMENT_CONTEXT</comment>
        <sql>UPDATE ASSIGNMENT_EVENT set UG_ASSIGNMENT_CONTEXT = LHD_ASSIGNMENT_CONTEXT</sql>
        <rollback>
            <sql>UPDATE ASSIGNMENT_EVENT set LHD_ASSIGNMENT_CONTEXT = UG_ASSIGNMENT_CONTEXT</sql>
        </rollback>
    </changeSet>

    <changeSet id="d04697a9-cf75-4449-96bc-e2c20fadc3f4" author="MineStar" context="Underground/Underground_Management" failOnError="false">
        <preConditions onFailMessage="Ignored DropColumn for LHD_ASSIGNMENT_CONTEXT of table ASSIGNMENT_EVENT as column does not exist." onFail="MARK_RAN">
            <columnExists tableName="ASSIGNMENT_EVENT" columnName="LHD_ASSIGNMENT_CONTEXT"/>
        </preConditions>
        <comment>FUG-6957: DropColumn ASSIGNMENT_EVENT.LHD_ASSIGNMENT_CONTEXT</comment>
        <dropColumn columnName="LHD_ASSIGNMENT_CONTEXT" tableName="ASSIGNMENT_EVENT"/>
        <rollback>
            <addColumn tableName="ASSIGNMENT_EVENT">
                <column name="LHD_ASSIGNMENT_CONTEXT" type="NVARCHAR(2048)"/>
            </addColumn>
        </rollback>
    </changeSet>
</databaseChangeLog>
