<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- internal cache beans, not available for remoting or serviceFactory -->
    <bean id="recentMachineDelayChangesImpl" class="minestar.production.uifacade.delay.collection.RecentMachineDelayChanges"
          lazy-init="true" parent="cacheParent">
        <property name="notification" ref="notification"/>
    </bean>

    <!-- must have this -->
    <bean id="delayUCCImpl" class="minestar.production.uifacade.delay.impl.DelayUCCImpl"
          lazy-init="true" init-method="springInit">
        <property name="delayManagementService" ref="delayManagementServiceImpl"/>
        <property name="delayActivityManagementService" ref="delayActivityManagementServiceImpl"/>
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
        <property name="personnelService" ref="personnelServiceImpl"/>
        <property name="userService" ref="userServiceImpl"/>
        <property name="machineUCC" ref="machineUCCImpl"/>
        <property name="recentMachineDelayChanges" ref="recentMachineDelayChangesImpl"/>
        <property name="userContext" ref="userContextImpl"/>
        <property name="notification" ref="notification"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerDelayUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Delay UCC"/>
        <constructor-arg value="minestar.production.uifacade.delay.DelayUCCFacade"/>
        <constructor-arg ref="delayUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="delayUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="delayUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="delayUCC"/>
        <property name="service" ref="delayUCCProxy"/>
        <property name="serviceInterface" value="minestar.production.uifacade.delay.DelayUCCFacade"/>
    </bean>

</beans>
