<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="laneUCCImpl" class="minestar.mine.uifacade.lane.impl.LaneUCCImpl" lazy-init="true">
        <property name="laneLayoutService" ref="laneLayoutServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerLaneUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Lane UCC"/>
        <constructor-arg value="minestar.mine.uifacade.lane.LaneUCCFacade"/>
        <constructor-arg ref="laneUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="laneUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="laneUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="laneUCC"/>
        <property name="service" ref="laneUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.lane.LaneUCCFacade"/>
    </bean>

</beans>
