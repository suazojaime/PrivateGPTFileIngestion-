<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="84de8090-dc01-4e0d-b362-f361072e11b7" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored Fix Duplicate for PERSON_MACPASSWORD to table PERSON as (1) table does not exist, or (2) index already exists."
                onFail="MARK_RAN">
            <tableExists tableName="PERSON"/>
            <not>
                <indexExists indexName="PERSON_MACPASSWORD" tableName="PERSON"/>
            </not>
        </preConditions>
        <comment>FLT-6687: Update MACPASSWORD To Unique Values</comment>
        <!-- Set MACPASSWORD to NULL for duplicates (keeping the first one found) -->
        <sql dbms="oracle">
            UPDATE PERSON SET MACPASSWORD = NULL
            WHERE ROWID NOT IN
                (SELECT FIRST_VALUE(ROWID) OVER (PARTITION BY MACPASSWORD ORDER BY PERSON_OID) FROM PERSON)
        </sql>
        <sql dbms="mssql">
            WITH cte AS (
                SELECT PERSON_OID, MACPASSWORD,
                       row_number() OVER(PARTITION BY MACPASSWORD ORDER BY PERSON_OID) AS [rn]
                FROM PERSON
            )
            UPDATE cte SET MACPASSWORD = NULL WHERE [rn] > 1
        </sql>
        <rollback>
            <comment>@EmptyRollback</comment>
        </rollback>
    </changeSet>

    <changeSet id="b155a79d-9cab-4591-a701-7e3ca696b1ca" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored CreateIndex for PERSON_MACPASSWORD to table PERSON as (1) table does not exist, or (2) index already exists."
                onFail="MARK_RAN">
            <tableExists tableName="PERSON"/>
            <not>
                <indexExists indexName="PERSON_MACPASSWORD" tableName="PERSON"/>
            </not>
        </preConditions>
        <comment>AHS-7753: CreateUniqueIndex PERSON_MACPASSWORD on PERSON (MACPASSWORD)</comment>
        <createIndex unique="true" tablespace="MW_IDXENT" tableName="PERSON" indexName="PERSON_MACPASSWORD">
            <column name="MACPASSWORD"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
        <modifySql dbms="mssql">
            <!-- Use a filtered index on SQL Server -->
            <append value="WHERE MACPASSWORD IS NOT NULL"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
