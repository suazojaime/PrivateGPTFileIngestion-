<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="minestar.health.domain.metadata" schema="model">

    <!-- MeasureDescriptor root -->
    <class name="EventDef" table="EVENT_DEF">
        <meta attribute="noDatabaseMetadata" inherit="false">true</meta>
        <meta attribute="lookupExpr" inherit="false">lookupResource.eventDef.name.expr</meta>

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>

        <cache usage="read-write" region="eventDefs" />

        <id name="oid" type="java.lang.String" column="OID">
            <generator class="assigned"/>
        </id>

        <property name="id" type="long" column="ID"/>
        <property name="family" type="string" column="FAMILY" length="32"/>

        <many-to-one name="channel" class="minestar.health.api.definition.Measure" column="MEASURE_OID" not-null="false" lazy="false">
        </many-to-one>

        <property name="eventLevel" column="EVENTLEVEL"/>
        <property name="unitType" type="string" column="UNIT_TYPE" length="64"/>
        <property name="actuateLevel" type="double" column="ACTUATELEVEL">
            <meta attribute="unitType" inherit="false">unitless</meta>
            <meta attribute="quantity">unitType</meta>
        </property>
        <property name="deactuateLevel" type="double" column="DEACTUATELEVEL">
            <meta attribute="unitType" inherit="false">unitless</meta>
            <meta attribute="quantity">unitType</meta>
        </property>
        <property name="errorType" column="ERRORTYPE"/>
        <property name="name" column="NAME" length="255"/>
        <property name="alternateName" column="ALTNAME" length="255"/>
        <property name="description" column="PRIMARY_CONDITION" length="255"/>
        <property name="actuateLevelDescription" column="ACTUATELEVELDESC" length="254"/>
        <property name="deactuateLevelDescription" column="DEACTUATELEVELDESC" length="254"/>
        <property name="universeClassName" type="string" column="CLASSNAME" length="256"/>

    </class>
</hibernate-mapping>
