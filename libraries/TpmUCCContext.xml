<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="tpmUCCImpl" class="minestar.pitlink.uifacade.pitmodel.impl.TpmUCCImpl"
          destroy-method="destroy"
          lazy-init="true">
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
        <property name="mineLayoutService" ref="mineLayoutServiceImpl"/>
        <property name="pitModelService" ref="pitModelServiceImpl"/>
        <property name="machineUCC" ref="machineUCCImpl"/>
        <property name="dynamicTkphUCC" ref="dynamicTkphUCCImpl"/>
        <property name="uiCacheManager" ref="uiCacheManagerImpl"/>
        <property name="notification" ref="notification"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerTpmUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Travel Progress Monitor UCC"/>
        <constructor-arg value="minestar.pitlink.uifacade.pitmodel.TpmUCCFacade"/>
        <constructor-arg ref="tpmUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="tpmUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="tpmUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="tpmUCC"/>
        <property name="service" ref="tpmUCCProxy"/>
        <property name="serviceInterface" value="minestar.pitlink.uifacade.pitmodel.TpmUCCFacade"/>
    </bean>

</beans>
