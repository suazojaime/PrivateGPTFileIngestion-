<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="historical">

    <class name="minestar.production.domain.kpisummaries.HistoricRealTimeKpi"
           table="HISTORIC_REALTIMEKPI">

        <meta attribute="index" inherit="false">
            name=HISTORIC_REALTIMEKPI_UNIQ
            unique=true
            columns=SHIFT_OID,NAME,DIMENSION1,DIMENSION2,DIMENSION3,DIMENSION4,DIMENSION5,KPINAME
            tablespace=MW_IDXENT
        </meta>

        <id name="OID" type="long" column="REALTIMEKPI_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="shiftOID" type="long" column="SHIFT_OID" not-null="true">
            <meta attribute="description">Unique identifier for the shift the kpi was recorded in.</meta>
            <meta attribute="manyToOne">minestar.platform.domain.calendar.ShiftImpl</meta>
        </property>

        <property name="name" column="NAME" type="string" length="80" not-null="true">
            <meta attribute="description">Name of the real time kpi.</meta>
        </property>

        <property name="dimension1" column="DIMENSION1" type="string" not-null="true">
            <meta attribute="description">First dimension value.</meta>
        </property>

        <property name="dimension2" column="DIMENSION2" type="string" not-null="true">
            <meta attribute="description">Second dimension value.</meta>
        </property>

        <property name="dimension3" column="DIMENSION3" type="string" not-null="true">
            <meta attribute="description">Third dimension value.</meta>
        </property>

        <property name="dimension4" column="DIMENSION4" type="string" not-null="true">
            <meta attribute="description">Fourth dimension value.</meta>
        </property>

        <property name="dimension5" column="DIMENSION5" type="string" not-null="true">
            <meta attribute="description">Fifth dimension value.</meta>
        </property>

        <property name="kpiName" column="KPINAME" type="string" length="80" not-null="true">
            <meta attribute="description">Name of the kpi that belongs to the realtme kpi.</meta>
        </property>

        <property name="numDimensions" column="NUMDIMENSIONS" type="integer" not-null="true">
            <meta attribute="description">The number of dimensions the kpi consists.</meta>
        </property>

        <property name="kpiValue" column="KPIVALUE" type="double" not-null="true" >
            <meta attribute="description">The actual value of the kpi.</meta>
        </property>

        <property name="kpiUnit" column="KPIUNIT" type="string" length="80" not-null="true" >
            <meta attribute="description">The unit of quantity the kpi is expressed as.</meta>
        </property>

        <property name="kpiUnitType" column="KPIUNITTYPE" type="string" length="80">
            <meta attribute="description">The unit type for the kpi unit.</meta>
        </property>

        <property name="updated" column="UPDATED_UTC" type="TimestampType">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The updated utc timestamp.</meta>
            <meta attribute="description">The updated timestamp.</meta>
        </property>

    </class>
</hibernate-mapping>
