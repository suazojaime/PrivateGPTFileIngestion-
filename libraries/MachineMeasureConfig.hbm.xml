<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="model">

    <class name="minestar.health.api.definition.MachineMeasureConfig" table="MACHINE_MEASURE_CONFIG">

        <meta attribute="noDatabaseMetadata" inherit="false">true</meta>

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>


        <!--
            Default order is 10
                enter a number either side of 10 to change
                the order the view is created
        -->
        <meta attribute="view-create-order">15</meta>

        <meta attribute="alias-where">
            name=CUMULATIVE_CONFIG
            where=MACHINE_MEASURE_CONFIG.MEASURE_OID IN (SELECT OID FROM V_MEASURE_DEF WHERE CATEGORY='Cumulative')
        </meta>

        <meta attribute="alias-where">
            name=DATALOG_CONFIG
            where=MACHINE_MEASURE_CONFIG.MEASURE_OID IN (SELECT OID FROM V_MEASURE_DEF WHERE CATEGORY='Channel')
        </meta>

        <meta attribute="alias-where">
            name=SNAPSHOT_CONFIG
            where=MACHINE_MEASURE_CONFIG.MEASURE_OID IN (SELECT OID FROM V_MEASURE_DEF WHERE CATEGORY='Channel')
        </meta>

        <meta attribute="alias-where">
            name=POLLED_CONFIG
            where=MACHINE_MEASURE_CONFIG.MEASURE_OID IN (SELECT OID FROM V_MEASURE_DEF WHERE CATEGORY='Channel')
        </meta>

        <meta attribute="alias-where">
            name=CONTINUOUS_CONFIG
            where=MACHINE_MEASURE_CONFIG.MEASURE_OID IN (SELECT OID FROM V_MEASURE_DEF WHERE CATEGORY='Channel')
        </meta>

        <meta attribute="alias-where">
            name=TREND_CONFIG
            where=MACHINE_MEASURE_CONFIG.MEASURE_OID IN (SELECT OID FROM V_MEASURE_DEF WHERE CATEGORY='Trend')
        </meta>

        <meta attribute="viewproperty-oid" inherit="false">
            type=string
            expression=lookupResource.mmc.oid.query
        </meta>

        <meta attribute="viewproperty-category" inherit="false">
            type=string
            expression=lookupResource.mmc.category.query
        </meta>

        <meta attribute="viewproperty-datatypeoid" inherit="false">
            type=string
            expression=lookupResource.mmc.datatypeoid.query
        </meta>

        <meta attribute="viewproperty-datatype_n" inherit="false">
            type=string
            expression=lookupResource.mmc.datatype_n.query
        </meta>

        <meta attribute="viewproperty-family" inherit="false">
            type=string
            expression=lookupResource.mmc.family.query
        </meta>

        <meta attribute="viewproperty-id" inherit="false">
            type=long
            expression=lookupResource.mmc.id.query
        </meta>

        <meta attribute="viewproperty-subid" inherit="false">
            type=int
            expression=lookupResource.mmc.subid.query
        </meta>

        <meta attribute="viewproperty-unittype" inherit="false">
            type=string
            expression=lookupResource.mmc.unittype.query
        </meta>

        <meta attribute="viewproperty-modelOid" inherit="false">
            type=string
            expression=lookupResource.mmc.modelOid.query
        </meta>

        <meta attribute="viewproperty-model_N" inherit="false">
            type=string
            expression=lookupResource.mmc.modelNumber.query
        </meta>

        <meta attribute="viewproperty-modelNumber" inherit="false">
            type=string
            expression=lookupResource.mmc.modelNumber.query
        </meta>

        <meta attribute="viewproperty-serialNumber" inherit="false">
            type=string
            expression=lookupResource.mmc.serialNumber.query
        </meta>

        <meta attribute="viewproperty-description" inherit="false">
            type=string
            expression=lookupResource.mmc.description.query
        </meta>

        <!-- Create foreign keys with 'on delete cascade' at the database level. -->
        <meta attribute="foreign-key">
            on-delete=CASCADE
        </meta>

        <cache usage="read-write" region="machineMeasureConfig"/>

        <composite-id>

            <meta attribute="view-include">false</meta>
            <meta attribute="view-ignore">true</meta>

            <key-many-to-one name="machine" class="minestar.pitlink.domain.machine.MachineReference" column="MACHINE_OID" lazy="false">
                <meta attribute="view-include">false</meta>
                <meta attribute="view-ignore">true</meta>
            </key-many-to-one>
            <key-many-to-one name="measure" class="minestar.health.api.definition.Measure" column="MEASURE_OID" lazy="false">
                <meta attribute="view-include">false</meta>
                <meta attribute="view-ignore">true</meta>
            </key-many-to-one>

        </composite-id>
        <property
                name="pollingId"
                type="java.lang.Long"
                column="POLLING_ID"
                >
            <meta attribute="description">U64 channel polling ID.</meta>
        </property>
    </class>
</hibernate-mapping>
