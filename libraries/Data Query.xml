<?xml version="1.0" encoding="us-ascii" standalone="no"?>
<!DOCTYPE classdefs SYSTEM "metadata.dtd">
<classdefs>

    <classdef name="View" >
        <propertydef name="Chart Type" label="View Data As">
            <typedef>
              <type code="string" choices="choice:ltwtRptChartType" />
            </typedef>
            <defaultvalue class="java.lang.String">Report</defaultvalue>
        </propertydef>
        <propertydef name="ReportTitle" label="Title">
            <typedef><type code="string"/></typedef>
            <defaultvalue class="java.lang.String">Custom Query</defaultvalue>
        </propertydef>
        <propertydef name="ReportTitleInfo" label="Description">
            <typedef><type code="string"/></typedef>
        </propertydef>
        <propertygroup name="Properties" >
            <uigroupdef mode="region" />
            <propertydef name="Custom Fields" label="">
                <typedef><type code="string" choices="table:entity($selectedsingle):attributes" /></typedef>
				<uidef widget="ordered" separator=","/>
                <description>For a report, select one or more properties. For a chart, select a domain property and one or more value properties.</description>
            </propertydef>
        </propertygroup>
    </classdef>

    <classdef name="Model" >
		<propertydef name="Filter Expression" label=" ">
			<typedef><type code="string" choices="table:entity($selectedsingle):attributes" /></typedef>
			<uidef widget="expression"/>
		</propertydef>
    </classdef>

    <classdef name="Historical" >
        <propertygroup name="When" >
            <uigroupdef mode="region" />
            <propertydef name="Time Filter Property" >
                <typedef><type code="string" choices="table:entity($selectedsingle):timeAttributes"/></typedef>
				<uidef widget="combo" mode="entry" />
                <description>Property to query against.</description>
            </propertydef>
            <propertydef name="Period" >
                <typedef><type code="string" /></typedef>
				<uidef widget="period" option="Start_Date,End_Date" />
            </propertydef>
            <propertydef name="Start_Date" >
                <typedef><javaclass name="java.util.Date" /></typedef>
            </propertydef>
            <propertydef name="End_Date" >
                <typedef><javaclass name="java.util.Date" /></typedef>
            </propertydef>
        </propertygroup>

        <propertygroup name="Filtering" >
            <uigroupdef mode="collapsed" />
            <propertydef name="Filter Expression" label=" ">
                <typedef><type code="string" choices="table:entity($selectedsingle):attributes"/></typedef>
				<uidef widget="expression"/>
            </propertydef>
        </propertygroup>
    </classdef>

    <classdef name="Output" >
        <propertygroup name="Report Formatting" >
            <uigroupdef mode="collapsed" />
            <propertydef name="Orientation" label="Report Orientation">
                <typedef>
                  <type code="string" choices='{"portrait":"Portrait", "landscape":"Landscape"}' />
                </typedef>
                <defaultvalue class="java.lang.String">Landscape</defaultvalue>
            </propertydef>
        </propertygroup>

        <propertygroup name="Chart Formatting" >
            <uigroupdef mode="collapsed" />
            <propertydef name="domainLabel" label="Domain Label">
                <typedef><type code="string"/></typedef>
            </propertydef>
            <propertydef name="rangeLabel" label="Range Label">
                <typedef><type code="string"/></typedef>
            </propertydef>
            <propertydef name="seriesPolicy" label="Series Policy">
                <typedef><type code="string" choices='["Use Properties","Use Values"]'/></typedef>
                <defaultvalue class="java.lang.String">Use Properties</defaultvalue>
                <description>Applicable to multi-pie charts and bar charts.</description>
            </propertydef>
            <propertydef name="timePeriod" label="Time Period">
                <typedef><type code="string" choices="choice:ltwtRptChartTimePeriod"/></typedef>
                <defaultvalue class="java.lang.String">Second</defaultvalue>
                <description>For time charts, the time period to aggregate data for.</description>
            </propertydef>
        </propertygroup>
    </classdef>

</classdefs>
