<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.production.domain.ActivityGroup" table="ACTIVITY_GROUP">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="alias" inherit="false">MachSStateGroup</meta>
        <meta attribute="description">Use this to group Activities and/or to create hierarchies for Activities</meta>

        <id name="OID" type="long" column="ACTIVITY_GROUP_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">A short name given to the paticular position in the Activity hierarchy</meta>
        </property>

        <property name="description" type="string" column="DESCRIPTION" length="254">
            <meta attribute="description">Describe the group - used like a class might be used - initially use string for simplicity</meta>
        </property>

        <property name="readOnly" type="boolean" column="IS_READ_ONLY" not-null="true">
            <meta attribute="description">True if activities in this group can not be edited by the user</meta>
        </property>

        <many-to-one name="parentGroup" class="minestar.production.domain.ActivityGroupReference" column="PARENT_GROUP_OID">
            <meta attribute="description">For non-root groups, a reference to the parent group</meta>
        </many-to-one>
    </class>

    <!-- A lightweight reference to a ActivityGroup -->
    <class name="minestar.production.domain.ActivityGroupReference" table="ACTIVITY_GROUP" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">ACTIVITY_GROUP_REFERENCE</meta>
        <meta attribute="description">A minimal reference to an activity group.</meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="ACTIVITY_GROUP_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
    </class>

</hibernate-mapping>
