<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.production.domain.DelayActivityType"
           table="DELAY_ACTIVITY_TYPE">

        <meta attribute="alias" inherit="false">DelayActivityType</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=DELAYACTIVITYTYPE_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="description">A prototype or template delay activity used to construct real delays.</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="DELAYACTIVITYTYPE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">The name of this type of delay activity.</meta>
        </property>
        
        <property name="description" type="string" column="DESCRIPTION" length="254">
            <meta attribute="description">A free form description of this type of delay activity.</meta>
        </property>

        <property name="code" type="string" column="CODE" length="254">
            <meta attribute="description">A code for this type of delay activity.</meta>
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The External System Reference</meta>
        </property>
        
        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The External System Description</meta>
        </property>

    </class>

    <!-- A lightweight reference to a DelayActivityType -->
    <class name="minestar.production.domain.DelayActivityTypeReference" table="DELAY_ACTIVITY_TYPE" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">DELAY_ACTIVITY_TYPE_REF</meta>
        <meta attribute="description">A minimal reference to a DelayActivityType.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="DELAYACTIVITYTYPE_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
    </class>

</hibernate-mapping>
