<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="timeUsageModelUCCImpl" class="minestar.platform.uifacade.timeusagemodel.impl.TimeUsageModelUCCImpl"
          lazy-init="true">
        <property name="timeUsageModelService" ref="timeUsageModelManagementServiceImpl"/>
        <property name="delayManagementService" ref="delayManagementServiceImpl"/>
        <property name="fleetProductionService" ref="fleetProductionServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerTimeUsageModelUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Time Usage Model UCC"/>
        <constructor-arg value="minestar.platform.uifacade.timeusagemodel.TimeUsageModelUCCFacade"/>
        <constructor-arg ref="timeUsageModelUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="timeUsageModelUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="timeUsageModelUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="timeUsageModelUCC"/>
        <property name="service" ref="timeUsageModelUCCProxy"/>
        <property name="serviceInterface" value="minestar.platform.uifacade.timeusagemodel.TimeUsageModelUCCFacade"/>
    </bean>

</beans>
