<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="historical">

    <class name="minestar.pitlink.domain.machine.ExpandingBubbleInfo"
           table="EXPANDING_BUBBLE">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A record of an expanding bubble event.</meta>

        <meta attribute="index">
            name=EXPANDING_BUBBLE_IDX1
            columns=MACHINE,EVENT_TIME
            tablespace=MW_IDXENT
        </meta>

        <id name="OID"
            type="java.lang.Long"
            column="OID"
            access="field"
        >
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one name="machine"
                     column="MACHINE"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     not-found="ignore"
                     not-null="true">
            <meta attribute="description">
                A reference to the machine (MSMODEL.MACHINE).
            </meta>
        </many-to-one>

        <property name="bubbleReason"
                  type="java.lang.String"
                  column="BUBBLE_REASON"
                  not-null="true">
            <meta attribute="choices" inherit="false">choice:expandingBubbleReason</meta>
            <meta attribute="description">The reason why the bubble occurred.</meta>
        </property>

        <property name="bubbleActive"
                  type="java.lang.Boolean"
                  column="BUBBLE_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">false</meta>
            <meta attribute="description">True if the bubble is currently active.</meta>
        </property>

        <property name="eventTime"
                  type="java.util.Date"
                  column="EVENT_TIME"
                  not-null="true">
            <meta attribute="description">The time the event became active / inactive.</meta>
        </property>

        <property name="heading"
                  column="HEADING">
            <meta attribute="description">The heading at the time of the last good position.</meta>
            <meta attribute="unitType">plane angle</meta>
            <type name="quantity">
                <param name="unitType">plane angle</param>
            </type>
        </property>

        <property name="lastPositionReportDate"
                  type="TimestampType"
                  column="LAST_POSITION_REPORT_DATE_UTC">
            <meta attribute="utc-description">The utc time when the position report was last updated.</meta>
            <meta attribute="description">The time when the position report was last updated.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">The last known location of the machine.</meta>
            <column name="X" />
            <column name="Y" />
            <column name="Z" />
        </property>

        <property name="positionAccuracy"
                  column="POSITION_ACCURACY">
            <meta attribute="description">The reported accuracy of the position.</meta>
            <meta attribute="unitType">length</meta>
            <type name="quantity">
                <param name="unitType">length</param>
            </type>
        </property>
    </class>

    <class name="minestar.pitlink.domain.machine.ExpandingBubbleSummary"
           table="EXPANDING_BUBBLE_SUMMARY">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A summary record of an expanding bubble event.</meta>

        <meta attribute="index">
            name=EXPANDING_BUBBLE_SUMM_IDX1
            columns=MACHINE,ACTIVE_TIME_UTC,INACTIVE_TIME_UTC
            tablespace=MW_IDXENT
        </meta>

        <id name="OID"
            type="java.lang.Long"
            column="OID"
            access="field"
        >
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one name="machine"
                     column="MACHINE"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     not-found="ignore"
                     not-null="true">
            <meta attribute="description">
                A reference to the machine (MSMODEL.MACHINE).
            </meta>
        </many-to-one>

        <property name="activeReason"
                  type="java.lang.String"
                  column="ACTIVE_REASON"
                  not-null="true">
            <meta attribute="choices" inherit="false">choice:expandingBubbleReason</meta>
            <meta attribute="description">The reason why the bubble occurred.</meta>
        </property>

        <property name="activeTime"
                  type="TimestampType"
                  column="ACTIVE_TIME_UTC"
                  not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="utc-description">The utc time the event became active.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="inactiveReason"
                  type="java.lang.String"
                  column="INACTIVE_REASON"
                  not-null="true">
            <meta attribute="choices" inherit="false">choice:expandingBubbleReason</meta>
            <meta attribute="description">The reason why the bubble stopped.</meta>
        </property>

        <property name="inactiveTime"
                  type="TimestampType"
                  column="INACTIVE_TIME_UTC"
                  not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="utc-description">The utc time the event became inactive.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="category"
                  type="java.lang.String"
                  column="CATEGORY"
                  not-null="true">
            <meta attribute="choices" inherit="false">choice:expandingBubbleCategory</meta>
            <meta attribute="description">True category of the bubble.</meta>
        </property>

        <property name="heading"
                  column="HEADING">
            <meta attribute="description">The heading at the time of the last good position.</meta>
            <meta attribute="unitType">plane angle</meta>
            <type name="quantity">
                <param name="unitType">plane angle</param>
            </type>
        </property>

        <property name="lastPositionReportDate"
                  type="TimestampType"
                  column="LAST_POSITION_REPORT_DATE_UTC">
            <meta attribute="utc-description">The utc time when the position report was last updated.</meta>
            <meta attribute="description">The time when the position report was last updated.</meta>
            <meta attribute="view-localtime">true</meta>
        </property>

        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">The last known location of the machine.</meta>
            <column name="X" />
            <column name="Y" />
            <column name="Z" />
        </property>

        <property name="positionAccuracy"
                  column="POSITION_ACCURACY">
            <meta attribute="description">The reported accuracy of the position.</meta>
            <meta attribute="unitType">length</meta>
            <type name="quantity">
                <param name="unitType">length</param>
            </type>
        </property>

        <property name="machineName"
                  type="java.lang.String"
                  column="MACHINE_NAME"
                  not-null="true">
            <meta attribute="description">The name of the machine reporting the expanding bubble event.</meta>
        </property>
    </class>

</hibernate-mapping>
