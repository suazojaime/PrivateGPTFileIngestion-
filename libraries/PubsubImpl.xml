<!--
    Beans for the server-side of the publish and subscribe service.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="notification" class="com.mincom.util.event.NotificationServerImpl"
          init-method="start" destroy-method="stop" depends-on="notificationConfig">
        <constructor-arg name="port" value="${MSTAR_NOTIFICATION_PORT}"/>
    </bean>

</beans>
