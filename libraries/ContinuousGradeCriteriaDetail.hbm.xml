<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="minestar.mine.domain.material" schema="historical">

    <class name="ContinuousGradeCriteriaDetail" table="CONT_GRADE_CRITERIA_DETAIL">
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A discrete grade criteria detail record</meta>

        <id
                name="OID"
                type="java.lang.Long"
                column="OID"
                >
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one
                class="minestar.mine.domain.material.BlendDetail"
                name="blendDetail"
                column="BLEND_DETAIL_OID"
                not-null="true"/>
        <property
                name="gradeOID"
                type="java.lang.Long"
                column="GRADE_OID"
                not-null="false"
        >
            <meta attribute="description">The grade OID</meta>
        </property>
        <property
                name="gradeName"
                type="java.lang.String"
                column="GRADE_NAME"
                length="1016"
                not-null="false"
                >
            <meta attribute="description">The grade name</meta>
        </property>
        <property
                name="unitType"
                type="java.lang.String"
                column="UNIT_TYPE"
                length="254"
                >
            <meta attribute="description">The grade table unit type of the continuous grade criteria</meta>
        </property>
        <!-- This property will be copied from the grade table -->
        <property
                name="unitName"
                type="java.lang.String"
                column="UNIT_NAME"
                length="254"
                >
            <meta attribute="description">The grade table unit name of the continuous grade criteria</meta>
        </property>
        <property
                name="minimumValue"
                column="MINIMUM_VALUE"
                not-null="false"
                >
            <meta attribute="unitType">unitless</meta>
            <meta attribute="quantity">unitType,unitName</meta>
            <meta attribute="description">The minimum value of the continuous grade criteria</meta>
        </property>
        <property
                name="maximumValue"
                column="MAXIMUM_VALUE"
                not-null="false"
                >
            <meta attribute="unitType">unitless</meta>
            <meta attribute="quantity">unitType,unitName</meta>
            <meta attribute="description">The minimum value of the continuous grade criteria</meta>
        </property>
        <property
                name="lowerLimit"
                column="LOWER_LIMIT"
                not-null="false"
                >
            <meta attribute="unitType">ratio</meta>
            <meta attribute="description">The lower limit of the discrete grade criteria</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>
        <property
                name="upperLimit"
                column="UPPER_LIMIT"
                not-null="false"
                >
            <meta attribute="unitType">ratio</meta>
            <meta attribute="description">The upper limit value of the discrete grade criteria</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>



    </class>
</hibernate-mapping>
