        <addPrimaryKey columnNames="OID,MACHINE_CLASS_OID" constraintName="WATER_STATION_REFILLABLE_CL_PK" tablespace="MW_IDXENT" tableName="WATER_STATION_REFILLABLE_CLASS"/>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    <changeSet id="2fd96814-9abe-44a2-bc01-7f4a1dacb1c7" author="MineStar" context="Pit_Link/Pit_Link_Management" failOnError="false">
