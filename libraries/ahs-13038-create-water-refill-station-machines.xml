    <changeSet id="a7122654-f917-4460-8133-fb76782ae015" author="MineStar" context="Pit_Link/Pit_Link_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for MACHINE_CLASS_REFILL_TIME as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="MACHINE_CLASS_REFILL_TIME"/>
            </not>
        </preConditions>
        <comment>AHS-13038: CreateTable MACHINE_CLASS_REFILL_TIME</comment>
        <createTable tablespace="MW_ENT" remarks="The time it takes to refill a certain class of machine with water" tableName="MACHINE_CLASS_REFILL_TIME">
            <column name="OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="MACHINE_CLASS_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="REFILL_TIME" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="OID,MACHINE_CLASS_OID" constraintName="MACHINE_CLASS_REFILL_TIME_PK" tablespace="MW_IDXENT" tableName="MACHINE_CLASS_REFILL_TIME"/>
        <createIndex unique="false" tablespace="MW_IDXENT" tableName="MACHINE_CLASS_REFILL_TIME" indexName="MACHINE_CLASS_REFILL_TIME_12U">
            <column name="OID"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
