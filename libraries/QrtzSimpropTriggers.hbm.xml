<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="model">

    <class
            name="minestar.external.domain.QrtzSimpropTriggers"
            table="QRTZ_SIMPROP_TRIGGERS"
    >
        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>
        <meta attribute="description">The Quartz trigger definitions.</meta>

        <composite-id name="compId" class="minestar.external.domain.QrtzSimpropTriggersPK">
            <key-many-to-one
                    name="qrtzTrigger"
                    class="minestar.external.domain.QrtzTrigger"
            >
                <meta attribute="use-in-equals">true</meta>
                <column name="TRIGGER_NAME"/>
                <column name="TRIGGER_GROUP"/>
            </key-many-to-one>
        </composite-id>

        <property name="schedName" type="java.lang.String">
            <meta attribute="description">The Scheduler name.</meta>
            <column name="SCHED_NAME" length="120" not-null="true" default="Sched1" />
        </property>
        <property
                name="triggerName"
                type="java.lang.String"
                column="TRIGGER_NAME"
                not-null="true"
                length="200"
                insert="false"
                update="false"
        >
            <meta attribute="description">Name of the Trigger.</meta>
        </property>
        <property
                name="triggerGroup"
                type="java.lang.String"
                column="TRIGGER_GROUP"
                not-null="true"
                length="200"
                insert="false"
                update="false"
        >
            <meta attribute="description">Group of the Trigger.</meta>
        </property>
        <property
                name="strProp1"
                type="java.lang.String"
                column="STR_PROP_1"
                length="512"
        >
            <meta attribute="description">String property 1.</meta>
        </property>
        <property
                name="strProp2"
                type="java.lang.String"
                column="STR_PROP_2"
                length="512"
        >
            <meta attribute="description">String property 2.</meta>
        </property>
        <property
                name="strProp3"
                type="java.lang.String"
                column="STR_PROP_3"
                length="512"
        >
            <meta attribute="description">String property 3.</meta>
        </property>
        <property
                name="intProp1"
                type="long"
                column="INT_PROP_1"
        >
            <meta attribute="description">Int property 1.</meta>
        </property>
        <property
                name="intProp2"
                type="long"
                column="INT_PROP_2"
        >
            <meta attribute="description">Int property 2.</meta>
        </property>
        <property
                name="longProp1"
                type="long"
                column="LONG_PROP_1"
        >
            <meta attribute="description">Long property 1.</meta>
        </property>
        <property
                name="longProp2"
                type="long"
                column="LONG_PROP_2"
        >
            <meta attribute="description">Long property 2.</meta>
        </property>
        <property
                name="decProp1"
                type="long"
                column="DEC_PROP_1"
        >
            <meta attribute="description">Decimal property 1.</meta>
        </property>
        <property
                name="decProp2"
                type="long"
                column="DEC_PROP_2"
        >
            <meta attribute="description">Decimal property 2.</meta>
        </property>
        <property
                name="boolProp1"
                type="boolean"
                column="BOOL_PROP_1"
        >
            <meta attribute="description">Boolean property 1.</meta>
        </property>
        <property
            name="boolProp2"
            type="boolean"
            column="BOOL_PROP_2"
         >
            <meta attribute="description">Boolean property 2.</meta>
        </property>
        <!-- associations -->
        <one-to-one
                name="qrtzTrigger"
                class="minestar.external.domain.QrtzTrigger"
                outer-join="auto"
                constrained="true"
        >
        </one-to-one>
    </class>
</hibernate-mapping>
