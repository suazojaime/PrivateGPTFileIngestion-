<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="historical">

    <class name="minestar.production.domain.underground.machine.UndergroundOperationModeChangeRecord"
           table="MGEM_MODE_CHANGE_RECORD"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">MGEM_MODE_CHANGE_RECORD</meta>
        <meta attribute="description">
            A historical record of when a Command Underground machine changes its operation control mode.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MGMTL
            columns=MACHINE
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="historical" />

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator" />
        </id>

        <many-to-one name="machine"
                     column="MACHINE"
                     class="minestar.pitlink.domain.machine.MachineReference">
            <meta attribute="description">
                A reference to the machine (MSMODEL.MACHINE) whose mode changed.</meta>
        </many-to-one>

        <property name="operationMode"
                  type="minestar.pitlink.domain.pitmodel.UndergroundOperationModeEnumUserType"
                  column="MGEM_MODE">
            <meta attribute="description">The mode that the machine changed to.</meta>
        </property>

        <property name="oldOperationMode"
                  type="minestar.pitlink.domain.pitmodel.UndergroundOperationModeEnumUserType"
                  column="OLD_MGEM_MODE">
            <meta attribute="description">The mode that the machine was previously in.</meta>
        </property>

        <property name="changeDate"
                  type="TimestampType"
                  column="CHANGE_DATE_UTC"
                  not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when the mode change occurred.</meta>
            <meta attribute="utc-description">The UTC timestamp of when the mode change occurred.</meta>
        </property>

        <property name="sequenceNumber"
                  type="java.lang.Integer"
                  column="SEQUENCE_NO">
            <meta attribute="description">
                The sequence number of the incoming field message that resulted in the mode change.
            </meta>
        </property>

    </class>

</hibernate-mapping>
