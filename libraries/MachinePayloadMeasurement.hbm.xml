<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" default-access="field" schema="historical">

    <class name="minestar.pitlink.domain.machine.MachinePayloadMeasurement" table="MACHINE_PAYLOAD_MEASUREMENT">
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MACHINE_PAYLOAD_MEASUREMENT_I1
            columns=CYCLE_OID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=MACHINE_PAYLOAD_MEASUREMENT_I2
            unique=true
            columns=MACHINE_OID, SOURCE_SYSTEM, TIMESTAMP_UTC
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A payload measurement.</meta>

        <id name="OID" type="long" column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one name="machineReference" class="minestar.pitlink.domain.machine.MachineReference" column="MACHINE_OID" not-null="true"/>

        <many-to-one name="cycleReference" class="minestar.production.domain.cycle.CycleReference" column="CYCLE_OID">
            <meta attribute="foreign-key">
                on-delete=SET_NULL
            </meta>
        </many-to-one>

        <property name="sourceSystem" type="minestar.pitlink.domain.machine.MachinePayloadSourceSystem$UserType" column="SOURCE_SYSTEM" not-null="true">
            <meta attribute="choices" inherit="false">choice:payloadSourceSystems</meta>
        </property>

        <property name="value" column="VALUE">
            <meta attribute="description">The payload measurement</meta>
            <meta attribute="unitType">mass</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <property name="confidence" column="CONFIDENCE">
            <meta attribute="description">The payload confidence</meta>
            <meta attribute="unitType">mass</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <property name="timestamp" type="TimestampType" column="TIMESTAMP_UTC" not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The utc timestamp.</meta>
            <meta attribute="description">The timestamp</meta>
        </property>

    </class>

</hibernate-mapping>
