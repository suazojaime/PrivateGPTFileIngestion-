<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="roadUCCImpl" class="minestar.mine.uifacade.road.impl.RoadUCCImpl" lazy-init="true">
        <property name="mineLayoutService" ref="mineLayoutServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerRoadUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Road UCC"/>
        <constructor-arg value="minestar.mine.uifacade.road.RoadUCCFacade"/>
        <constructor-arg ref="roadUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="roadUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="roadUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="roadUCC"/>
        <property name="service" ref="roadUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.road.RoadUCCFacade"/>
    </bean>

</beans>
