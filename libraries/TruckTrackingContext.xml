<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <bean id="offCourseProcessor" class="minestar.machinetracking.service.path.offcourse.OffCourseProcessor" lazy-init="true" init-method="init">
        <constructor-arg name="alarmService" ref="alarmServiceImpl"/>
        <constructor-arg name="mineFleetService" ref="mineFleetServiceImpl"/>
        <constructor-arg name="mineLayoutService" ref="mineLayoutServiceImpl"/>
        <constructor-arg name="onboardHardwareService" ref="onboardHardwareServiceImpl"/>
        <constructor-arg name="pitModelService" ref="pitModelServiceImpl"/>
        <constructor-arg name="notification" ref="notification"/>
    </bean>

    <bean id="offCourseTruckProcessorImpl" class="minestar.machinetracking.service.path.offcourse.OffCourseTruckAlarmProcessorImpl" lazy-init="true">
        <property name="alarmService" ref="alarmServiceImpl"/>
        <property name="onboardHardwareService" ref="onboardHardwareServiceImpl"/>
        <property name="scheduledAssignmentService" ref="scheduledAssignmentServiceImpl"/>
        <property name="mineLayoutService" ref="mineLayoutServiceImpl"/>
    </bean>

    <bean id="registerOffTruckCourseProcessor" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Off-Course Truck Processor"/>
        <constructor-arg value="minestar.machinetracking.service.path.offcourse.OffCourseTruckAlarmProcessor"/>
        <constructor-arg ref="offCourseTruckProcessorImpl"/>
    </bean>

</beans>
