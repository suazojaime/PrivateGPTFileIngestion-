<!-- Put all Command only services/beans in here -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:condbean="http://www.minestar.au.cat.com/springbeans/condbean"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.minestar.au.cat.com/springbeans/condbean http://www.minestar.au.cat.com/springbeans/condbean/condbeans.xsd
        ">

    <bean id="accessLaneChangeListener" class="minestar.mine.service.minemodel.AccessLaneChangeListener" init-method="init">
        <property name="loadPlanningService" ref="loadPlanningServiceImpl" />
        <property name="dumpPlanningService" ref="dumpPlanningServiceImpl" />
        <property name="transactionManager" ref="minestarTransactionManager"/>
        <property name="laneLayoutService" ref="laneLayoutServiceImpl"/>
        <property name="planLaneInformationService" ref="planLaneInformationServiceImpl"/>
        <property name="notification" ref="notification"/>
    </bean>

    <bean id="laneUpdateRequestHandlerImpl"
          class="minestar.autonomy.service.communications.LaneUpdateRequestHandlerImpl"
          init-method="init">
        <property name="dynamicModelUpdateService" ref="dynamicModelUpdateServiceImpl"/>
        <property name="notification" ref="notification"/>
    </bean>

    <bean id="activeLockRequestHandlerImpl" class="minestar.autonomy.service.communications.ActiveLockRequestHandlerImpl"
          lazy-init="true" init-method="init">
        <property name="panelSynchronizationService" ref="panelSynchronizationServiceImpl"/>
        <property name="notification" ref="notification"/>
    </bean>

    <bean id="surfaceUpdateListenerImpl"
          class="minestar.mine.service.topology.SurfaceUpdateListenerImpl"
          init-method="init">
        <property name="laneLayoutService" ref="laneLayoutServiceImpl"/>
        <property name="notification" ref="notification"/>
    </bean>

    <bean id="queueingTruckMonitorImpl"
          class="minestar.autonomy.service.traffic.QueueingTruckMonitorImpl"
          init-method="init"
          depends-on="registerMineLayoutService">
        <property name="autonomousStateService" ref="autonomousStateServiceImpl"/>
        <property name="notification" ref="notification"/>
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
        <property name="pitModelService" ref="pitModelServiceImpl"/>
        <property name="onboardHardwareService" ref="onboardHardwareServiceImpl"/>
        <property name="trafficManagementsDestinationResolver" ref="trafficManagementDestinationResolverImpl" />
    </bean>

    <bean id="autonomousMachineUtilExecutor"
          class="minestar.pitlink.util.fleet.AutonomousMachineUtilExecutorImpl"
         >
    </bean>

    <bean id="proximityIncidentNotifier"
          class="minestar.autonomy.service.communications.incident.ProximityIncidentNotifierImpl"
          lazy-init="false" init-method="init">
        <property name="notification" ref="notification"/>
        <property name="autonomousMachineUtilExecutor" ref="autonomousMachineUtilExecutor"/>
        <property name="laneUsageService" ref="laneUsageServiceImpl"/>
    </bean>

    <bean id="expandingBubbleEventHandler"
          class="minestar.autonomy.service.expandingbubble.ExpandingBubbleInfoEventHandlerImpl"
          init-method="init" destroy-method="stop">
        <constructor-arg name="expandingBubbleDao">
            <bean class="minestar.autonomy.service.expandingbubble.persistence.ExpandingBubbleDaoImpl" parent="minestarDao"/>
        </constructor-arg>
        <constructor-arg name="mineFleetService" ref="mineFleetServiceImpl"/>
        <constructor-arg name="notification" ref="notification"/>
        <constructor-arg name="txManager" ref="minestarTransactionManager"/>
    </bean>

    <bean id="expandingBubbleSummaryServiceImpl"
          class="minestar.autonomy.service.expandingbubble.ExpandingBubbleSummaryServiceImpl"
          init-method="init">
        <property name="expandingBubbleSummariser" ref="expandingBubbleSummariser"/>
        <property name="shiftService" ref="shiftServiceImpl"/>
        <property name="txManager" ref="minestarTransactionManager"/>
        <property name="notification" ref="notification"/>
    </bean>

    <bean id="registerExpandingBubbleSummaryService" parent="registrationInstance">
        <constructor-arg value="Expanding Bubble Summary Service"/>
        <constructor-arg value="minestar.autonomy.service.expandingbubble.ExpandingBubbleSummaryService"/>
        <constructor-arg ref="expandingBubbleSummaryServiceImpl"/>
    </bean>


    <bean id="expandingBubbleSummariser"
          class="minestar.autonomy.service.expandingbubble.ExpandingBubbleSummariserImpl"
          init-method="init">
        <property name="expandingBubbleDao">
            <bean class="minestar.autonomy.service.expandingbubble.persistence.ExpandingBubbleDaoImpl" parent="minestarDao"/>
        </property>
        <property name="expandingBubbleSummaryDao">
            <bean class="minestar.autonomy.service.expandingbubble.persistence.ExpandingBubbleSummaryDaoImpl" parent="minestarDao"/>
        </property>
    </bean>

    <bean id="dozerManagedPostPlanningProcessor"
          class="minestar.autonomy.service.planning.dumpplanning.DozerManagedPostPlanningProcessor"
          init-method="init"
          destroy-method="destroy">
        <property name="txManager" ref="minestarTransactionManager"/>
        <property name="dumpPlanningService" ref="dumpPlanningServiceImpl"/>
        <property name="notification" ref="notification"/>
     </bean>

    <bean id="lidarScanServiceImpl" class="minestar.mine.service.minemodel.lidarscan.LidarScanServiceImpl" init-method="init">
        <property name="dao">
            <bean class="minestar.mine.service.minemodel.lidarscan.LidarScanDaoImpl">
                <property name="jdbcTemplate" ref="gisJdbcTemplate"/>
            </bean>
        </property>
        <property name="notification" ref="notification"/>
        <property name="maxLidarScansPerPlan" value="${_WFS_MAX_LIDAR_SCANS_PER_PLAN}"/>
    </bean>

    <bean id="registerLidarScanService" parent="registrationInstance">
        <constructor-arg value="LidarScanService"/>
        <constructor-arg value="minestar.mine.service.minemodel.lidarscan.LidarScanService"/>
        <constructor-arg ref="lidarScanServiceImpl"/>
    </bean>

    <bean id="vehicleDataServiceImpl" class="minestar.pitlink.service.vehicledata.VehicleDataServiceImpl"
          lazy-init="true" init-method="init">
        <constructor-arg name="vehicleDataDao">
            <bean class="minestar.pitlink.persistence.vehicledata.VehicleDataDaoImpl">
                <constructor-arg name="pitModelDataSource" ref="pooledPitmodelDataSource"/>
                <constructor-arg name="sequenceValueService" ref="sequenceValueServiceImpl"/>
            </bean>
        </constructor-arg>
        <constructor-arg name="notification" ref="notification"/>
        <constructor-arg name="pitModelTxManager" ref="pitmodelTransactionManager"/>
    </bean>

    <bean id="registerVehicleDataService" parent="registrationInstance" lazy-init="true" >
        <constructor-arg value="Vehicle Data Service"/>
        <constructor-arg value="minestar.pitlink.service.vehicledata.VehicleDataService"/>
        <constructor-arg ref="vehicleDataServiceImpl"/>
    </bean>

    <condbean:cond license="WaterTruck">
        <bean id="surfaceSaturationServiceImpl" class="minestar.pitlink.service.surfacesaturation.SurfaceSaturationServiceImpl"
              init-method="init">
            <constructor-arg name="surfaceSaturationDao">
                <bean class="minestar.pitlink.persistence.surfacesaturation.SurfaceSaturationDaoImpl">
                    <constructor-arg name="pitModelDataSource" ref="pooledPitmodelDataSource"/>
                </bean>
            </constructor-arg>
            <constructor-arg name="surfaceSaturationConfigDao">
                <bean class="minestar.pitlink.persistence.surfacesaturation.SurfaceSaturationConfigDaoImpl">
                    <constructor-arg name="sequenceValueService" ref="sequenceValueServiceImpl"/>
                    <constructor-arg name="pitModelDataSource" ref="pooledPitmodelDataSource"/>
                </bean>
            </constructor-arg>
            <constructor-arg name="planSaturationDao">
                <bean class="minestar.pitlink.persistence.surfacesaturation.PlanSaturationDaoImpl">
                    <constructor-arg name="pitModelDataSource" ref="pooledPitmodelDataSource"/>
                </bean>
            </constructor-arg>
            <constructor-arg name="notification" ref="notification"/>
            <constructor-arg name="pitModelTxManager" ref="pitmodelTransactionManager"/>
            <constructor-arg name="waterEvaporationRatesService" ref="waterEvaporationRatesServiceImpl"/>
            <constructor-arg name="settingsService" ref="settingsServiceImpl"/>
            <constructor-arg name="dimensionManagementService" ref="dimensionManagementServiceImpl"/>
            <constructor-arg name="laneLayoutService" ref="laneLayoutServiceImpl"/>
            <constructor-arg name="lanePositionIndexHelper">
                <bean class="minestar.pitlink.service.surfacesaturation.LanePositionIndexHelper" init-method="init">
                    <constructor-arg name="notification" ref="notification"/>
                </bean>
            </constructor-arg>
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="registerSurfaceSaturationService" parent="registrationInstance">
            <constructor-arg value="Surface Saturation Service"/>
            <constructor-arg value="minestar.pitlink.service.surfacesaturation.SurfaceSaturationService"/>
            <constructor-arg ref="surfaceSaturationServiceImpl"/>
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="awtRoutePathManagementServiceImpl" class="minestar.autonomy.service.watertruck.AWTRoutePathManagementServiceImpl">
            <constructor-arg name="autonomousStateService" ref="autonomousStateServiceImpl"/>
            <constructor-arg name="awtAssignmentService" ref="awtAssignmentServiceImpl"/>
            <constructor-arg name="dumpPlanningService" ref="dumpPlanningServiceImpl" />
            <constructor-arg name="laneLayoutService" ref="laneLayoutServiceImpl"/>
            <constructor-arg name="laneTravelService" ref="laneTravelServiceImpl"/>
            <constructor-arg name="laneUsageStateService" ref="laneUsageStateServiceImpl" />
            <constructor-arg name="mineFleetService" ref="mineFleetServiceImpl"/>
            <constructor-arg name="planAssociationService" ref="planAssociationServiceImpl"/>
            <constructor-arg name="planLaneInformationService" ref="planLaneInformationServiceImpl"/>
            <constructor-arg name="spoilPileManagementService" ref="spoilPileManagementServiceImpl" />
            <constructor-arg name="laneUsageStateService" ref="laneUsageStateServiceImpl" />
            <constructor-arg name="wateringCircuitService" ref="wateringCircuitServiceImpl" />
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="registerAWTRoutePathManagementService" parent="registrationInstance">
            <constructor-arg value="AWTStatus Route Path Management Service"/>
            <constructor-arg value="minestar.autonomy.service.watertruck.AWTRoutePathManagementService"/>
            <constructor-arg ref="awtRoutePathManagementServiceImpl"/>
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="awtStatusProcessorServiceImpl" class="minestar.autonomy.service.watertruck.AWTStatusProcessorServiceImpl" init-method="init">
            <constructor-arg name="notification" ref="notification"/>
            <constructor-arg name="mineFleetService" ref="mineFleetServiceImpl"/>
            <constructor-arg name="pitModelService" ref="pitModelServiceImpl"/>
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="registerAWTStatusProcessorService" parent="registrationInstance">
            <constructor-arg value="AWTStatus Processor Service"/>
            <constructor-arg value="minestar.autonomy.service.watertruck.AWTStatusProcessorService"/>
            <constructor-arg ref="awtStatusProcessorServiceImpl"/>
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="truckTransitEvaporationServiceImpl" class="minestar.autonomy.service.watertruck.TruckTransitEvaporationServiceImpl" init-method="init">
            <constructor-arg name="notification" ref="notification"/>
            <constructor-arg name="mineFleetService" ref="mineFleetServiceImpl"/>
            <constructor-arg name="pitModelService" ref="pitModelServiceImpl"/>
            <constructor-arg name="laneLayoutService" ref="laneLayoutServiceImpl"/>
            <constructor-arg name="dimensionManagementService" ref="dimensionManagementServiceImpl"/>
            <constructor-arg name="waterEvaporationRatesService" ref="waterEvaporationRatesServiceImpl"/>
        </bean>
    </condbean:cond>

    <condbean:cond license="WaterTruck">
        <bean id="registerTruckTransitEvaporationService" parent="registrationInstance">
            <constructor-arg value="Truck Transit Evaporation Service"/>
            <constructor-arg value="minestar.autonomy.service.watertruck.TruckTransitEvaporationService"/>
            <constructor-arg ref="truckTransitEvaporationServiceImpl"/>
        </bean>
    </condbean:cond>

    <bean id="assignmentLocationServiceImpl"
          class="minestar.autonomy.service.assignmentlocation.AssignmentLocationServiceImpl"
          lazy-init="true"
          init-method="init">
        <property name="pitModelService" ref="pitModelServiceImpl"/>
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
        <property name="notification" ref="notification"/>
    </bean>

    <bean id="registerAssignmentLocationService" parent="registrationInstance">
        <constructor-arg value="Assignment Location Service"/>
        <constructor-arg value="minestar.autonomy.service.assignmentlocation.AssignmentLocationService"/>
        <constructor-arg ref="assignmentLocationServiceImpl"/>
    </bean>
</beans>
