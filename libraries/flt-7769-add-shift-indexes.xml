<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet id="1f3008d2-06e7-40f4-bdd8-c87438ae1658" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for SHIFT_NAME of table SHIFT as index does not exist."
                       onFail="MARK_RAN">
            <indexExists indexName="SHIFT_NAME" tableName="SHIFT"/>
        </preConditions>
        <comment>FLT-7769: DropIndex SHIFT_NAME from SHIFT (NAME)</comment>
        <dropIndex indexName="SHIFT_NAME" tableName="SHIFT"/>
        <rollback>
            <createIndex unique="false" tablespace="MW_IDXENT" indexName="SHIFT_NAME" tableName="SHIFT">
                <column name="NAME"/>
            </createIndex>
        </rollback>
        <modifySql applyToRollback="true" dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    
    <changeSet id="d50b82b0-866b-4646-a6db-dd0f09cde0a9" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored CreateUniqueIndex for SHIFT_STARTTIME to table SHIFT as (1) table does not exist, or (2) index already exists."
                onFail="MARK_RAN">
            <tableExists tableName="SHIFT"/>
            <not>
                <indexExists indexName="SHIFT_STARTTIME" tableName="SHIFT"/>
            </not>
        </preConditions>
        <comment>FLT-7769: CreateUniqueIndex SHIFT_STARTTIME on SHIFT (STARTTIME_UTC)</comment>
        <createIndex unique="true" tablespace="MW_IDXENT" indexName="SHIFT_STARTTIME" tableName="SHIFT">
            <column name="STARTTIME_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

    <changeSet id="90c63392-8ec4-4292-9409-5250f8d7c087" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for SHIFT_NAME to table SHIFT as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="SHIFT"/>
            <not>
                <indexExists indexName="SHIFT_NAME" tableName="SHIFT"/>
            </not>
        </preConditions>
        <comment>FLT-8385: CreateIndex SHIFT_NAME on SHIFT (NAME)</comment>
        <createIndex unique="false" tablespace="MW_IDXENT" tableName="SHIFT" indexName="SHIFT_NAME">
            <column name="NAME"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    
</databaseChangeLog>
