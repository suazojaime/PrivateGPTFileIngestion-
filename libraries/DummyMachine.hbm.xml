<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.pitlink.domain.machine.MachineImpl" table="MACHINE">

        <meta attribute="noDatabaseMetadata" inherit="false">true</meta>

        <!--
            NOTE This dummy class exists so that MeasureLimits can be provided with a
            foreign key in the generated H2 database.
        -->

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>

        <meta attribute="description">Logical limits of the range of measure values</meta>

        <id name="OID" type="long" column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>
    </class>

    <!-- A lightweight reference to a Machine -->
    <class name="minestar.pitlink.domain.machine.MachineReference"
           table="MACHINE"
           mutable="false">

        <meta attribute="alias" inherit="false">MACHINE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a machine.</meta>
        <meta attribute="view-create-order">1</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="MACHINE_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="id" type="short" column="ID" not-null="true"/>
    </class>

</hibernate-mapping>
