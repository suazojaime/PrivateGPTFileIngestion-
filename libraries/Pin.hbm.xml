<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.pin.PinImpl"
           proxy="minestar.mine.domain.minemodel.underground.pin.Pin"
           table="PIN"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">PIN</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            A pin is used to mark the location of an object or point of interest.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="PIN_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this wall is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="modelUpdateVersion"
                  type="java.lang.Long"
                  column="MODEL_UPDATE_VERSION">
            <meta attribute="description">Copy of the system wide version number</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="text"
                  type="java.lang.String"
                  column="TEXT"
                  length="254"
                  not-null="true">
            <meta attribute="description">The text to display for the pin</meta>
        </property>

        <property name="position"
                  type="XYZCoordinate">
            <meta attribute="description">The position of the pin.</meta>
            <column name="POSITION_X"/>
            <column name="POSITION_Y"/>
            <column name="POSITION_Z"/>
        </property>

        <many-to-one name="lastUpdatedBy"
                     class="minestar.platform.domain.user.UserReference"
                     column="LAST_UPDATED_BY"
                     not-null="true">
            <meta attribute="description">
                A reference to the user (MSMODEL.USER) who last updated the pin.
            </meta>
        </many-to-one>

        <property name="lastUpdatedOn" type="TimestampType">
            <meta attribute="timestamp">true</meta>
            <meta attribute="utc-description">The utc time the cycle was last updated.</meta>
            <meta attribute="description">The utc time the cycle was last updated.</meta>
            <meta attribute="view-localtime">true</meta>
            <column name="LAST_UPDATED_ON_UTC"/>
        </property>

    </class>
</hibernate-mapping>
