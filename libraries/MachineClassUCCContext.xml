<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="machineClassUCCImpl" class="minestar.pitlink.uifacade.machineclass.impl.MachineClassUCCImpl"
          lazy-init="true">
        <property name="configServiceFacade" ref="configServiceFacadeImpl"/>
        <property name="dimensionManagementService" ref="dimensionManagementServiceImpl"/>
        <property name="machineIconService" ref="machineIconServiceImpl"/>
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerMachineClassUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Machine Class UCC"/>
        <constructor-arg value="minestar.pitlink.uifacade.machineclass.MachineClassUCCFacade"/>
        <constructor-arg ref="machineClassUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="machineClassUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="machineClassUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="machineClassUCC"/>
        <property name="service" ref="machineClassUCCProxy"/>
        <property name="serviceInterface" value="minestar.pitlink.uifacade.machineclass.MachineClassUCCFacade"/>
    </bean>

</beans>
