<LogicalEventDefinition>

    <!-- Activity Report  Just like a state change but not called that-->
    <!-- Initially used for the Macraes ROM loader as a load report   -->
    <LogicalEventRule
        name="Report.Activity"
        criteria="name='Machine Activity'"
        />

    <LogicalEventRule
        name="Report.JobCode"
        criteria="name='Job Code'"
        />
    
    <LogicalEventRule
        name="Machine.Operator.Change"
        criteria="name='Machine Operator Change'"
        />

    <!-- Add the names of the stations where water trucks refill -->
    <LogicalEventRule
        name="End.Cycle"
        criteria="(name='Machine Position Report' and
                    (get('beaconInfo').get('location').isStation() = true and isEntering() = true) and
                    (get('beaconInfo').get('location').getName() = 'QPNT_NRTH'))"
        />
    <!--
    <LogicalEventRule
        name="End.Cycle"
        criteria="(name='Machine Position Report' and
                    (get('beaconInfo').get('location').isStation() = true and isEntering() = true) and
                    ((get('beaconInfo').get('location').getName() = 'Q-POINT NORTH') or
                    (get('beaconInfo').get('location').getName() = 'WATER STATION 1') or
                    (get('beaconInfo').get('location').getName() = 'WATER STATION 2')
                    ))"
        />

    -->

    <LogicalEventRule
        name="Enter.Road.Segment.Beacon"
        criteria="(name='Machine Position Report' and
                    get('beaconInfo').get('connectedToRoad') = true and
                    isEntering() = true)"
        />

    <LogicalEventRule
        name="Exit.Road.Segment.Beacon"
        criteria="(name='Machine Position Report' and
                    get('beaconInfo').get('connectedToRoad') = true and
                    isExiting() = true)"
        />
    
</LogicalEventDefinition>
