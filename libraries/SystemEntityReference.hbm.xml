<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="minestar.externalreference.domain.SystemEntityReference" table="SYSTEM_ENTITY_REFERENCE" schema="model">
        <meta attribute="alias" inherit="false">SystemEntityReference</meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">System Entity Reference</meta>
        <id name="OID" type="java.lang.Long" column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>
        <property name="systemName" type="string" column="systemName" length="254">
            <meta attribute="description">External System Name</meta>
        </property>
        <property name="entityReference" type="string" column="entityReference" length="254">
            <meta attribute="description">External System Reference</meta>
        </property>
        <property name="entityType" type="string" column="entityType" length="254">
            <meta attribute="description">Entity Type</meta>
        </property>
    </class>

</hibernate-mapping>
