    <cache name="channelgroupdef"
           maxElementsInMemory="5000"
           eternal="true"
           overflowToDisk="false"
           diskPersistent="false"
           memoryStoreEvictionPolicy="LFU"
           statistics="true">
    </cache>

    <cache name="channeldescription"
           maxElementsInMemory="10000"
           eternal="true"
           overflowToDisk="false"
           diskPersistent="false"
           memoryStoreEvictionPolicy="LFU"
           statistics="true">
    </cache>


    <cache name="cumulativedef"
