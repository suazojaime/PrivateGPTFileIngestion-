<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet id="2cd43994-947f-4912-a57f-dc0933ead793" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for ADMIN_EVENT_UNIQ of table ADMIN_EVENT as index does not exist." onFail="MARK_RAN">
            <indexExists indexName="ADMIN_EVENT_UNIQ" tableName="ADMIN_EVENT"/>
        </preConditions>
        <comment>MO-14387: DropIndex ADMIN_EVENT_UNIQ from ADMIN_EVENT (SOURCE_TIMESTAMP_UTC,NAME,MACHINE_OID)</comment>
        <dropIndex tableName="ADMIN_EVENT" indexName="ADMIN_EVENT_UNIQ"/>
        <rollback>
            <sql dbms="oracle">DELETE FROM ADMIN_EVENT WHERE ROWID IN (SELECT RID FROM (SELECT ROWID RID, ROW_NUMBER() OVER (PARTITION BY SOURCE_TIMESTAMP_UTC,NAME,MACHINE_OID ORDER BY ROWID) RN FROM ADMIN_EVENT) WHERE RN &lt;&gt; 1)</sql>
            <sql dbms="mssql">WITH CTE AS (SELECT ROW_NUMBER() OVER (PARTITION BY SOURCE_TIMESTAMP_UTC,NAME,MACHINE_OID ORDER BY %%physloc%%) AS ROW_NUM FROM ADMIN_EVENT) DELETE FROM CTE WHERE ROW_NUM &gt; 1</sql>
            <createIndex unique="true" indexName="ADMIN_EVENT_UNIQ" tableName="ADMIN_EVENT">
                <column name="SOURCE_TIMESTAMP_UTC"/>
                <column name="NAME"/>
                <column name="MACHINE_OID"/>
            </createIndex>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
    
    <changeSet id="75328dde-6ced-4094-aa14-f5c70a2e9755" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for ADMIN_EVENT_TIME_NAME_MACHINE to table ADMIN_EVENT as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="ADMIN_EVENT"/>
            <not>
                <indexExists indexName="ADMIN_EVENT_TIME_NAME_MACHINE" tableName="ADMIN_EVENT"/>
            </not>
        </preConditions>
        <comment>MO-14387: CreateIndex ADMIN_EVENT_TIME_NAME_MACHINE on ADMIN_EVENT (SOURCE_TIMESTAMP_UTC,NAME,MACHINE_OID)</comment>
        <createIndex unique="false" tablespace="MW_IDXENT" indexName="ADMIN_EVENT_TIME_NAME_MACHINE" tableName="ADMIN_EVENT">
            <column name="SOURCE_TIMESTAMP_UTC"/>
            <column name="NAME"/>
            <column name="MACHINE_OID"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
