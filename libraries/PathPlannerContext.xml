<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <bean id="pathPlannerFactory" parent="serviceInstance" lazy-init="true">
        <constructor-arg value="minestar.autonomy.service.pathplanning.PathPlannerFactory"/>
    </bean>

    <bean id="adapterFactory" parent="serviceInstance" lazy-init="true">
        <constructor-arg value="minestar.autonomy.service.pathplanning.PathPlannerFactory"/>
    </bean>

    <bean id="pathPlanningService" parent="serviceInstance" lazy-init="true">
        <constructor-arg value="minestar.autonomy.service.pathplanning.PathPlanningService"/>
    </bean>

    <bean id="narrowAreaPlanningService" parent="serviceInstance" lazy-init="true">
        <constructor-arg value="minestar.autonomy.service.pathplanning.narrowarea.NarrowAreaPlanningService"/>
    </bean>
</beans>
