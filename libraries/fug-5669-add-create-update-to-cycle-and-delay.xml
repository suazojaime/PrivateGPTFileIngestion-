    <changeSet id="3ed6db2b-5b50-4456-b5fb-428dd3ba59bd" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for CREATED_DATE_UTC to table CYCLE as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLE"/>
            <not>
                <columnExists tableName="CYCLE" columnName="CREATED_DATE_UTC"/>
            </not>
        </preConditions>
        <comment>FUG-5669: AddColumn CYCLE.CREATED_DATE_UTC</comment>
        <addColumn tableName="CYCLE">
            <column name="CREATED_DATE_UTC" type="DATETIME2" remarks="The utc time the cycle was last updated."/>
        </addColumn>
    </changeSet>

    <changeSet id="0e9a7472-31b0-48eb-bb61-f58dd99cec1f" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for CYCLE_CREATED_DATE to table CYCLE as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLE"/>
            <not>
                <indexExists indexName="CYCLE_CREATED_DATE" tableName="CYCLE"/>
            </not>
        </preConditions>
        <comment>FUG-5669: CreateIndex CYCLE_CREATED_DATE on CYCLE (CREATED_DATE_UTC)</comment>
        <createIndex unique="false" tablespace="MW_IDXENT" tableName="CYCLE" indexName="CYCLE_CREATED_DATE">
            <column name="CREATED_DATE_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

