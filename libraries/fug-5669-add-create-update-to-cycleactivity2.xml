<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0f8fa735-378f-45a9-ba89-1606f83dacad" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for CYCLEACT_LAST_MODIFIED to table DELAY as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <indexExists indexName="CYCLEACT_LAST_MODIFIED" tableName="DELAY"/>
        </preConditions>
        <comment>FUG-5669: DropIndex CYCLEACT_LAST_MODIFIED on DELAY (LAST_MODIFIED_UTC)</comment>
        <dropIndex tableName="DELAY" indexName="CYCLEACT_LAST_MODIFIED"/>
        <rollback>
            <createIndex unique="false" tablespace="MW_IDXENT" tableName="DELAY" indexName="CYCLEACT_LAST_MODIFIED">
                <column name="LAST_MODIFIED_UTC"/>
            </createIndex>
        </rollback>
        <modifySql applyToRollback="true" dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

    <changeSet id="2dbba153-649f-4747-9809-8fafa022e251" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateIndex for CYCLEACT_LAST_MODIFIED to table CYCLEACTIVITYCOMPONENT as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="CYCLEACTIVITYCOMPONENT"/>
            <not>
                <indexExists indexName="CYCLEACT_LAST_MODIFIED" tableName="CYCLEACTIVITYCOMPONENT"/>
            </not>
        </preConditions>
        <comment>FUG-5669: CreateIndex CYCLEACT_LAST_MODIFIED on CYCLEACTIVITYCOMPONENT (LAST_MODIFIED_UTC)</comment>
        <createIndex unique="false" tablespace="MW_IDXENT" tableName="CYCLEACTIVITYCOMPONENT" indexName="CYCLEACT_LAST_MODIFIED">
            <column name="LAST_MODIFIED_UTC"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
