<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="43ec5c94-33da-4ae4-a1e4-2781dd5cafbb" author="MineStar" context="Autonomy/Autonomy_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for PLAN_ASSOCIATION as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="PLAN_ASSOCIATION"/>
            </not>
        </preConditions>
        <comment>AHS-8345: CreateTable PLAN_ASSOCIATION</comment>
        <createTable tablespace="MW_ENT" remarks="An association of a machine to a plan" tableName="PLAN_ASSOCIATION">
            <column name="MACHINE_OID" type="BIGINT" remarks="The machine OID, typically a dozer, for this association">
                <constraints nullable="false"/>
            </column>
            <column name="PLAN_OID" type="BIGINT" remarks="The plan for this association">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="MACHINE_OID" constraintName="PLAN_ASSOCIATION_PK" tablespace="MW_IDXENT" tableName="PLAN_ASSOCIATION"/>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
</databaseChangeLog>
