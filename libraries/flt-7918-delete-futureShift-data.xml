<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="c6cbd14b-f648-4daa-9e54-365fab8eeacf" author="MineStar" failOnError="false">
        <preConditions>
            <columnExists tableName="SHIFT" columnName="STARTTIME_UTC"/>
        </preConditions>
        <comment>FLT-7918: Delete Future Shifts on upgrade</comment>
        <sql>DELETE FROM SHIFT WHERE STARTTIME_UTC > CURRENT_TIMESTAMP + 1</sql>
        <rollback>
            <comment>@EmptyRollback</comment>
        </rollback>
    </changeSet>
</databaseChangeLog>
