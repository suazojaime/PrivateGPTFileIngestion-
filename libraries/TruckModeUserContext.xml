<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        ">
          
    <bean id="truckUserModeActionServiceImpl"
          class="minestar.mode.truck.useraction.TruckUserModeActionServiceImpl">
        <constructor-arg name="machineModeService" ref="machineModeServiceImpl"/>
    </bean>

    <bean id="registerTruckUserModeActionService" parent="registrationInstance">
        <constructor-arg value="Truck User Mode Action Service"/>
        <constructor-arg value="minestar.mode.truck.useraction.TruckUserModeActionService"/>
        <constructor-arg ref="truckUserModeActionServiceImpl"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="userModeActionServiceImpl"/>
        <property name="targetMethod" value="addDelegate"/>
        <property name="arguments">
            <list>
                <ref bean="truckUserModeActionServiceImpl"/>
            </list>
        </property>
    </bean>
    
</beans>
