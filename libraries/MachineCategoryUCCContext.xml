<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- service implementation -->
    <bean id="machineCategoryUCCImpl" class="minestar.pitlink.uifacade.machinecategory.impl.MachineCategoryUCCImpl"
          lazy-init="true">
        <property name="mineFleetService" ref="mineFleetServiceImpl"/>
    </bean>

    <!-- support for serviceFactory -->
    <bean id="registerMachineCategoryUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Machine Category UCC"/>
        <constructor-arg value="minestar.pitlink.uifacade.machinecategory.MachineCategoryUCCFacade"/>
        <constructor-arg ref="machineCategoryUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="machineCategoryUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="machineCategoryUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="machineCategoryUCC"/>
        <property name="service" ref="machineCategoryUCCProxy"/>
        <property name="serviceInterface" value="minestar.pitlink.uifacade.machinecategory.MachineCategoryUCCFacade"/>
    </bean>

</beans>
