<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="historical">

    <class
            name="minestar.pitlink.domain.machine.MachineModeChange"
            table="MACHINE_MODE_CHANGE">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A record of machine mode change.</meta>

        <meta attribute="index">
            name=MACHINE_MODE_CHANGE_IDX1
            columns=MACHINE,MODE_CHANGE_TIME_UTC
            tablespace=MW_IDXENT
        </meta>

        <!-- OID -->
        <id name="OID"
            type="java.lang.Long"
            column="OID"
            access="field"
                >
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <!-- MACHINE -->
        <many-to-one name="machine"
                     column="MACHINE"
                     class="minestar.pitlink.domain.machine.MachineReference"
                     not-found="ignore"
                     not-null="true">
            <meta attribute="description">
                A reference to the machine (MSMODEL.MACHINE) whose mode changed.</meta>
        </many-to-one>

        <!-- MODE_CHANGE_TIME_UTC -->
        <property name="modeChangeTime"
                  type="TimestampType"
                  column="MODE_CHANGE_TIME_UTC"
                  not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when the mode change occurred.</meta>
            <meta attribute="utc-description">The UTC timestamp of when the mode change occurred.</meta>
        </property>

        <!-- NEW_MODE -->
        <property name="newMode" column="NEW_MODE" not-null="true" length="254">
            <meta attribute="description">The new machine mode.</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.autonomy.service.mode.MachineMode</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <!-- PREVIOUS_MODE -->
        <property name="previousMode" column="PREVIOUS_MODE" not-null="true" length="254">
            <meta attribute="description">The previous machine mode.</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.autonomy.service.mode.MachineMode</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <!-- PREVIOUS_MODE_TIME_UTC -->
        <property name="previousModeTime"
                  type="TimestampType"
                  column="PREVIOUS_MODE_TIME_UTC"
                  not-null="true">
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when the mode change occurred.</meta>
            <meta attribute="utc-description">The UTC timestamp of when the mode change occurred.</meta>
        </property>

        <!-- INITIATOR -->
        <property
                name="initiator"
                type="java.lang.String"
                column="INITIATOR"
                not-null="true"
                length="254"
                >
            <meta attribute="description">Initiator of the mode change.</meta>
        </property>

        <!-- REASON -->
        <property name="reason" column="REASON" not-null="true" length="254">
            <meta attribute="description">Reason for the mode change.</meta>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">minestar.autonomy.service.mode.ReasonForUpdate</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>

    </class>

</hibernate-mapping>
