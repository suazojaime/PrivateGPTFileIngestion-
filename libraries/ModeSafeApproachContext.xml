<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        ">
        
    <bean id="safeToApproachServiceImpl" 
          class="minestar.autonomy.service.mode.core.DelegatingSafeToApproachService"/>
    
    <bean id="registerSafeToApproachServiceService" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Safe To Approach Service"/>
        <constructor-arg value="minestar.autonomy.service.mode.SafeToApproachService"/>
        <constructor-arg ref="safeToApproachServiceImpl"/>
    </bean>
    
</beans>
