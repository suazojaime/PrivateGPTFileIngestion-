<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        ">

    <bean id="truckModeReservationService"
          class="minestar.mode.truck.reservation.TruckModeReservationService">
        <property name="sharedModeReservationService" ref="sharedModeReservationService"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="modeReservationServiceImpl"/>
        <property name="targetMethod"><value>addDelegate</value></property>
        <property name="arguments">
            <list>
                <ref bean="truckModeReservationService"/>
            </list>
        </property>
    </bean>

    <bean id="truckCheckExpiredReservations"
          class="minestar.mode.shared.reservation.CheckExpiredReservations">
        <constructor-arg name="mineFleetService" ref="mineFleetServiceImpl"/>
        <constructor-arg name="machineModeService" ref="machineModeServiceImpl"/>
        <constructor-arg name="modeEventHandler" ref="modeEventHandler"/>
        <constructor-arg name="machineBasedDelegation" ref="truckModeReservationService"/>
    </bean>

    <bean id="truckCheckForExpiryTimer"
          class="minestar.mode.shared.reservation.CheckForExpiryTimer">
        <property name="checkExpiredReservations" ref="truckCheckExpiredReservations"/>
    </bean>

    <bean id="truckCheckForExpiryStarter"
          init-method="afterPropertiesSet" destroy-method="stop"
          class="minestar.mode.shared.reservation.CheckForExpiryStarter">
        <property name="checkForExpiry" ref="truckCheckForExpiryTimer"/>
    </bean>

</beans>
