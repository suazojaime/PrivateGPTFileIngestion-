<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" schema="model">

    <class name="minestar.mine.domain.minemodel.underground.areamap.AreaMapImpl"
           proxy="minestar.mine.domain.minemodel.underground.areamap.AreaMap"
           table="AREA_MAP"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">AREAMAP</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">
            The details of a section of the mine site map that is exported to a single Command for Underground system.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <cache usage="read-write" region="model"/>

        <id name="OID"
            type="java.lang.Long"
            column="OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name"
                  type="java.lang.String"
                  column="NAME"
                  length="254"
                  unique="true"
                  not-null="true">
            <meta attribute="description">The unique, user-entered identifier for this area map.</meta>
        </property>

        <property name="active"
                  type="java.lang.Boolean"
                  column="IS_ACTIVE"
                  not-null="true">
            <meta attribute="defaultValue">true</meta>
            <meta attribute="description">
                Whether this area map is active or archived.
                (This flag is '1' if it is active and '0' if archived.)
            </meta>
        </property>

        <property name="lastModifiedDate"
                  type="TimestampType"
                  column="LAST_MODIFIED_DATE_UTC"
                  not-null="true">
            <meta attribute="alias" inherit="false">LAST_MODIFIED_TIME</meta>
            <meta attribute="timestamp">true</meta>
            <meta attribute="description">The timestamp of when this area map was last modified by a user.</meta>
            <meta attribute="utc-description">
                The UTC timestamp of when this area map was last modified by a user.
            </meta>
            <meta attribute="view-localtime">true</meta>
        </property>
        <property name="modelUpdateVersion"
                  type="java.lang.Long"
                  column="MODEL_UPDATE_VERSION">
            <meta attribute="description">The is a copy of the system wide version number.</meta>
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="comments"
                  type="java.lang.String"
                  column="COMMENTS">
            <meta attribute="description">
                The comments entered by the user as to why modification were made to this area map.
            </meta>
        </property>

        <list name="points" table="AREA_MAP_POLYGON" lazy="false">
            <meta attribute="index-alias">pointNr</meta>
            <meta attribute="description">
                The coordinates that form the absolute polygon of an area map's boundary.
            </meta>
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>

            <key column="OID" not-null="true"/>
            <index type="java.lang.Integer" column="POINT_NR"/>
            <element type="XYZCoordinate">
                <column name="X_MAGNITUDE"/>
                <column name="Y_MAGNITUDE"/>
                <column name="Z_MAGNITUDE"/>
            </element>
        </list>
    </class>

    <class name="minestar.mine.domain.minemodel.underground.areamap.AreaMapReference"
           table="AREA_MAP"
           mutable="false"
           lazy="false">

        <meta attribute="description">A minimal reference to an area map.</meta>
        <meta attribute="lookupExpr" inherit="false">name</meta>
        <meta attribute="viewproperty-name" inherit="false">
            type=string
            description=The name for the underground area.
            expression=lookupResource.areamap.name.query
        </meta>
        <meta attribute="view-create-order">1</meta>

        <id name="OID"
            type="long"
            column="OID"/>

        <property name="name"
                  type="java.lang.String"
                  column="NAME"
                  unique="true"
                  not-null="true"/>
    </class>

</hibernate-mapping>
