<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.mine.domain.minemodel.SpoilPile"
           table="SPOIL_PILE"
           dynamic-update="true">

        <meta attribute="view-master">true</meta>

        <meta attribute="table">
            tablespace=MW_ENT
            storage.initial=64K
            storage.next=64K
            storage.pctincrease=0
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
            storage.initial=64k
            storage.next=64k
            storage.pctincrease=0
        </meta>

        <meta attribute="description">The definition of a mine model spoil pile</meta>

        <cache usage="read-write" region="model-versioned"/>

        <id name="OID" type="long" column="SPOIL_PILE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <discriminator column="DISCRIMINATOR_ID" not-null="false"/>

        <property name="layerUpdateVersion" type="long" column="LAYER_UPDATE_VERSION" not-null="true">
            <meta attribute="description">The layer update version when the plan was created/modified.</meta>
        </property>

        <many-to-one
                name="planReference"
                column="PLAN_OID"
                not-null="false"
                class="minestar.mine.domain.minemodel.planning.PlanReference"
                >
            <meta attribute="alias">plan</meta>
            <meta attribute="description">The plan the spoil pile was dumped in.</meta>
        </many-to-one>

        <many-to-one
                name="machineReference"
                column="MACHINE_OID"
                not-null="false"
                class="minestar.pitlink.domain.machine.MachineReference"
        >
            <meta attribute="alias">machine</meta>
            <meta attribute="description">The machine that dumped the spoil pile.</meta>
        </many-to-one>

        <many-to-one
                name="materialReference"
                column="MATERIAL_OID"
                not-null="false"
                class="minestar.machinetracking.domain.MaterialReference">
            <meta attribute="alias">material</meta>
            <meta attribute="description">The material that was dumped to make the spoil pile.</meta>
        </many-to-one>

        <many-to-one
                name="zoneReference"
                column="ZONE_OID"
                not-null="false"
                class="minestar.mine.domain.minemodel.ZoneReference"
                >
            <meta attribute="alias">zone</meta>
            <meta attribute="description">The zone created for the spoil pile.</meta>
        </many-to-one>

        <property name="timeDumped"
                  type="TimestampType"
                  column="DUMPED_DATE_UTC">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The time the spoil pile was dumped - utc timestamp.</meta>
            <meta attribute="description">The spoil pile dumped timestamp</meta>
        </property>

        <property name="createdDate"
                  type="TimestampType"
                  column="CREATED_DATE_UTC">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The zone creation utc timestamp.</meta>
            <meta attribute="description">The zone creation timestamp</meta>
        </property>

        <property name="lastUpdatedDate"
                  type="TimestampType"
                  column="LAST_UPDATED_DATE_UTC">
            <meta attribute="view-localtime">true</meta>
            <meta attribute="utc-description">The zone updated utc timestamp.</meta>
            <meta attribute="description">The zone updated timestamp</meta>
        </property>

        <property name="massDumped"
                  column="MASS_DUMPED">
            <meta attribute="description">The mass dumped at the spoil pile.</meta>
            <meta attribute="unitType">mass</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

        <component name="relativePolygon" class="minestar.mine.domain.minemodel.RelativePolygon">

            <meta attribute="description">The Spoil Pile polygon</meta>
            <property name="centroid" type="XYZCoordinate">
                <meta attribute="description">The xyz coordinate for the polygon.</meta>
                <column name="CENTROID_POINT_X"/>
                <column name="CENTROID_POINT_Y"/>
                <column name="CENTROID_POINT_Z"/>
            </property>

            <list name="points" table="SPOIL_PILE_POLYGON_POINT" lazy="false">
                <meta attribute="collection-table">
                    tablespace=MW_ENT
                </meta>
                <meta attribute="collection-primary-key">
                    tablespace=MW_IDXENT
                </meta>
                <meta attribute="index-alias">pointNr</meta>

                <key column="SPOIL_PILE_OID" not-null="true"/>
                <list-index column="POINT_NR"/>
                <element type="XYZCoordinate" not-null="true">
                    <column name="POINT_X" not-null="true"/>
                    <column name="POINT_Y" not-null="true"/>
                    <column name="POINT_Z" not-null="true"/>
                </element>
            </list>
        </component>

    </class>

</hibernate-mapping>
