<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet id="df792394-a2ff-4bd9-bfac-4e3d201a1248" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for PROD_PLAN_HIST_OID of table PROD_PLAN_HIST as index does not exist." onFail="MARK_RAN">
            <indexExists indexName="PROD_PLAN_HIST_OID" tableName="PROD_PLAN_HIST"/>
        </preConditions>
        <comment>MO-6498: DropIndex PROD_PLAN_HIST_OID from PROD_PLAN_HIST (PLAN_OID,UPDATED_TIME_UTC)</comment>
        <dropIndex indexName="PROD_PLAN_HIST_OID" tableName="PROD_PLAN_HIST"/>
        <rollback>
            <createIndex unique="true" tableName="PROD_PLAN_HIST" indexName="PROD_PLAN_HIST_OID">
                <column name="PLAN_OID"/>
                <column name="UPDATED_TIME_UTC"/>
            </createIndex>
        </rollback>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

    <changeSet id="24b104bb-5268-4af3-9e6b-47e36e1211c6" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for VERSION to table PROD_PLAN_HIST as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="PROD_PLAN_HIST"/>
            <not>
                <columnExists tableName="PROD_PLAN_HIST" columnName="VERSION"/>
            </not>
        </preConditions>
        <comment>MO-6498: AddColumn PROD_PLAN_HIST.VERSION</comment>
        <sql>DELETE FROM PROD_PLAN_HIST</sql>
        <addColumn tableName="PROD_PLAN_HIST">
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="PROD_PLAN_HIST" columnName="VERSION"/>
        </rollback>
    </changeSet>

    <changeSet id="83979a4a-aa15-4a69-8d63-861ca7332378" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateUniqueIndex for PROD_PLAN_HIST_VERSION to table PROD_PLAN_HIST as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="PROD_PLAN_HIST"/>
            <not>
                <indexExists indexName="PROD_PLAN_HIST_VERSION" tableName="PROD_PLAN_HIST"/>
            </not>
        </preConditions>
        <comment>MO-6498: CreateUniqueIndex PROD_PLAN_HIST_VERSION on PROD_PLAN_HIST (PLAN_OID,VERSION)</comment>
        <createIndex unique="true" tableName="PROD_PLAN_HIST" indexName="PROD_PLAN_HIST_VERSION">
            <column name="PLAN_OID"/>
            <column name="VERSION"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
