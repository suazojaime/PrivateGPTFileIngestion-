<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- must have this -->
    <bean id="zoneUCCImpl" class="minestar.mine.uifacade.zone.impl.ZoneUCCImpl" lazy-init="true">
        <property name="zoneLayoutService" ref="zoneLayoutServiceImpl"/>
    </bean>


    <!-- support for serviceFactory -->
    <bean id="registerZoneUCCImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Zone UCC"/>
        <constructor-arg value="minestar.mine.uifacade.zone.ZoneUCCFacade"/>
        <constructor-arg ref="zoneUCCImpl"/>
    </bean>


    <!-- support for remoting -->
    <bean id="zoneUCCProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="zoneUCCImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="zoneUCC"/>
        <property name="service" ref="zoneUCCProxy"/>
        <property name="serviceInterface" value="minestar.mine.uifacade.zone.ZoneUCCFacade"/>
    </bean>

</beans>
