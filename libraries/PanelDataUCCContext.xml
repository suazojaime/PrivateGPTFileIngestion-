<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

    <bean id="panelDataServiceImpl" class="minestar.autonomy.service.paneldata.PanelDataServiceImpl"/>

    <!-- support for serviceFactory -->
    <bean id="registerPanelDataServiceImpl" parent="registrationInstance" lazy-init="true">
        <constructor-arg value="Panel Data"/>
        <constructor-arg value="minestar.autonomy.service.paneldata.PanelDataService"/>
        <constructor-arg ref="panelDataServiceImpl"/>
    </bean>

    <!-- support for remoting -->
    <bean id="panelDataServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="targetSource">
            <bean class="org.springframework.aop.target.LazyInitTargetSource">
                <property name="targetBeanName" value="panelDataServiceImpl"/>
            </bean>
        </property>
    </bean>

    <bean parent="rmiServiceExporter">
        <property name="serviceName" value="panelDataService"/>
        <property name="service" ref="panelDataServiceProxy"/>
        <property name="serviceInterface" value="minestar.autonomy.service.paneldata.PanelDataService"/>
    </bean>

</beans>
