<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="model" default-access="field">

    <class name="minestar.health.api.definition.ModuleDef" table="MODULE_DEF">
        <meta attribute="noDatabaseMetadata" inherit="true">true</meta>
        <meta attribute="lookupExpr" inherit="false">lookupResource.mid.description.expr</meta>

        <meta attribute="table">
            tablespace=MW_OBJ
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXOBJ
        </meta>

        <meta attribute="alias" inherit="false">MID_DEF</meta>

        <meta attribute="viewproperty-id" inherit="false">
            type=long
            expression=lookupResource.mid.id.query
        </meta>

        <meta attribute="viewproperty-description" inherit="false">
            type=string
            expression=lookupResource.mid.description.query
        </meta>
        <meta attribute="viewproperty-universeClassName" inherit="false">
            type=string
            expression=lookupResource.null.query
        </meta>
        <meta attribute="viewproperty-family" inherit="false">
            type=string
            expression=lookupResource.null.query
        </meta>

        <cache usage="read-write" region="moduleDef"/>

        <id name="oid" type="long" column="OID">
            <generator class="assigned"/>
        </id>

        <property name="name" column="NAME" length="45"/>

    </class>
</hibernate-mapping>
