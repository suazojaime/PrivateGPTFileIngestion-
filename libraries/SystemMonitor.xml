<?xml version="1.0" encoding="us-ascii" standalone="no"?>
<!DOCTYPE classdefs SYSTEM "metadata.dtd">
<classdefs>
    <classdef name="ServiceType">
        <propertydef name="name">
            <typedef><type code="string" /></typedef>
            <validationdef name="required" type="shared"/>               
        </propertydef>
        <propertygroup name="props">
            <uigroupdef layout="custom" layoutInfo='{columnGroups="[1:5], [3:7]", columnSpec="right:d, 3dlu, d, 7dlu, right:d, 3dlu, d", rowSpec="p, 3dlu, p, 3dlu, p, 9dlu, p, 3dlu, p, 3dlu, p"}'/>
            <propertydef name="serviceType" label="" >
                <typedef><type code="string" choices='["ftp", "http", "http-regexp", "oracle"]'/></typedef>
                <uidef widget="combo" processOnChange="true" layoutInfo='{labelConstraint:"1,3", fieldConstraint:"3,3,5,1"}'/>            
                <defaultvalue>ftp</defaultvalue>
                <validationdef name="required" type="shared"/>
            </propertydef>
            <propertydef name="port">
                <typedef><type code="int" /></typedef>
                <uidef layoutInfo='{labelConstraint:"1,5", fieldConstraint:"3,5,5,1"}'/>
            </propertydef>
            <propertydef name="timeout">
                <typedef><type code="int" /></typedef>
                <uidef layoutInfo='{labelConstraint:"1,3", fieldConstraint:"3,3,5,1"}'/>
            </propertydef>
            <propertydef name="pollPeriod">
                <typedef><type code="int" /></typedef>
                <uidef layoutInfo='{labelConstraint:"1,5", fieldConstraint:"3,5,5,1"}'/>
            </propertydef>
        </propertygroup>
    </classdef>
    
    <classdef name="OracleServiceParameters">
        <propertygroup name="oracleOptions" label="Oracle Options" >
            <uigroupdef mode="box"/>
            <propertydef name="instance">
                <typedef><type code="string" /></typedef>
                <validationdef name="required" type="shared"/>                
            </propertydef>
            <propertydef name="user">
                <typedef><type code="string" /></typedef>
                <validationdef name="required" type="shared"/>                               
            </propertydef>
            <propertydef name="password">                 
                <typedef><type code="string" /></typedef>
                <uidef widget="password"/>
                <validationdef name="required" type="shared"/>                                
            </propertydef>
            <propertydef name="sql">
                <typedef><type code="string" /></typedef>
            </propertydef>            
        </propertygroup>
    </classdef>
    
    <classdef name="AlarmMonitorParameters">
        <propertygroup name="params" label="Alarm Monitor Parameters" >
            <uigroupdef mode="box"/>
            <propertydef name="name">
                <typedef><type code="string" /></typedef>
                <validationdef name="required" type="shared"/>                
            </propertydef>
        </propertygroup>
    </classdef>

    <classdef name="ScriptMonitorParameters">
        <propertygroup name="params" label="Scripted Monitor Parameters" >
            <uigroupdef mode="box"/>
            <propertydef name="scriptUrl">
                <typedef><type code="string" /></typedef>
                <validationdef name="required" type="shared"/>
            </propertydef>
        </propertygroup>
    </classdef>

    <classdef name="ScriptServiceParameters">
        <propertygroup name="params" label="Scripted Service Parameters" >
            <uigroupdef mode="box"/>
            <propertydef name="scriptUrl">
                <typedef><type code="string" /></typedef>
                <validationdef name="required" type="shared"/>
            </propertydef>
        </propertygroup>
    </classdef>

</classdefs>
