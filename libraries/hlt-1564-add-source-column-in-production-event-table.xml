<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="4a852652-3e92-43f7-ac6e-d12be83d33ea" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored AddColumn for SOURCE to table PRODUCTION_EVENT as table does not exist or column already exists." onFail="MARK_RAN">
            <tableExists tableName="PRODUCTION_EVENT"/>
            <not>
                <columnExists tableName="PRODUCTION_EVENT" columnName="SOURCE"/>
            </not>
        </preConditions>
        <comment>HLT-1564 : AddColumn PRODUCTION_EVENT.SOURCE</comment>
        <addColumn tableName="PRODUCTION_EVENT">
            <column name="SOURCE" type="VARCHAR(120)" remarks="Source of the message."/>
        </addColumn>
    </changeSet>

    <changeSet id="c5628761-f5fa-4dd0-85ce-34217ef070c8" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropIndex for PRODUCTION_EVENT_UNIQ of table PRODUCTION_EVENT as index does not exist." onFail="MARK_RAN">
            <indexExists indexName="PRODUCTION_EVENT_UNIQ" tableName="PRODUCTION_EVENT"/>
        </preConditions>
        <comment>HLT-1623: DropIndex PRODUCTION_EVENT_UNIQ from PRODUCTION_EVENT (MACHINE_OID,CLASS_ID,SOURCE_TIMESTAMP_UTC,NAME,STATUS)</comment>
        <dropIndex tableName="PRODUCTION_EVENT" indexName="PRODUCTION_EVENT_UNIQ"/>
        <rollback>
            <createIndex unique="true" tablespace="MW_IDXENT" tableName="PRODUCTION_EVENT" indexName="PRODUCTION_EVENT_UNIQ">
                <column name="MACHINE_OID"/>
                <column name="CLASS_ID"/>
                <column name="SOURCE_TIMESTAMP_UTC"/>
                <column name="NAME"/>
                <column name="STATUS"/>
            </createIndex>
        </rollback>
        <modifySql applyToRollback="true" dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>

    <changeSet id="1fb669ad-809b-4104-ad6e-8996be067aa2" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored CreateUniqueFilteredIndex for PRODUCTION_EVENT_UNIQ to table PRODUCTION_EVENT as (1) table does not exist, or (2) index already exists." onFail="MARK_RAN">
            <tableExists tableName="PRODUCTION_EVENT"/>
            <not>
                <indexExists indexName="PRODUCTION_EVENT_UNIQ" tableName="PRODUCTION_EVENT"/>
            </not>
        </preConditions>
        <comment>HLT-1623: CreateIndex PRODUCTION_EVENT_UNIQ on PRODUCTION_EVENT (MACHINE_OID,CLASS_ID,SOURCE_TIMESTAMP_UTC,NAME,STATUS,SOURCE)</comment>
        <createIndex unique="true" tablespace="MW_IDXENT" tableName="PRODUCTION_EVENT" indexName="PRODUCTION_EVENT_UNIQ">
            <column name="MACHINE_OID"/>
            <column name="CLASS_ID"/>
            <column name="SOURCE_TIMESTAMP_UTC"/>
            <column name="NAME"/>
            <column name="STATUS"/>
            <column name="SOURCE"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>


</databaseChangeLog>
