<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class
        name="minestar.production.domain.fuel.FuelAndLubeType"
        table="FUELANDLUBETYPE">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=FUELANDLUBETYPE_ID
            unique=true
            columns=ID
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="index">
            name=FUELANDLUBETYPE_NAME
            unique=true
            columns=NAME
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="description">Types of fuel and lubricants.</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="FUELANDLUBETYPE_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="id" type="int" column="ID" not-null="true">
            <meta attribute="universe-type-measure">false</meta>
            <meta attribute="export-marshall" inherit="false">false</meta>
        </property>

        <property name="name" type="string" column="NAME" length="254" not-null="true"/>

        <property name="description" type="string" column="DESCRIPTION" length="254"/>

        <property name="category" type="string" column="CATEGORY"/>

        <property name="unitType" type="string" column="UNIT_TYPE"/>

        <property name="fieldInputUnitName" type="string" column="FIELDINPUTUNIT">
            <meta attribute="alias" inherit="false">fieldInputUnit</meta>
        </property>

        <property name="displayOrder" type="int" column="DISPLAY_ORDER" not-null="true"/>

        <property name="layerUpdateVersion" type="long">
            <meta attribute="description">The layer update version when the fuel or lube type was created/modified.</meta>
            <column name="LAYER_UPDATE_VERSION" not-null="true" default="0"/>
        </property>

    </class>

    <!-- A lightweight reference to a Material -->
    <class name="minestar.production.domain.fuel.FuelAndLubeTypeReference" table="FUELANDLUBETYPE" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">FUELANDLUBETYPE_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a FuelAndLubeType.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="FUELANDLUBETYPE_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
        <property name="id" type="int" column="ID" not-null="true"/>
    </class>

</hibernate-mapping>
