<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="minestar.mine.domain.material" schema="historical">

    <class name="MaterialCriteriaDetail" table="MATERIAL_CRITERIA_DETAIL">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>
        <meta attribute="description">A material criteria detail record</meta>

        <id
                name="OID"
                type="java.lang.Long"
                column="OID"
                >
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <many-to-one
                class="minestar.mine.domain.material.BlendDetail"
                name="blendDetail"
                column="BLEND_DETAIL_OID"
                not-null="true"/>
        <property
                name="materialOID"
                type="java.lang.Long"
                column="MATERIAL_OID"
                not-null="false"
        >
            <meta attribute="description">The material OID</meta>
        </property>
        <property
                name="materialName"
                type="java.lang.String"
                column="MATERIAL_NAME"
                length="1016"
                not-null="false"
                >
            <meta attribute="description">The material name</meta>
        </property>
        <property
                name="minimumValue"
                column="MINIMUM_VALUE"
                not-null="false"
                >
            <meta attribute="unitType">ratio</meta>
            <meta attribute="description">The minimum value of the material criteria</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>
        <property
                name="maximumValue"
                column="MAXIMUM_VALUE"
                not-null="false"
                >
            <meta attribute="unitType">ratio</meta>
            <meta attribute="description">The maximum value of the material criteria</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>
        <property
                name="lowerLimit"
                column="LOWER_LIMIT"
                not-null="false"
                >
            <meta attribute="unitType">ratio</meta>
            <meta attribute="description">The lower limit of the material criteria</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>
        <property
                name="upperLimit"
                column="UPPER_LIMIT"
                not-null="false"
                >
            <meta attribute="unitType">ratio</meta>
            <meta attribute="description">The upper limit value of the material criteria</meta>
            <type name="quantity">
                <param name="unitType">ratio</param>
            </type>
        </property>
        <property
                name="materialColor"
                type="java.lang.String"
                column="MATERIAL_COLOR"
                length="254"
        >
            <meta attribute="description">The colour associated with the material.</meta>
        </property>



    </class>
</hibernate-mapping>
