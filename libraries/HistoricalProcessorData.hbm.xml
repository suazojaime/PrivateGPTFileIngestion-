<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="historical">

    <class name="minestar.production.domain.underground.processor.HistoricalProcessorDataImpl"
           proxy="minestar.production.domain.underground.processor.HistoricalProcessorData"
           table="HISTORICAL_PROCESSOR_DATA"
           dynamic-update="true">

        <meta attribute="alias" inherit="false">HISTORICALPROCESSORDATA</meta>
        <meta attribute="view-master">true</meta>
        <meta attribute="description">A historical record of what the dumpped amount of a processor was at the end of a shift.
        </meta>
        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <id name="OID"
            type="java.lang.Long"
            column="CHUTE_PROCESSOR_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <properties name="UK_" unique="true">
            <!-- Uniqueness constraint is over processor and shift field -->

            <many-to-one name="processor"
                         class="minestar.pitlink.domain.machine.MachineReference"
                         column="PROCESSOR"
                         not-null="true">
                <meta attribute="description">
                    A reference to the chute (MSMODEL.MACHINE) that this historical record applies to.
                </meta>
            </many-to-one>

            <property name="shiftOID"
                      type="java.lang.Long"
                      column="SHIFT"
                      not-null="true">
                <meta attribute="description">
                    A reference to the shift (MSMODEL.SHIFT) that this historical record applies to.
                </meta>
            </property>
        </properties>

        <property name="dumpedAmount"
                  column="DUMPED_AMOUNT">
            <meta attribute="alias">DUMPED_AMOUNT</meta>
            <meta attribute="description">The amount of ore that the processor contained at the end of the shift.</meta>
            <type name="quantity">
                <param name="unitType">mass</param>
            </type>
        </property>

    </class>

</hibernate-mapping>
