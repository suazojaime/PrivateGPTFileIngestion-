<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-lazy="false" schema="model">

    <class name="minestar.production.domain.DelayGroup" table="DELAY_GROUP">

        <meta attribute="table">
            tablespace=MW_ENT
        </meta>
        <meta attribute="primary-key">
            tablespace=MW_IDXENT
        </meta>

        <meta attribute="index">
            name=DELAY_GROUP_NAME
            unique=false
            columns=NAME
            tablespace=MW_IDXENT
        </meta>


        <meta attribute="alias" inherit="false">DelayGroup</meta>
        <meta attribute="description">Groups delays.</meta>
        <meta attribute="ignore-self-join">parent</meta>

        <cache usage="read-write" region="model"/>

        <id name="OID" type="long" column="DELAY_GROUP_OID">
            <generator class="com.mincom.env.base.persistence.IDGenerator"/>
        </id>

        <property name="name" type="string" column="NAME" length="254" not-null="true">
            <meta attribute="description">The name of the delay group.</meta>
        </property>

        <property name="externalRef" type="string" column="EXTERNALREF" length="254">
            <meta attribute="description">The External System Reference</meta>
        </property>
        
        <property name="externalDesc" type="string" column="EXTERNALDESC" length="254">
            <meta attribute="description">The External System Description</meta>
        </property>

        <list name="subGroups" table="DELAY_GROUP_SUBDIR" fetch="select">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="description">The subdirectories for this delay group.</meta>
            <meta attribute="alias" inherit="false">delayGroups</meta>
            <meta attribute="view-reference">minestar.production.domain.DelayGroup</meta>

            <cache usage="read-write" region="model"/>

            <key column="OID" not-null="true"/>
            <list-index column="IDX"/>
            <many-to-many class="minestar.production.domain.DelayGroupReference" column="DELAY_GROUP_OID" not-found="ignore"/>
        </list>

        <list name="elements" table="DELAY_GROUP_ELEMENT" fetch="select">
            <meta attribute="collection-table">
                tablespace=MW_ENT
            </meta>
            <meta attribute="collection-primary-key">
                tablespace=MW_IDXENT
            </meta>
            <meta attribute="alias" inherit="false">delayTypes</meta>
            <meta attribute="description">The elements for this delay group.</meta>
            <meta attribute="view-reference">minestar.production.domain.DelayClass</meta>

            <cache usage="read-write" region="model"/>

            <key column="OID" not-null="true"/>
            <list-index column="IDX"/>
            <many-to-many class="minestar.production.domain.DelayClassReference" column="DELAY_CLASS_OID" not-found="ignore"/>
        </list>
    </class>

    <!-- A lightweight reference to a DelayGroup -->
    <class name="minestar.production.domain.DelayGroupReference" table="DELAY_GROUP" mutable="false" lazy="false">

        <meta attribute="alias" inherit="false">DELAY_GROUP_REFERENCE</meta>
        <meta attribute="description">A minimal reference to a DelayGroup.</meta>
        <meta attribute="view-create-order">1</meta>
        <meta attribute="view-master">true</meta>

        <cache usage="read-only" region="model"/>

        <id name="OID" type="long" column="DELAY_GROUP_OID"/>
        <property name="name" type="string" column="NAME" length="254" not-null="true"/>
    </class>
    
</hibernate-mapping>
