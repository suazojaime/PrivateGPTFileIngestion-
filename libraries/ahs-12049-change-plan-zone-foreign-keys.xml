<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="7a277088-1292-44b2-9a0a-d217b72f0ebc" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored DropForeignKeyConstraint for PLAN_GROUP_CLEANUP_ZONE_FK of table PLAN_GROUP as foreignKey does not exist."
                onFail="MARK_RAN">
            <foreignKeyConstraintExists foreignKeyTableName="PLAN_GROUP" foreignKeyName="PLAN_GROUP_CLEANUP_ZONE_FK"/>
        </preConditions>
        <comment>AHS-12049: DropForeignKeyConstraint PLAN_GROUP_CLEANUP_ZONE_FK from PLAN_GROUP (CLEANUP_ZONE)</comment>
        <dropForeignKeyConstraint baseTableName="PLAN_GROUP" constraintName="PLAN_GROUP_CLEANUP_ZONE_FK"/>
        <rollback>
            <addForeignKeyConstraint baseTableName="PLAN_GROUP" baseColumnNames="CLEANUP_ZONE"
                                     constraintName="PLAN_GROUP_CLEANUP_ZONE_FK" referencedTableName="ZONE"
                                     referencedColumnNames="ZONE_OID" onDelete="NO ACTION"/>
        </rollback>
    </changeSet>

    <changeSet id="6b1a820d-092e-4ba7-a142-a145ce0136b7" author="MineStar" failOnError="false">
        <preConditions
                onFailMessage="Ignored DropForeignKeyConstraint for PLAN_MODEL_ASSOCIATED_ZONE_FK of table PLAN_MODEL as foreignKey does not exist."
                onFail="MARK_RAN">
            <foreignKeyConstraintExists foreignKeyTableName="PLAN_MODEL"
                                        foreignKeyName="PLAN_MODEL_ASSOCIATED_ZONE_FK"/>
        </preConditions>
        <comment>AHS-12049: DropForeignKeyConstraint PLAN_MODEL_ASSOCIATED_ZONE_FK from PLAN_MODEL (ASSOCIATED_ZONE)
        </comment>
        <dropForeignKeyConstraint baseTableName="PLAN_MODEL" constraintName="PLAN_MODEL_ASSOCIATED_ZONE_FK"/>
        <rollback>
            <addForeignKeyConstraint baseTableName="PLAN_MODEL" baseColumnNames="ASSOCIATED_ZONE"
                                     constraintName="PLAN_MODEL_ASSOCIATED_ZONE_FK" referencedTableName="ZONE"
                                     referencedColumnNames="ZONE_OID" onDelete="NO ACTION"/>
        </rollback>
    </changeSet>

    <changeSet id="0e429c5c-e52e-4df3-be51-0ad23d27939e" author="MineStar"
               context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddForeignKeyConstraint for PLAN_GROUP_CLEANUP_ZONE_FK to table PLAN_GROUP as (1) the source or referenced column does not exist, or (2) the foreignKey already exists."
                onFail="MARK_RAN">
            <columnExists tableName="PLAN_GROUP" columnName="CLEANUP_ZONE"/>
            <columnExists tableName="ZONE" columnName="ZONE_OID"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="PLAN_GROUP"
                                            foreignKeyName="PLAN_GROUP_CLEANUP_ZONE_FK"/>
            </not>
        </preConditions>
        <comment>AHS-12049: AddForeignKeyConstraint PLAN_GROUP_CLEANUP_ZONE_FK to PLAN_GROUP (CLEANUP_ZONE)</comment>
        <sql>UPDATE PLAN_GROUP SET CLEANUP_ZONE = NULL
             WHERE CLEANUP_ZONE IS NOT NULL
             AND NOT EXISTS (SELECT 'x' FROM ZONE WHERE ZONE.ZONE_OID = PLAN_GROUP.CLEANUP_ZONE)
        </sql>
        <addForeignKeyConstraint baseTableName="PLAN_GROUP" baseColumnNames="CLEANUP_ZONE"
                                 constraintName="PLAN_GROUP_CLEANUP_ZONE_FK" referencedTableName="ZONE"
                                 referencedColumnNames="ZONE_OID" onDelete="SET NULL"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="PLAN_GROUP" constraintName="PLAN_GROUP_CLEANUP_ZONE_FK"/>
        </rollback>
    </changeSet>

    <changeSet id="b0e980d2-815c-4ff9-bed1-99f8d9d9ee48" author="MineStar"
               context="Machine_Tracking/Machine_Tracking_Management" failOnError="false">
        <preConditions
                onFailMessage="Ignored AddForeignKeyConstraint for PLAN_MODEL_ASSOCIATED_ZONE_FK to table PLAN_MODEL as (1) the source or referenced column does not exist, or (2) the foreignKey already exists."
                onFail="MARK_RAN">
            <columnExists tableName="PLAN_MODEL" columnName="ASSOCIATED_ZONE"/>
            <columnExists tableName="ZONE" columnName="ZONE_OID"/>
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="PLAN_MODEL"
                                            foreignKeyName="PLAN_MODEL_ASSOCIATED_ZONE_FK"/>
            </not>
        </preConditions>
        <comment>AHS-12049: AddForeignKeyConstraint PLAN_MODEL_ASSOCIATED_ZONE_FK to PLAN_MODEL (ASSOCIATED_ZONE)</comment>
        <sql>UPDATE PLAN_MODEL SET ASSOCIATED_ZONE = NULL
             WHERE ASSOCIATED_ZONE IS NOT NULL
             AND NOT EXISTS (SELECT 'x' FROM ZONE WHERE ZONE.ZONE_OID = PLAN_MODEL.ASSOCIATED_ZONE)
        </sql>
        <addForeignKeyConstraint baseTableName="PLAN_MODEL" baseColumnNames="ASSOCIATED_ZONE"
                                 constraintName="PLAN_MODEL_ASSOCIATED_ZONE_FK" referencedTableName="ZONE"
                                 referencedColumnNames="ZONE_OID" onDelete="SET NULL"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="PLAN_MODEL" constraintName="PLAN_MODEL_ASSOCIATED_ZONE_FK"/>
        </rollback>
    </changeSet>
    
</databaseChangeLog>

