    <changeSet id="bd149fb0-89cb-45a5-be61-8631df604dd0" author="MineStar" context="Pit_Link/Pit_Link_Management" failOnError="false">
        <preConditions onFailMessage="Ignored CreateTable for WDS_SPRAY_HEADS as table already exists." onFail="MARK_RAN">
            <not>
                <tableExists tableName="WDS_SPRAY_HEADS"/>
            </not>
        </preConditions>
        <comment>MO-537: CreateTable WDS_SPRAY_HEADS</comment>
        <createTable remarks="A list of assigned watering spray heads." tableName="WDS_SPRAY_HEADS">
            <column name="WDS_SPRAY_HEAD_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="MACHINE_CLASS_OID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="DISPLAY_ID" type="VARCHAR(255)" remarks="The spray head UI display identifier">
                <constraints nullable="false"/>
            </column>
            <column name="SPRAY_HEAD_ID" type="INT" remarks="The spray head identifier">
                <constraints nullable="false"/>
            </column>
            <column name="SPRAY_HEAD_NAME" type="VARCHAR(255)" remarks="The spray head descriptive name"/>
            <column name="START_X_OFFSET" type="DOUBLE" remarks="The start x-coordinate offset from the centre of rear axle"/>
            <column name="START_Y_OFFSET" type="DOUBLE" remarks="The start y-coordinate offset from the centre of rear axle"/>
            <column name="END_X_OFFSET" type="DOUBLE" remarks="The end x-coordinate offset from the centre of rear axle"/>
            <column name="END_Y_OFFSET" type="DOUBLE" remarks="The end y-coordinate offset from the centre of rear axle"/>
        </createTable>
        <addPrimaryKey columnNames="WDS_SPRAY_HEAD_OID" constraintName="WDS_SPRAY_HEADS_PK" tableName="WDS_SPRAY_HEADS"/>
        <createIndex unique="true" tablespace="MW_IDXENT" indexName="MACHINECLASS_SPRAYHEADID_UQ" tableName="WDS_SPRAY_HEADS">
            <column name="MACHINE_CLASS_OID"/>
            <column name="SPRAY_HEAD_ID"/>
        </createIndex>
        <modifySql dbms="mssql,h2,postgresql" applyToRollback="true">
            <regExpReplace replace="( USING INDEX)? (ON|TABLESPACE) MW_[A-Z]+" with=""/>
        </modifySql>
    </changeSet>
