    <changeSet id="c045a982-2eec-4095-9f90-41cda3c81a59" author="MineStar" failOnError="false">
        <preConditions onFailMessage="Ignored DropTable for WDS_SPRAY_HEAD as table does not exist." onFail="MARK_RAN">
            <tableExists tableName="WDS_SPRAY_HEAD"/>
        </preConditions>
        <comment>MO-537: DropTable WDS_SPRAY_HEAD</comment>
        <dropTable tableName="WDS_SPRAY_HEAD"/>
        <rollback>
            <createTable tableName="WDS_SPRAY_HEAD">
                <column name="OID" type="BIGINT">
                    <constraints nullable="false"/>
                </column>
                <column name="SPRAY_HEAD_ID" type="INT">
                    <constraints nullable="false"/>
                </column>
                <column name="SPRAY_HEAD_NAME" type="VARCHAR(255)"/>
                <column name="START_X_OFFSET" type="DOUBLE"/>
                <column name="START_Y_OFFSET" type="DOUBLE"/>
                <column name="END_X_OFFSET" type="DOUBLE"/>
                <column name="END_Y_OFFSET" type="DOUBLE"/>
                <column name="DISPLAY_ID" type="VARCHAR(255)">
                    <constraints nullable="false"/>
                </column>
            </createTable>
            <addForeignKeyConstraint baseTableName="WDS_SPRAY_HEAD" baseColumnNames="OID" constraintName="WDS_SPRAY_HEAD_OID_FK" referencedTableName="MACHINECLASS" referencedColumnNames="MACHINECLASS_OID" onDelete="NO ACTION"/>
        </rollback>
    </changeSet>
